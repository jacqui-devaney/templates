<jpml id="ARTICLE-future_of_everything_template">
	<style src="GLOBAL-stylesheet.ejs"/>
  <style src="GRID-stylesheet.ejs"/>
  <style src="ADVERTISING-stylesheet.ejs" />
  <style src="ADVERTISING-fallback-stylesheet.ejs" />
  <style src="FUTURE-stylesheet.ejs" />

  <style>{
    #page_details: {
      display: {if: =scale.phone, then: none},
      options: {
          tintTitle: true
      }
    },
		#view: {if: =scale.phone, then: {
      width:=view.width,
      height:{$multiply: [2, =view.height]}
    }, else: {
      top:0,
      bottom:24
    }}
  }</style>
  <style> {
		$switch: [
			{if: =scale.phone, then: {
        #view: {
          options: {
            background_color: =color.background,
            indent: true,
            module: {if: =page.section, equals: "POLITICS", then: url(ARTICLE-election-front-phone_module.xml), else: url(ARTICLE-continuation-phone_module.xml)}
          }
        }
			}},
            {
        #view: {
          options: {
            background_color: =color.background,
            indent: true,
            module: {if: =page.number, equals: 0, then: url(ARTICLE-front_module.xml), else: url(ARTICLE-continuation_module.xml)}
          }
        }
        }]
    }</style>
  <box id="fullpage_container">
      <box id="fullpage_ad" class="ad-fullpage" embed="fullpagead" />
  </box>
  <box id="page_details" embed="pagedescription" />
  <box id="view" embed="article" class="landscape-columns-16 portrait-columns-12 xposition-1 maude" />
</jpml>
