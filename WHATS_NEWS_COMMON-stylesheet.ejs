{
	jpml: {
		image-scale: 1,
		text-scale: 1,
		pixels-per-point-x: 1,
		pixels-per-point-y: 1,
		min-height: 0,
		max-height: 10000,
		background-color: { if: =app.idiom, equals: "phone", then: #fff, else: #e8e0ca },
		padding:[0, 9]
	},
	.header: {
		if-any: [
			{ if: =app.idiom, equals: "phone" }
		], then: {
			display: none
		}, else: {
			font-size: 18,
			font-name: "DJ5EscrowComp-SemiboldItalic",
			text-align: center,
			padding: [2, 0, 3, 0],
			border-width:[0, 0, 1, 0],
			border-color:#9a9487
		}
	},
	strong: {
		font-name: "DJ5Exchange-Bold"
	},
	p: {
		font-name: "DJ5Exchange-Medium",
		hyphens:auto,
		font-size: 13,
		line-height:17,
		break-inside: avoid-column,
		text-align:left,
		padding: [12, 6, 0, 6]
	},
	.item-title: {
		font-name: "DJ5Exchange-Bold",
		font-size: 12,
		line-height:16,
		hyphens:auto
	},
	.item-after-description: {
		content: "\u00a0\u00bb"
	},
	.item-paid: {
		if: =issue.locked,
		then: {
			font-name: DJ5Utility-Regular,
			font-size:12,
			content: "\u00a0K",
			padding: [0, 0, 0, 2],
			color:#948464
		},
		else: {

		}
	}
}
