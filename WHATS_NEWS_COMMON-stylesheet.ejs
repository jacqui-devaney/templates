{
	jpml: {
		image-scale: 1,
		text-scale: 1,
		pixels-per-point-x: 1,
		pixels-per-point-y: 1,
		min-height: 0,
		max-height: 10000,
		background-color: #e7e2d8
	},
	.header: {
		if-any: [
			{ if: =issue.edition, equals: japan },
			{ if: =issue.edition, equals: korea }
		], then: {
			display: none
		}, else: {
			font-size: 18,
			font-name: "DJ5EscrowCond-SemiboldItalic",
			text-align: center,
			padding: [8, 0, 0, 0]
		}
	},
	.stars: {
		if-any: [
			{ if: =issue.edition, equals: japan },
			{ if: =issue.edition, equals: korea }
		], then: {
			display: none
		}, else: {
			content: "*\u00a0\u00a0*\u00a0\u00a0*"
		}
	},
	.main: {
		column-width: 250,
		column-height: balance
	},
	p: {
		font-name: {
			$switch: [
				{ if: =issue.edition, equals: japan, then: "HiraKakuProN-W3" },
				{ if: =issue.edition, equals: korea, then: "AppleSDGothicNeo-Medium" },
				"DJ5Exchange-Medium"
			]
		},
		font-size: 14,
		break-inside: avoid-column,
		padding: [8]
	},
	.item-title: {
		font-name: {
			$switch: [
				{ if: =issue.edition, equals: japan, then: "HiraKakuProN-W6" },
				{ if: =issue.edition, equals: korea, then: "AppleSDGothicNeo-Bold" },
				"DJ5Exchange-Bold"
			]
		},
		font-size: 14
	},
	.item-before-description: {
		font-size: 12,
		content: "\u25a0\u00a0"
	},
	.item-after-description: {
		content: "\u00a0\u00bb"
	},
	.item-paid: {
		if: =issue.locked,
		then: {
			font-name: DJ5Utility-Regular,
			font-size:16,
			content: "\u00a0K",
			padding: [0, 0, 0, 2],
			color:#948464
		},
		else: {

		}
	}
}
