{
	strong: {
		font-name:{if: =intent.article, then:SharpSansNo1-Bold}
	},
	em: {
		font-name:{if: =intent.article, then:SharpSansNo1-MediumItalic}
	},
	cite: {
		font-name:{if: =intent.article, then:SharpSansNo1-BookItalic}
	},
	.future_headline: {
		font-name: "SharpSansNo1-Medium",
		font-size: 20,
		line-height: 25,
		color: #10427E,
		padding: [0, 0, 5, 0]
	},
	.future_summary: {
		font-name: "Whitney-Book",
		font-size: { if: =scale.phone, then: 16, else: 14 },
		line-height: { if: =scale.phone, then: 25, else: 18 },
		color: #222221
	},

	.body-last-p-mark: {
			display: none
	},

	.article_body: {
		text-align:left,
		text-indent:0
	},

	h2: {
		text-indent:0
	},

	h3: {
		text-indent: 0,
		text-align: center
	},
	
	p: {
		padding:[0,0,20,0]
	},

	#body-first-p: {
		padding:[0,0,20,0]
	},

	#body-last-p: {
		padding: [0, 0, 8, 0]
	},

	.future-divider-p: {
		padding: [0, 0, 0, 0],
		border-width: [1, 0, 0, 0],
		layout-grid-line: 0,
		layout-grid-line-offset: 0,
		background-color: transparent,
		border-color: #D8D8D8
	},

	.future-divider-mark: {
		font-size: 1,
		line-height: 1,
		color: transparent,
		content: "divider"
	},

	.future-footnotes: {
		font-name: "Whitney-Medium",
		font-size: { if: =scale.phone, then: {$multiply: [14, =view.zoomlevel]}, else: {$multiply: [11, =view.zoomlevel]} },
		line-height: { if: =scale.phone, then: {$multiply: [18, =view.zoomlevel]}, else: {$multiply: [15, =view.zoomlevel]} },
		layout-grid-line: 0,
		layout-grid-line-offset: 0,
		color: #898B8E
	},

	.future-related-content: {
		layout-grid-line: 0,
		layout-grid-line-offset: 0,
		font-name: "Whitney-Medium",
		color: #222222
	},

	.future-questions: {
		layout-grid-line: 0,
		layout-grid-line-offset: 0,
		font-name: "Whitney-Medium",
		color: #222222
	}
}
