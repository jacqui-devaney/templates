<jpml id="ARTICLE-continuation-narrow-ads_module">
	<style src="GRID-stylesheet.ejs" />
	<style src="ADVERTISING-stylesheet.ejs" />
	<style src="ARTICLE-stylesheet.ejs" />
	<style>{
		$join:[
		{jpml: {
			padding:[0]
		}},
		{.article_body: { 
            column-count: {if: =landscape, then:3, else:2},
            column-gutter: 12,
			layout-grid-line: {$multiply: [24, =view.zoomlevel]},
			padding:[0, 10, 0, 0]
        }},
		{#body_continuation: {
			content: from-flow(article_body),
			flow: article_body
		}},
		{#article_ad: {
			top:0,
			height:704,
			left:768
		}},
		{if: =portrait, then: {
			#media: {
				top: 0,
				left:{if: =media.width, less-than: 360, then: 0, else: {if: =media.width, more-than: 484, then: 0, else: 124}},
				width: {$switch: [
					{if: =media.width, less-than: 360, then: 236},
					{if: =media.width, more-than: 484, then: 484},
					360
				]},
				height: {$min: [{$max: [{$switch: [
					{if: =media.width, less-than: 360, then: {$divide: [236, =media.aspect]}},
					{if: =media.width, more-than: 484, then: {$divide: [484, =media.aspect]}},
					{$divide: [360, =media.aspect]}
				]}, {$multiply: [.25, =view.height]}]}, {$multiply: [.75, =view.height]}]},
				options: {
					id: =page.number
				}
			}
        }, else: {
			#media: {
				top: 0,
				left:{if: =media.width, less-than: 360, then: 248, else: {if: =media.width, more-than: 484, then: 248, else: 372}},
				width: {$switch: [
					{if: =media.width, less-than: 360, then: 236},
					{if: =media.width, more-than: 484, then: 484},
					360
				]},
				height: {$min: [{$max: [{$switch: [
					{if: =media.width, less-than: 360, then: {$divide: [236, =media.aspect]}},
					{if: =media.width, more-than: 484, then: {$divide: [484, =media.aspect]}},
					{$divide: [360, =media.aspect]}
				]}, {$multiply: [.25, =view.height]}]}, {$multiply: [.75, =view.height]}]},
				options: {
					id: =page.number
				}
			}
        }}
		]
    }</style>
	
	<panel id="body_container">
		<box id="media" embed="media" />
        <box id="article_advertisement" class="column2">
			<box id="skyscraper_ad" class="ad-skyscraper" embed="advertisement" />
		</box>
		<panel class="article_body" id="body_continuation" embed="body" />
    </panel>
	
</jpml>
