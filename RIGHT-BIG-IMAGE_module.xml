<jpml id="RIGHT-BIG-IMAGE_module">
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="PHONE-MODULES-stylesheet.ejs" />
	<style>{
        $join: [
			{jpml: {
				padding:[0, 0, 8, 8]
			}},
			
			{#headline: {padding:[2, 0, 0, 0]}
			},
			{#body: { 
	            column-count: {if: =options.two_columns, then:2, else:1},
	            column-gutter: 15
	        }},
			{#image_wrapper: { 
				right:0,
				top:0,
				bottom:0,
				position:relative,
				pixels-per-point-x:1,
				pixels-per-point-y:1,
				width: {if: =options.F_image, then:571, else:359}
			}},
			
			{#image_container: { 
				padding: [0, 8, 12, 15 ],
				display: {if: =options.hide_image, then:none, else:inherit}
			}},
			{image:{
					options: {
						$switch: [
							{ if: =options.F_image, then: {match: { width:571, height:226, min-height:226 } } },
							{ if: =options.E_image, then: {match: { width: 359, height:239, min-height:239 } } }

						]
					}
			}},
			{#headline: { padding:[0, 0, 12, 0] }},
			{.byline: {display: {$switch: [
				{if: =scale.small, then:{if: =options.byline, then:inherit, else:none}},
				{if: =scale.large, then: {if: =options.no_byline, then:none, else:inherit}}
			]}}},
			{#body-first-p: {text-indent: {$switch: [
				{if: =scale.small, then:{if: =options.no_indent, then:0, else:inherit}},
				{if: =scale.large, then: {if: =options.no_indent, then:0, else:inherit}}
			]}}}
				
		]	
		
		}</style>
		<style>{
			if: =scale.phone, then: {

				#wrapper: {
					border-width:[0],
					padding: [{if: =options.top_align, then: 10, else:0}, 0, 0, 0],
					border-color:#d6d6d6
				},
				#small_image_wrapper: { 
					anchor-x:right,
					position:relative,
					width: 76,
					padding:[0, 10, 6, 15],
					pixels-per-point-x:1,
					pixels-per-point-y:1,
					image-scale:1,
					display:{if: =options.no_image, then: none, else:inherit}
				},
				image: { 
					height: 76,
					display:inherit,
					padding: [0],
	                options:{},
					image-scale: 1

				},
				#body_container: {
					padding:[0, 0, 0, 0]
				},
				.byline: {
					display:none
				},
				#headline: {
					padding:[0]
				},
				jpml: {
					border-width: [{if: =options.top_border, then:1, else:0}, 0, {if: =options.no_border, then:0, else:1}, 0],
					border-color: #d6d6d6,
					anchor-y:middle,
					padding:[0, 8]
				},
				.hidden_phone: {
					display:none
				}

			}, else:{}

		}</style>
		<box id="wrapper">
			<box id="small_image_wrapper" class="hidden_tablet">
				<image embed="summary-image" />
			</box>
			<panel id="headline">
				<p class="module_headline"><span embed="headline" /><mark class="key" /></p>
			</panel> 
			<box id="image_wrapper" class="hidden_phone">
				<box id="image_container" class="hidden_phone">
				    <image embed="summary-image"  class="hidden_phone" />
				</box>
			</box>
			<panel id="body">
				<p class="byline" embed="byline"/>
				<panel class="body" embed="body"/>
			</panel>
		</box>
</jpml>
