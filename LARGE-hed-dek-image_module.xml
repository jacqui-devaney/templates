<jpml id="LARGE-hed-dek-image_module">
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="PHONE-MODULES-stylesheet.ejs" />
	<style>{
		image: {
            pixels-per-point-x:1,
            pixels-per-point-y:1,
			options: {
				$switch: [
					{ if: =options.G_image, then: {match: { width:553, height:369, min-height:369 } } },
					{ if: =options.F_image, then: {match: { width:571, height:226, min-height:226 } } },
					{ if: =options.P_image, then: {match: { width:749, height:499, min-height:499 } } }
				]
			},
			
            anchor-y:bottom,
			image-scale: {$max:[1,{$divide:[=view.width, 499]}]}

            
		},
        
		#text: {padding: [8, 0, 8, 0]},
		#image_wrapper: {display:none},
		#headline: {display:none}
		
	}</style>
	<style>{
		if: =scale.phone, then: {
			#image_wrapper: { 
				anchor-x:right,
				position:relative,
				width: 76,
				padding:[0, 8, 6, 15],
				pixels-per-point-x:1,
				pixels-per-point-y:1,
				image-scale:1,
				display:inherit
			},
			image: { 
				height: 76,
				display:inherit,
				padding: [0],
                options:{},
				image-scale: 1
				
			},
			jpml: {
				padding:[8, 8, 0, 8],
				border-width:[0, 0, 1, 0],
				border-color:#b1aca1
			},
			.large: {display:none},
			#text: {display:none},
			#headline: {display:inherit}
			
		}, else:{}
	}</style>
	<box id="text">
		<p id="large_headline"><span embed="headline" /><mark class="key" /></p>
		<h2 class="large_dek"><span embed="subhed" /></h2>
	</box>
    <image embed="summary-image" class="large" />
	<box id="image_wrapper">
		<image embed="summary-image" />
	</box>
	<panel id="headline">
		<p id="large_headline" class="invisible"><span embed="headline" /><mark class="key" /></p>
		<h2 class="large_dek"><span embed="subhed" /></h2>
	</panel>



</jpml>


