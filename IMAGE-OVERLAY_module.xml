<jpml id="IMAGE-OVERLA_module">
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="PHONE-MODULES-stylesheet.ejs" />
	<style>{
			image:{
				width:=view.width,
				height: {$subtract:[=view.height, 1]},
				image-scale: {if: =options.full_screen, then:.9, else:1}
				
			},
			#text_container: {
				bottom:0,
				background-color:"rgba(0, 0, 0, .5)",
				padding:[20, 10],
				height:120
				
			},
			.deco_caption: {
				display:{if: =options.show_caption, then:inherit, else:none}
			}
	}</style>
	<style>{
		if: =scale.phone, then: {
			jpml: {
				padding:[0],
				border-width: [{if: =options.top_border, then:1, else:0}, 0, {if: =options.no_border, then:0, else:1}, 0],
				border-color: #d6d6d6,
				anchor-y:middle				
			},
			#text_container: {
				top:0,
				background-color:transparent,
				padding:[8, 8, 8, 8]
				
			}
			
		}, else: {}
	}</style>
	<box id="container">
		<image embed="summary-image" />
		<box id="text_container">
			<p class="module_headline"><span embed="headline" /><mark class="key" /></p>
			<panel class="body">
				<p embed="body-first-p" />
			</panel>
		</box>
	</box>
			
</jpml>
