<?xml version="1.0" encoding="UTF-8"?>
<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform" xmlns:media="http://search.yahoo.com/mrss" version="1.0">
   <xsl:output method="xml" encoding="UTF-8" indent="yes" />
   <xsl:variable name="smallcase" select="'abcdefghijklmnopqrstuvwxyz'" />
   <xsl:variable name="uppercase" select="'ABCDEFGHIJKLMNOPQRSTUVWXYZ'" />
   <xsl:template match="/pages">
      <jpml>
         <style src="GLOBAL_MODULES-stylesheet.ejs" />
         <style src="RIGHT_RAIL-stylesheet.ejs" />
         <panel class="main">
            <xsl:for-each select="page">
               <xsl:apply-templates select="link" />
            </xsl:for-each>
         </panel>
      </jpml>
   </xsl:template>
   <xsl:template match="link">
      <!--  <xsl:if test="not(./@class)"> -->
      <xsl:if test="not( ./@class ='inline-deco' or ./@class ='deco' )">
         <box class="item">
            <p>
               <a class="item-link">
                  <xsl:attribute name="href">
                     <xsl:value-of select="./@href" />
                  </xsl:attribute>
               </a>
               <span class="module_flashline">
                  <xsl:value-of select="metadata/item[@key = 'type']" />
               </span>
               <break />
               <span class="item-title">
                  <xsl:value-of select="metadata/item[@key = 'headline']" />
               </span>
            </p>
         </box>
      </xsl:if>
   </xsl:template>
</xsl:stylesheet>