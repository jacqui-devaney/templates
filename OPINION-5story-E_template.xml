<jpml id="OPINION-5story-E_template">
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="OPINION-stylesheet.ejs" />
    <style>
		{ $join: [
			{#h2:	{options:{highlight_light:true}}},
			{#h1:	{options:{highlight_light:true}}},
			{	if: =portrait, then: {
					#articles:	{ frame: [8, 10, 362, 610] },
					#b1:	{ frame: [0, 0, 362, 220], options:{rando:true} },
					#b4:	{ frame: [388, 10, 377, 392], options:{small_headline:true, show_image:true, no_border:true} },
					#b5:	{ frame: [388, 402, 377, 207], options:{small_headline:true, no_border:true} }
				}, else: {
					#articles:	{ frame: [15, 10, 362, 610] },
					#b1:	{ frame: [0, 0, 362, 220], options:{rando:true} },
					#b4:	{ frame: [399, 10, 377, 392], options:{small_headline:true, show_image:true, no_border:true} },
					#b5:	{ frame: [399, 402, 377, 207], options:{small_headline:true, no_border:true} }
			
				}
			},
			{ $switch: [
				{ if: =articles.b2.type, equals: "Letters", then: {
					_comment: "b2 has the header",
					#b2: { frame: [0, 220, 362, 210], options: {letters: true} },
					#b3: { frame: [0, 440, 362, 160] }
				}},
				{ if: =articles.b3.type, equals: "Letters", then: {
					_comment: "b3 has the header",
					#b2: { frame: [0, 230, 362, 180] },
					#b3: { frame: [0, 410, 362, 190], options: {letters: true} }
				}}, 
				{ if: true, then: {
					_comment: "neither have the header",
					#b2: { frame: [0, 230, 362, 180] },
					#b3: { frame: [0, 420, 362, 180] }
				}}
        	]}
    	]}    
    </style>

	<box id="articles">
	    <box id="b1" embed="article" module="OPINION-RANDO-LETTERS_module.xml" />
	    <box id="b2" embed="article" module="OPINION-RANDO-LETTERS_module.xml" />
	    <box id="b3" embed="article" module="OPINION-RANDO-LETTERS_module.xml" />
	</box>
    <box id="l4" class="line" />
    <box id="b4" embed="article" module="TOP-IMAGE_module.xml" />
    <box id="b5" embed="article" module="TOP-IMAGE_module.xml" />

    <box id="h1" embed="article" module="HIGHLIGHTS_module.xml" />
    <box id="h2" embed="article" module="HIGHLIGHTS_module.xml" />
    <box id="ad_background" class="ad_light">
		<box id="highlight_ad" class="ad-rectangle" embed="advertisement" />
	</box>

    
</jpml>


