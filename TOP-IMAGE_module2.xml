<jpml id="TOP-IMAGE_module">
	<style src="GLOBAL-stylesheet2.ejs" />
	<style src="GRID-extras2.ejs" />
	<style src="GLOBAL_MODULES-stylesheet2.ejs" />
	<style src="PHONE-MODULES-stylesheet.ejs" />
	<style>{
		jpml: {
			background-color: =options.background_color,
			border-color: #cfd7d7
		}
	}</style>
	<style>{
		$join: [
			{ $switch: [
				{ if: =options.top_border, then: {
					jpml: {
						border-width: [1, 0, 0, 0],
						padding: [5, 10, 0, 0]
					}
				}},
				{ if: =options.left_border, then: {
					jpml: {
						border-width: [0, 0, 0, 1],
						padding: [0, 0, 0, 10]
					}
				}},
				{ if: =options.right_border, then: {
					jpml: {
						border-width: [0, 1, 0, 0],
						padding: [0, 10, 0, 0]
					}
				}},
				{ if: true, then: {
					jpml: {
						border-width: [0, 0, 0, 0],
						padding: [0, 0, 0, 0]
					}
				}}
			]},
			{
				#body: {
					display: {if: =options.hide_body, then:none, else:inherit}
			},
				image: {
					pixels-per-point-x:1,
					pixels-per-point-y:1,
					image-scale: 1,
					display: { if: =options.show_image, then:inherit, else:none },
					height: {$multiply: [=view.width, .665 ]},
					options: {
						$switch: [
							{ if: =options.F_image, then: {match: { width:571, height:226, max-height:226 } } },
							{ if: =options.OZ_image,then: {match: { width:570, height:612, max-height:612 } } },
							{ if: =options.DV_image,then: {match: { width:262, height:394, max-height:394 } } },
							{ if: =options.G_image, then: {match: { width:553, height:369, max-height:369 } } }
						]
					}
				},
				#deco_container: {
					padding: [0, 0, 8, 0]
				},
				.byline: {
					display:{if: =options.show_byline, then:inherit, else:none}
				},
				.module_flashline: {
					display: {if: =options.show_flashline, then:inherit, else:none}
				}
			}
		]
	}</style>
	<style>{
		if: =scale.phone, then: {
			.module_headline: {
				padding: [0, 20, 4, 20]
			},
			image: {
				height: {$multiply: [=view.width, .665 ]},
				display: inherit,
				padding: [0, 4, 0, 4]
			},
			.byline: {
				display: none
			},
			#body: {
				display: inherit
			},
			.body: {
				display: none
			},
			#summary: {
				display: inherit,
				text-align:left,
				padding: [0, 20, 0, 20]
			},
			.opinion_dek: {
				display: none
			},
			#article_status: {
				position: relative,
				padding: [{if: =options.show_body, then: 1, else: 5}, 4, 0, 4],
				left: -20,
				width: 16,
				height: 16,
				options: {
					identifier: =article.id
				}
			},
			#deco_container: {
				padding: [0, 4, 0, 4],
				if: =options.float_image, equals: right, then: {
					anchor-x: right,
					padding: [0, 4, 0, 4],
					width: 111
				}, else: {if: =view.height, less-than: 200, then: [0, 20, 14, 20], else: [0, 4, 0, 4]}
			},
			.opinion_flashline: {
				font-name: WhitneySSm-Semibold,
				font-size:12,
				line-height: 22,
				text-transform:uppercase,
				color: #878f8f,
				padding: [-11, 0, 4, 20],
				display: {if: =page.section, equals: "OPINION", then: none, else: {if: =article.category, equals: "Opinion", then: inherit, else: none}}
			}
		}, else: {
			.opinion_flashline: {
				display: {if: =page.section, equals: "OPINION", then: none, else: {if: =article.category, equals: "Opinion", then: inherit, else: none}},
				font-name:DJ5Exchange-Bold,
				font-size:12,
				line-height:12,
				color: =page.tint,
				text-transform:uppercase,
				padding:[0, 0, 6, 0]
			},
			.opinion_dek:{
				font-name:WhitneySSm-Medium,
				font-size:13,
				line-height:20,
				color: #3b4343,
				display: none
			},
			#summary: {
				display: none
			}
		}
	}</style>
	<style>{
		if: =options.float_image, equals: right, then: {
			image: {
				width: 111,
				height: 111,
				padding: [0, 4, 0, 4],
				image-scale: 0.5
			}
		}
	}</style>
	<style>{
		if: =options.show_opinion_dek, equals: true, then: {
			.opinion_dek: {
				display: inherit
			}
		}
	}
	</style>
	<box id="deco_container" embed="deco-image">
		 <image class="summary-image"/>
	</box>
	<panel id="vertical" >
		<p class="opinion_flashline">OPINION</p>
		<panel id="headline">
			 <p class="module_flashline"><mark class="flashline-mark" /></p>
			 <p class="module_headline"><mark class="m_headline" /></p>
			 <h2 class="opinion_dek"><mark class="subhed-mark" /></h2>
		</panel>
		<panel id="body" class="vertical-grid-module">
			<p class="byline"><mark class="byline-mark"/></p>
			<p id="summary" class="body"><mark class="body-first-p-mark" /><mark class="module_summary" /></p>
			<panel class="body">
				<p>
					<mark class="body-first-p-mark" />
					<mark class="body-mark"/>
				</p>
			</panel>
		</panel>
	 </panel>
</jpml>
