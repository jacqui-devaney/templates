<jpml id="OPINION-RANDO-LETTERS_module">
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="OPINION-stylesheet.ejs" />
	<style src="PHONE-MODULES-stylesheet.ejs" />
	<style>{
		$join: [
			{ $switch: [
				{ if: =options.top_border, then: {
					jpml: {
						border-width: [1, 0, 0, 0],
						padding: [12, 10, 0, 0],
						border-color: #d8d8d8
					}

				}},
				{ if: =options.left_border, then: {
					jpml: {
						border-width: [0, 0, 0, 1],
						border-color: #d8d8d8,
						padding: [0, 0, 0, 10]
					}

				}},
				{ if: =options.right_border, then: {
					jpml: {
						border-width: [0, 1, 0, 0],
						border-color: #d8d8d8,
						padding: [0, 10, 0, 0]
					}

				}},
				{ if: true, then: {
					jpml: {
						border-width: [0, 0, 0, 0],
						padding: [0, 0, 0, 0]
					}
				}}
			]},

			{#rando_header: {
				display: {if: =options.rando_header, then:inherit, else:none}
			}}
		]

	}</style>
	<style>{
		if: =scale.phone, then: {
			jpml: {
				border-width:[ 0, 0, {if: =options.no_border, then: 0, else:1}, 0],
				border-color:#d6d6d6,
				padding: [6, 8, 6, 8]
			},
			#rando_header: {
				display:none
			},
			#vertical: {
				vertical-align:middle
			}

		}, else:{}
	}</style>
	<panel id="rando_header">
	    <p class="rando_heading"><mark class="rando" /></p>
		<box class="rando_border"> </box>
	</panel>
	<panel id="vertical">
	   	<p class="highlight_flashline hidden_tablet" embed="flashline" />
		<p id="headline" class="opinion_headline"><mark class="m_headline" /></p>
		<h2 class="opinion_dek" embed="subhed" ></h2>
		<panel class="body" embed="body"/>
	</panel>
</jpml>
