{
	jpml: {
		image-scale: 1,
		text-scale: 1,
		pixels-per-point-x: 1,
		pixels-per-point-y: 1,
		min-height: 0,
		max-height: 10000,
		background-color: { if: =app.idiom, equals: "phone", then: #fff, else: #e8e0ca },
		padding:[0, 9]
	},
	.header: {
		if-any: [
			{ if: =app.idiom, equals: "phone" },
			{ if: =issue.edition, equals: japan },
			{ if: =issue.edition, equals: korea }
		], then: {
			display: none
		}, else: {
			font-size: 18,
			font-name: "DJ5EscrowComp-SemiboldItalic",
			text-align: center,
			padding: [2, 0, 3, 0],
			border-width:[0, 0, 1, 0],
			border-color:#9a9487
		}
	},
	p: {
		font-name: {
			$switch: [
				{ if: =issue.edition, equals: japan, then: "HiraKakuProN-W3" },
				{ if: =issue.edition, equals: korea, then: "AppleSDGothicNeo-Medium" },
				"DJ5Exchange-Medium"
			]
		},
		hyphens:auto,
		font-size: 13,
		line-height:17,
		break-inside: avoid-column,
		text-align:center,
		padding: [12, 6, 0, 6]
	},
	.item-title: {
		font-name: {
			$switch: [
				{ if: =issue.edition, equals: japan, then: "HiraKakuProN-W6" },
				{ if: =issue.edition, equals: korea, then: "AppleSDGothicNeo-Bold" },
				"DJ5Exchange-Bold"
			]
		},
		font-size: 12,
		line-height:16,
		hyphens:auto
	}
}
