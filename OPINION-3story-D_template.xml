	<style src="GLOBAL-stylesheet.ejs" />
	<style src="GRID-stylesheet.ejs"/>
    <style src="ADVERTISING-stylesheet.ejs"/>
	<style src="OPINION-stylesheet.ejs" />
	<style src="PHONE-stylesheet.ejs" />
	<style>{
		#b1: {options:{justify:true, header:true}},
		#b2: {
			options: {
				justify:true
		}},
		
		#b3: {options:{
			small_headline:true, 
			hide_summary:true, 
			show_image:true, 
			no_border:{if: =scale.phone, then:false, else:true}, 
			byline:{if-any: [=scale.phone, =scale.large], then:false, else:true}, 
			F_image:{if-all: [=widescreen, =landscape], then:true, else:false}
		}},
		#h2: {options:{no_border:{if: =scale.phone, then:true, else:false}}}
	}</style>
    <style>{ 
		$switch: [
			{if: =scale.phone, then: {
			}},
			{if:true, then: {
				$join: [
					{ 
							#b1:	{ 
								top:8,
								height:370
							},
							#b3:	 { 
								top:0,
								height:706
							}	
					},
					{ $switch: [
						{ if: =articles.b1.type, equals: "Letters", then: {
							_comment: "no header",
							#b2 : { 
								top:386,
								height:312
								
							}
		                }},
						{ if: =articles.b2.type, equals: "Letters", then: {
					 		_comment: "b2 has the header",
							#b2 : { 
								top:386,
								height:312,
								options: {header: true} 
							}
						}},
						{ if: true, then: {
							_comment: "no header",
							#b2 : { 
								top:386,
								height:312
							}
						}}
				    ]}
				]
				
			}}
		]
    }</style>
    
