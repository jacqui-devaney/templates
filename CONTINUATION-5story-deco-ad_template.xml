<jpml id="CONTINUATION-5story-deco-ad_template">
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="GRID-stylesheet2.ejs"/>
	<style src="ADVERTISING-stylesheet.ejs"/>
	<style src="ADVERTISING-fallback-stylesheet.ejs" />
	<style src="ADVERTISING-stylesheet2.ejs"/>
	<style>{
		#page_details: {
			options: { hideHeaderBorder: true, tintTitle: true }
		}
	}</style>
	<style>{
		$switch: [
	        {if: =portrait, then: {
	            #b1 : {
					options:{ medium_headline: true, show_image: false, show_flashline: true, show_byline: true, show_subhead: false, top_border: true  }
				},
	            #b2 : {
					options:{ medium_headline: true, show_image: false, show_flashline: true, show_byline: true, show_subhead: false, top_border: true  }
	            },
	            #b3 : {
	              options:{ medium_headline: true, show_image: false, show_flashline: true, show_byline: true, show_subhead: false, top_border: true  }
				},
				#deco : {
					options:{ is_portrait: true, caption_position: 6, top_border: true  }
				},
	            #b4 : {
					options:{ medium_headline: true, show_image: true, small_image: true, show_flashline: true, show_byline: true, show_subhead: false, top_border: true, body_column_count: 2 }
				}
	        }},
			{if: =landscape, then: {
	            #b1 : {
					options:{ medium_headline: true, show_image: false, show_flashline: true, show_byline: true, show_subhead: false, top_border: true  }
				},
	            #b2 : {
					options:{ medium_headline: true, show_image: false, show_flashline: true, show_byline: true, show_subhead: false, top_border: true  }
				},
	            #b3 : {
					options:{ medium_headline: true, show_image: false, show_flashline: true, show_byline: true, show_subhead: false, top_border: true  }
				},
	            #deco : {
					options:{ caption_position: 4, top_border: true  }
				},
	            #b4 : {
					options:{ medium_headline: true, show_image: true, small_image:true, show_flashline: true, show_byline: true, show_subhead: false, module: url(BOTTOM-IMAGE_module.xml), top_border: true  }
	            }
	        }}
		]
	}</style>

	<box id="page_details" embed="pagedescription" />
    <box id="b1" embed="article" class="portrait-xposition-1 portrait-yposition-5 portrait-columns-4 portrait-lines-13 landscape-xposition-1 landscape-yposition-5 landscape-columns-4 landscape-lines-17" module="TOP-IMAGE_module3.xml" />

    <box id="b2" embed="article" class="portrait-xposition-5 portrait-yposition-5 portrait-columns-4 portrait-lines-13 landscape-xposition-8 landscape-yposition-23 landscape-columns-3 landscape-lines-13" module="TOP-IMAGE_module3.xml" />

    <box id="b3" embed="article" class="portrait-xposition-9 portrait-yposition-5 portrait-columns-4 portrait-lines-13 landscape-xposition-11 landscape-yposition-23 landscape-columns-3 landscape-lines-13" module="TOP-IMAGE_module3.xml" />

    <box id="deco" embed="article" class="portrait-xposition-1 portrait-yposition-19 portrait-columns-12 portrait-lines-15 landscape-xposition-5 landscape-yposition-5 landscape-columns-12 landscape-lines-17" module="DECO_SOLID_CAPTION_module.xml" />

    <box id="b4" embed="article" class="portrait-xposition-7 portrait-yposition-36 portrait-columns-6 portrait-lines-13 landscape-xposition-14 landscape-yposition-23 landscape-columns-3 landscape-lines-13" module="BOTTOM-INSET-IMAGE_module.xml" />

	<box id="advertisement_container" class="portrait-xposition-1 portrait-yposition-36 portrait-columns-6 portrait-lines-13 landscape-xposition-1 landscape-yposition-23 landscape-columns-7 landscape-lines-13">
		<p id="advertisement_paragraph"><mark id="advertisement_mark"/></p>
		<box id= "advertisement" embed="advertisement"/>
	</box>

	<style>{
		<!-- TODO remove this -->
		<!-- TODO smooth should be opposite to paged from what I know, one of those is a bug -->
		.smooth_only: {
		<!--display: {if: =smoothPagination, then: inherit, else: none}-->
			display: inherit
		},
		.paged_only: {
		<!--display: {if: =pagedPagination, then: inherit, else: none}-->
			display: inherit
		},
		#next_page: {
			top: {if: =portrait, then: 990, else: 733},
			height: 34,
			text-align: center,
			<!--display: {if: =pagedPagination, then: {if: =page.number, less-than: {$subtract: [=page.count, 1]}, then: inherit, else: none }, else: none }-->
			display: inherit
		}
		}</style>

	<box id="next_page" class="tablet_only paged_only landscape-columns-16 portrait-columns-12 xposition-1">
		<box id="next_page_button" embed="next-page-arrow"/>
	</box>
</jpml>
