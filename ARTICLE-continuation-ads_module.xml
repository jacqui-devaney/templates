<jpml id="ARTICLE-continuation-ads_module">
	<style src="GRID-stylesheet.ejs" />
	<style src="ADVERTISING-stylesheet.ejs" />
	<style src="ARTICLE-stylesheet.ejs" />
	<style>{
		$join:[
		{.article_body: { 
            column-count: 3,
            column-gutter: 10,
			column-height:{ if: =page.count, equals: {$add:[=page.number, 1]}, then:inherit, else:balance},
			layout-grid-line: {$multiply: [24, =view.zoomlevel]},
			padding:[0, 10, 0, 0]
        }},
		{#body_continuation: {
			content: from-flow(article_body),
			flow: article_body
		}},
		{#article_ad: {
			top:0,
			height:704,
			left:768
		}},
		{if: =portrait, then: {
            #mediabucket_container:	{ frame: [0, 0, 502, 379]},
			#mediabucket: {
				width:500,
				height:363,
				anchor-x:center
			}
        }, else: {
        	#mediabucket_container:	{ frame: [256, 0, 508, 379] },
			#mediabucket: {
				width:500,
				height:363,
				anchor-x:center
			}
        }}
		]
    }</style>
	
	<panel id="body_container">
    	<box id="article_ad" class="positionx7 column2">
			<box id="skyscraper_ad" class="ad-skyscraper" />
		</box>
		<box id="mediabucket_container">
			<box id="mediabucket" embed="mediabucket" />
		</box>
        <panel class="article_body" id="body_continuation" embed="body" />
	</panel>
	
</jpml>
