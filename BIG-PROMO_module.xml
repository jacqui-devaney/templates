<jpml id="SMALL-PROMO_module">
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="PHONE-MODULES-stylesheet.ejs" />
	<style>{
		jpml: {
			background-color: =options.background_color,
			border-width: [1, 0, 0, 0],
			padding: [5, 0, 0, 0],
			border-color: #d8d8d8
		}
	}</style>
	<style>{
		if: =scale.phone, then: {
			#headline: {
				padding: [14, 0, 0, 0]
			},
			.module_flashline: {
				font-name: WhitneySSm-Medium,
				font-size: 12,
				line-height: 22,
				color: #2fbfbf,
				letter-spacing: 2.0,
				display: default,
				text-align: center,
				padding: [4, 20, -6, 20]
			},
			.module_headline: {
				font-name: WhitneySSm-Semibold,
				font-size: 26,
				line-height: 33,
				color: #2b3333,
				letter-spacing: 2.0,
				text-align: center,
				padding: [6, 20, -6, 20],
				text-transform: uppercase
			},
			#deco_container: {
				padding: [21, 0, 12, 0]
			},
			.summary-image: {
				height: {$multiply: [=view.width, .668 ]},
				display:inherit,
				padding: [0, 20, 0, 20]
			},
			#summary: {
				display: inherit,
				text-align:left,
				padding: [4, 20, 0, 20]
			},
			.module_summary: {
				text-align: center,
				font-name: ChronicleSSm-Book,
				font-size: 16,
				line-height: 22,
				color: #878f8f
			},
			#top_diamond_box: {
				padding: [0, 0, 0, 0]
			},
			.diamond-p: {
				font-name: DJ5Utility-Regular,
				font-size: 12,
				line-height: 12,
				color: #cfd7d7,
				text-align: center,
				padding: [0, 0, 0, 0]
			},
			.diamond-mark: {
				content: "\uE013"
			},
			#bottom_diamond_box: {
				bottom: 0,
				padding: [6, 0, 21, 0]
			}
		}
	}</style>

	<panel id="vertical">
		<panel id="headline">
			<box id="top_diamond_box"><p class="diamond-p"><mark class="diamond-mark"/></p></box>
			<p class="module_flashline"><mark class="flashline-mark" /></p>
			<p class="module_headline"><mark class="m_headline" /></p>
		</panel>
		<panel id="deco_container" embed="deco-image">
			<image class="summary-image"/>
		</panel>
		<panel id="body">
				<box id="bottom_diamond_box"><p class="diamond-p"><mark class="diamond-mark"/></p></box>
				<p id="summary" class="body"><mark class="module_summary" /></p>
		</panel>
	</panel>
</jpml>
