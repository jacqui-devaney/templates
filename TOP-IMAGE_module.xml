<jpml id="TOP-IMAGE_module">
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="PHONE-MODULES-stylesheet.ejs" />

	<style>{
		jpml: {
			background-color: =options.background_color,
			border-color: #d8d8d8
		}
	}</style>
	<style>{
		$join: [
			{ $switch: [
				{ if: =options.top_border, then: {
					jpml: {
						border-width: [1, 0, 0, 0],
						padding: [7, 10, 0, 0]
					}

				}},
				{ if: =options.left_border, then: {
					jpml: {
						border-width: [0, 0, 0, 1],
						padding: [0, 0, 0, 10]
					}

				}},
				{ if: =options.right_border, then: {
					jpml: {
						border-width: [0, 1, 0, 0],
						padding: [0, 10, 0, 0]
					}

				}},
				{ if: true, then: {
					jpml: {
						border-width: [0, 0, 0, 0],
						padding: [0, 0, 0, 0]
					}
				}}
			]},
			{
				#body: {
					display: {if: =options.hide_body, then:none, else:inherit}
		        },
		        #deco_container: {
		        	if: =options.float_image, equals: right, then: {
		        		anchor-x: right,
		        		padding: [8],
		        		width: 111
		        	}
		        },
				image: {
					pixels-per-point-x:1,
					pixels-per-point-y:1,
          image-scale: 1,
          display: { if: =options.show_image, then:inherit, else:none },
					height: {$multiply: [=view.width, .665 ]},
					options: {
						$switch: [
							{ if: =options.F_image, then: {match: { width:571, height:226, max-height:226 } } },
							{ if: =options.OZ_image,then: {match: { width:570, height:612, min-height:612 } } },
							{ if: =options.DV_image,then: {match: { width:262, height:394, min-height:394 } } },
							{ if: =options.G_image, then: {match: { width:553, height:369, min-height:369 } } }
						]
					}
	      },
				#deco_container: {
					padding: [0, 0, 17, 0]
				},
				.byline: {
					display:{if: =options.show_byline, then:inherit, else:none}

				},
				.module_flashline: {
					display: {if: =options.show_flashline, then:inherit, else:none}
				}
			}
		]
	}</style>
	<style>{
		if: =scale.phone, then: {
			jpml: {
				padding:[0]
			},
			#headline: {
				padding: [8, 0, 0, 0]
			},
			image: {
				height: {$multiply: [=view.width, .665 ]},
				width:=view.width,
				display:inherit,
				padding: [0]

			},
			.byline: {
				display: none
			},
			#body: {
				padding: [0, 0, 0, 0]
			},
			.body: {
				display: none
			},
			#summary: {
				display: inherit
			},
			.opinion_dek: {
				display: none
			},
			#vertical: {
				padding: [0, 24, 0, 0]
			},
			#deco_container: {
				padding: {if: =view.height, less-than: 200, then: [0, 24, 0, 0], else: [0]}
			},
			#article_status: {
				position: relative,
				top: 0,
				bottom: 0,
				left: 0,
				width: 16,
				padding: [{if: =options.medium_headline, then: 12, else: 5}, 4, 0, 4],
				options: {
					identifier: =article.id
				}
			}
		}, else: {
			.opinion_dek:{
				padding:[0, 0, 8, 0],
				font-name:DJ5Exchange-MediumItalic,
				font-size:14,
				line-height:20,
				color:#5D5D5D,
				display: none
			},
			#summary: {
				display: none
			}
		}
	}</style>
	<style>{
		if: =options.float_image, equals: right, then: {
			image: {
				width: 111,
				height: 111,
				padding: [0],
				image-scale: 0.5
			}
		}
	}</style>
	<style>{
		if: =options.show_opinion_dek, equals: true, then: {
			.opinion_dek: {
				display: inherit
			}
		}
	}
	</style>
	<box id="deco_container" embed="deco-image">
		<image class="summary-image"/>
	</box>
	<panel id="vertical">
		<box id="article_status" embed="article-status"></box>
		<panel id="headline">
			<p class="module_headline"><mark class="m_headline" /></p>
			<h2 class="opinion_dek"><mark class="subhed-mark" /></h2>
		</panel>
		<panel id="body">
			<p class="module_flashline"><mark class="flashline-mark" /></p>
			<p class="byline"><mark class="byline-mark"/></p>
			<p id="summary" class="body"><mark class="body-first-p-mark" /><mark class="module_summary" /></p>
			<panel class="body">
				<p><mark class="body-mark"/></p>
			</panel>
		</panel>
	</panel>
</jpml>
