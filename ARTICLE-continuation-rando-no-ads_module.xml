<jpml id="ARTICLE-continuation-rando-no-ads_module">
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="GLOBAL-stylesheet.ejs" />
	<style>{
		$join: [
		{#header_top: { padding:[0, 0, 8, 5] }},
		{#body_container : { padding: [8, 5, 0, 5]}},
		{.body: { 
            column-count: {$divide: [=view.width, {$multiply:[250, =scale.dpi]}]},
            column-gutter: 20,
			column-height:balance
        }},
		{#rando_container: { 
			background-image:url(rando_bars.png), 
			background-position:bottom, 
			width:270,
			padding:[0, 0, 10, 0]
		}},
		{if: =portrait, then: {
			#rando_padding: {
				width:270,
				anchor-x:center, 
				top:75,
				padding:[20, 0]
			}
			
        }, else: {
			#rando_padding: {
				width:270,
				left:440, 
				top:75,
				padding:[20, 0]
			}
		}},
		{#filler: {
			position: relative,
			top: 10,
			left: 0,
			right: 0,
			bottom: 0,
			min-height: 0,
			background-color: "rgba(.5, .5, 1, .5)"        
		}},
		{#article_advertisement: {
			min-height: 206,            
			min-width: 555,            
			anchor-x: center,            
			anchor-y: middle        

		}}
		
		]
    }</style>
	
    <box id="continued_label">
		<p><mark id="continued" /></p>
	</box>
	
	<panel id="body_container">
        <box id="rando_padding">
			<box id="rando_container">
				<h2 class="rando_subhed" embed="subhed" />
	        </box>
		</box>
		<panel class="body" embed="body"/>
    </panel>
	<box id="filler">
		<box id="article_advertisement" embed="advertisement"/>
	</box>
	
</jpml>



