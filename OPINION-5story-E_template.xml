<jpml id="OPINION-5story-E_template">
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="OPINION-stylesheet.ejs" />
    <style src="PHONE-stylesheet.ejs" />
    <style>{
		#b1: {options:{header:true, border:{if: =scale.phone, then:true, else:false}}},
		.phone_ad: {display:{if: =scale.phone, then:inherit, else:none}},
		.tablet_ad: {display:{if: =scale.phone, then:none, else:inherit}},
		#b4: {options:{small_headline:true, show_image:true, no_border:{if: =scale.phone, then:false, else:true}, byline:{if-any: [=scale.phone, =scale.large], then:false, else:true}, F_image:{if: =scale.small, then:true, else:false}}},
		#b5: {options:{small_headline:true, no_border:{if: =scale.phone, then:false, else:true}, byline:{if-any: [=scale.phone, =scale.large], then:false, else:true}}},
		#h1: {options:{hide_image:{if-all: [=scale.small, =landscape], then:true, else:false}, byline:{if: =scale.phone, then:false, else:true}}},
		#h2: {options:{hide_image:{if-all: [=scale.small, =landscape], then:true, else:false}, byline:{if: =scale.phone, then:false, else:true}, no_border:{if: =scale.phone, then:true, else:false}}}
	}</style>
    <style>{
		$switch: [
			{if: =scale.phone, then:{
				$join: [
					{#articles: {
						padding:[0], 
						border-width:[0]
					}},
					{$switch: [
						{ if: =articles.b1.type, equals: "Letters", then: {
							_comment: "neither have the header",
							#b2: {},
							#b3: {options:{border:true}}
						}},
						{ if: =articles.b2.type, equals: "Letters", then: {
							_comment: "b2 has the header",
							#b2: {options:{header:true} },
							#b3: {options:{border:true}}
						}},
						{ if: =articles.b3.type, equals: "Letters", then: {
							_comment: "b3 has the header",
							#b2: {},
							#b3: {options:{header:true, border:true} }
						}}, 
						{ if: true, then: {
							_comment: "neither have the header",
							#b2: {},
							#b3: {options:{border:true}}
						}}
		        	]}
				]
			}},
			{if-any: [=scale.large, =scale.small], then: {	
				$join: [
					{if: =portrait, then: {
							#articles:	{ frame: [8, 10, 362, 610] },
							#b1:	{ frame: [0, 0, 362, 220]},
							#b4:	{ frame: [388, 2, 377, 420]},
							#b5:	{ frame: [388, 422, 377, 196] }
						}, else: {
							#articles:	{ frame: [15, 10, 362, 610] },
							#b1:	{ frame: [0, 0, 362, 220]},
							#b4:	{ frame: [399, 2, 377, 420]},
							#b5:	{ frame: [399, 422, 377, 196]}
						}
					},
					{$switch: [
						{ if: =articles.b1.type, equals: "Letters", then: {
							_comment: "neither have the header",
							#b2: { frame: [0, 230, 362, 180] },
							#b3: { frame: [0, 420, 362, 180] }
						}},
						{ if: =articles.b2.type, equals: "Letters", then: {
							_comment: "b2 has the header",
							#b2: { frame: [0, 220, 362, 210], options:{header:true} },
							#b3: { frame: [0, 440, 362, 160] }
						}},
						{ if: =articles.b3.type, equals: "Letters", then: {
							_comment: "b3 has the header",
							#b2: { frame: [0, 230, 362, 180] },
							#b3: { frame: [0, 410, 362, 190], options:{header:true} }
						}}, 
						{ if: true, then: {
							_comment: "neither have the header",
							#b2: { frame: [0, 230, 362, 180] },
							#b3: { frame: [0, 420, 362, 180] }
						}}
		        	]}
		    	]   
				
			}}
		]
	}</style>

    <box id="articles">
		<box id="b1" embed="article" class="maude unit_rando_top" module="OPINION-RANDO-LETTERS_module.xml" />
    	<box id="b2" embed="article" class="maude unit_rando_second" module="OPINION-RANDO-LETTERS_module.xml" />
    	<box id="ad_background" class="ad_light unit_ad maude phone_ad">
			<box id="highlight_ad" class="ad-rectangle" embed="advertisement" />
		</box>
	    <box id="b3" embed="article" class="maude unit_rando_second" module="OPINION-RANDO-LETTERS_module.xml" />
	</box>
    <box id="ad_background" class="ad_light maude unit_ad tablet_ad">
		<box id="highlight_ad" class="ad-rectangle" embed="advertisement" />
	</box>
    <box id="b4" embed="article" class="maude unit_medium_1" module="TOP-IMAGE_module.xml" />
    <box id="b5" embed="article" class="maude unit_medium_1" module="TOP-IMAGE_module.xml" />

    <box id="h1" embed="article" class="maude unit_highlight" module="HIGHLIGHTS_module.xml" />
    <box id="h2" embed="article" class="maude unit_highlight" module="HIGHLIGHTS_module.xml" />

    
</jpml>


