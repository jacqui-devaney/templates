{
	jpml: {
		image-scale: { if: =intent.template, then: {$max:[=scale.pagex,=scale.pagey]}, else: =scale.dpi },
		text-scale: {$multiply: [=scale.text, 1] },
		pixels-per-point-x: { if: =intent.template, then: =scale.pagex, else: =scale.dpi },
		pixels-per-point-y: { if: =intent.template, then: =scale.pagey, else: =scale.dpi },
		min-height: {if: =intent.template, and: =scale.phone, then: 0},
		max-height: {if: =intent.template, and: =scale.phone, then: 10000}
	},

	.ad-fullpage: { options: { zone: {$join: [=ad.prefix, fullpage]} } },
	.ad-rectangle: { options: { zone: {$join: [=ad.prefix, {if: =scale.phone, then: sbanner, else: rectangle}]} } },
	.ad-twocolumn: { options: { zone: {$join: [=ad.prefix, {if: =scale.phone, then: abanner, else: twocolumn}]} } },

	.ad_light: {background-color: #e4e4e4},
	.ad_light: {background-color: #efefef},
	.ad_white: {background-color: #ffffff},
	.hidden_tablet: {display:none},
	#highlight_ad: 	{ 
		pixels-per-point-x: 1,
		pixels-per-point-y: 1,
		anchor-x:center,
		anchor-y:middle,
		width: {$switch: [
			{if: =scale.small, then: 151},
			{if: =scale.large, then: 210}
		]},
		height: {$switch: [
			{if: =scale.small, then: 125},
			{if: =scale.large, then: 175}
		]}

	},
	.front_ad: {
		background-image:{
			$switch: [
				{if: =scale.phone, then: url(front-page-ad-phone.png)},
				{if: =scale.small, then: url(front-page-ad-small.jpg)},
				{if: =scale.large, then: url(front-page-ad.png)}
			]
		},
		background-position:center
	},
	#ad: {
		pixels-per-point-x: 1,
		pixels-per-point-y: 1,
		anchor-x: center,
		anchor-y: middle,
		width: {$switch: [
			{if: =scale.small, then: 134},
			{if: =scale.large, then: 170}
		]},
		height: {$switch: [
			{if: =scale.small, then: 137},
			{if: =scale.large, then: 175}
		]}
	},
	#article_advertisement: {
		anchor-x:center,
		anchor-y:bottom,
		pixels-per-point-x: 1,
		pixels-per-point-y: 1,
		width: {$switch: [
			{if: =scale.small, then: 434},
			{if: =scale.large, then: 555}
		]},
		height: {$switch: [
			{if: =scale.small, then: 161},
			{if: =scale.large, then: 206}
		]}
		
	},
	#fullpage_ad: {
		anchor-x:center,
		anchor-y:middle,
		pixels-per-point-x: 1,
		pixels-per-point-y: 1,
		width: {$switch: [
			{if-all: [=scale.phone, =portrait], then:320},
			{if-all: [=scale.small, =portrait], then:600},
			{if-all: [=scale.large, =portrait], then:768},
			{if-all: [=scale.small, =landscape], then:828},
			{if-all: [=scale.large, =landscape], then:1024}
		]},
		height: {$switch: [
			{if-all: [=scale.phone, =portrait], then:416},
			{if-all: [=scale.small, =portrait], then:702},
			{if-all: [=scale.large, =portrait], then:{if: =intent.section, then: 876, else: 899}},
			{if-all: [=scale.small, =landscape], then:488},
			{if-all: [=scale.large, =landscape], then:{if: =intent.section, then: 620, else: 643}}
		]}
	},		
	#ad_container: {
		frame: {if: =portrait, 
			then: [0, 629, 555, 218],
			else: [285, 367, 569, 218]
		}
	}
}