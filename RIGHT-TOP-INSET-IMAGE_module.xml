<jpml id="RIGHT-TOP-INSET-IMAGE_module">
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="PHONE-MODULES-stylesheet.ejs" />
	<style>{
        jpml: {padding:[10, 0, {if: =options.bottom, then:15, else:10}, 0]
		},
		#body: { 
            column-count: { if: =options.one_column, then:1, else:2},
            column-gutter: 20
        },
        #image_container: { 
			comment: "14 represents half of 28, which is 20 gutter + 8 jpml left padding",
			width:{$divide: [{$subtract: [=view.width, {$multiply:[=scale.dpi,28]}]}, 2]},
			padding: [0, 0, 8, 20],
			anchor-x:right,
			anchor-y:top,
			pixels-per-point-x:1,
			pixels-per-point-y:1,
			image-scale:1		
		},		
		image: {
			height:{$multiply: [{$subtract:[=view.width, {$multiply:[=scale.dpi,28]}]}, 0.33] },
			display: { if: =options.hide_image, then:none, else:inherit }
		},
		.body: {options:{text-align: { if: =options.justify, then:=justify, else:left}}}
	}</style>
	<style>{
		if: =scale.phone, then: {
			jpml: {
				border-width: [0, 0, {if: =options.no_border, then:0, else:1}, 0],
				border-color: #d6d6d6,
				padding: [10, 0, 0, 0]
			},
			#image_container: { 
				anchor-x:right,
				position:relative,
				width: 76,
				padding:[0, 10, 6, 15],
				pixels-per-point-x:1,
				pixels-per-point-y:1,
				image-scale:1

			},
			image: { 
				height: 76,
				display:inherit,
				padding: [0],
                options:{},
				image-scale: 1
				
			},
			.byline: {
				display:none
			},
			.body: {
				padding:[0, 8, 0, 8]
			},
			#headline: { padding: [0, 0, 0, 8]}
		}, else:{}
	}</style>
		<box id="image_container">
			<image embed="summary-image"/>
		</box>
	    <panel id="headline">
			<p class="module_headline"><mark id="m_headline" /><mark class="key" /></p>
		</panel>
		<panel id="body-container">
			<panel id="body">
	            <p class="byline" embed="byline"/>
	            <panel class="body" embed="body"/>
	        </panel>
	    </panel>
</jpml>
