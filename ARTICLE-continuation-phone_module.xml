<jpml id="ARTICLE-continuation-phone_module">
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="ARTICLE-stylesheet.ejs" />
	<style src="PHONE-MODULES-stylesheet.ejs" />
	<style src="MEDIA-stylesheet.ejs" />
    <style src="ADVERTISING-stylesheet.ejs"/>
	<style>{
		jpml: {
            min-height: 0
        },
		.article_body: {
			line-height: {$multiply: [22, =view.zoomlevel]},
			text-align: left,
            hyphens: auto
        },
		#body_continuation: {
			content: from-flow(article_body),
			flow: article_body
        },
        #media_caption: {
            padding: [8, 0, 0, 0]
        },
        #media_container: {
            padding: [0, 0, 22, 0]
        },
        #media_credit: {
            text-transform: uppercase,
            padding: [0, 0, 0, 0]
        },
        #list-item: {
            padding: [0, 0, 22, 0]
        }
    }</style>

    <box id="prototype">
        <box id="media-item-prototype">
        	<box id="media_container">
        		<p id="media_title"><mark id="mark_media_title"/></p>
        		<p id="media_vr_header"><mark id="mark_media_vr_header"/></p>
	            <box id="media_asset" embed="media"/>
        		<p id="media_vr_footer"><mark id="mark_media_vr_footer"/></p>
	            <p id="media_caption"><mark id="mark_caption" /></p>
                <p id="media_credit"><mark id="mark_credit"/></p>
	            <p id="media_vr_link"><a href="http://wsj.com/virtual-reality"><mark id="mark_media_vr_link"/></a></p>
	        </box>
        </box>
    </box>

	<panel id="body_container">
    	<panel class="article_body" id="body_continuation" embed="body" />
	</panel>

    <style>{
    .version_75_only: {
        display: { if: =app.version, equals: "7.5", then: inherit, else: none }
    },
    .maude: {
        position: relative,
        top: 0,
        left: 0,        
        right: 0,
        width:inherit
    },
    .unit_ad: {
        width: 320, 
        height: 50,
        background-color: #e7e2d8
    },
    #frontpage:{
        width: =view.width,
        background-color: #edf1ed,
        position: absolute,
        height: 320,
        padding: [36, 0, 0, 0]
    },
    #ad_headline:{
        font-name: "Whitney-Book",
        font-size: 13,
        line-height: 45,
        color: #a7afaf,
        display: inherit,
        text-align: center,
        padding: [-43, 40, 10, 40]
    },

    #fullpage_ad: {
        border-width: {if: =scale.phone, then: [46]},
        border-color: {if: =scale.phone, then: #edf1ed},
        bottom: 10
    },

    #footer: {
        height: 325,
        text-align: center,
        options:{bind: none, top_border: true}
    },

    #footer_headline: {
        font-name: ChronicleDisplay-Semi,
        color: #2b333,
        padding: [95, 30, 0, 30],
        anchor-x: center,
        anchor-y: middle,
        font-size: 22,
        line-height: 26,
        content: "CONTENT FROM OUR SPONSOR"
    },
    #footer_tip: {
        font-name: ChronicleDisplay-Semi,
        color: #a7afaf,
        font-size: 22,
        line-height: 26,
        anchor-x: center,
        anchor-y: middle,
        padding: [0, {if: =view.width, equals: 375, then: 32, else: 48}, 0, {if: =view.width, equals: 375, then: 32, else: 48}],
        content: =footer_tips[footer_tip]
    },
    #footerstrapinner: {
        border-color: #cfd7d7,
        border-width: [1, 0, 0, 0],
        padding: [12, 8, 0, 8],
        left: 0,
        top: 0,
        right: 0,
        bottom: 0
    }
    }</style>

    <box id="frontpage" class="version_75_only maude unit_ad">
        <box id="fullpage_ad" class="ad-fullpage" embed="fullpagead">
            <p id="ad_headline" class="ad_headline">ADVERTISEMENT</p>
        </box>
    </box>
    <box id="footer" class="version_75_only maude unit_plain unit_50">
        <box id="footerstrapinner">
            <p id="footer_headline" class="footer_headline">Did You Know?</p>
                <p id="footer_tip"><mark id="footer_tip" /></p>
        </box>
    </box>
</jpml>
