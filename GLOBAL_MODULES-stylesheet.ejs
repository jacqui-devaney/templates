{
	#invisible: {
		display:none
	},
	.module_headline: {
		$join: [
			{
				font-name: "DJ5EscrowCond-Bold",
				text-scale: {if: =scale.small, then: {$multiply: [=scale.text, 0.9] }, else: inherit},
				color:{if: =options.white_text, then:#fff, else:#000}

			},
			{
				$switch:[
					{if: =options.extra_small_headline, then:{
						padding:[0, 0, 10, 0],
						font-size:15,
						font-name: DJ5EscrowCond-Semibold,
						line-height: 19
						}
					},
					{if: =options.small_headline, then:{
						padding:[0, 0, 11, 0],
						font-size:19,
						font-name: DJ5EscrowCond-Semibold,
						line-height: 23
						}
					},
					{if: =options.medium_headline, then:{
							font-name: DJ5EscrowCond-Semibold,
							font-size:{if-all: [
						        =scale.headlines,
						        {if: =extents.medium, more-than: 1.0, then: true, else: false},
						        {if: =extents.medium, less-than: 1.5, then: true, else: false}
						    ], then: 19, else: 24 },
							padding:[0, 0, 7, 0],
							line-height:{ $switch: [
									{if-all: [
									    =scale.headlines,
									    {if: =extents.medium, more-than: 1.0, then: true, else: false},
									    {if: =extents.medium, less-than: 1.5, then: true, else: false}
									], then: 26, else: 26 },
									"26"

								]
							}
						}
					},
					{if: =options.large_headline, then: {
							font-size:{if-all: [
						        =scale.headlines,
						        {if: =extents.large, more-than: 1.0, then: true, else: false},
						        {if: =extents.large, less-than: 1.5, then: true, else: false}
						    ], then: 32, else: 36 },
							padding:[0, 0, 4, 0],
							line-height: {if-all: [
							    =scale.headlines,
							    {if: =extents.large, more-than: 1.0, then: true, else: false},
							    {if: =extents.large, less-than: 1.5, then: true, else: false}
							], then: 34, else: 39 }
						}
					},
					{if: =options.very_large_caps_headline, then: {
							font-size:{if-all: [
						        =scale.headlines,
						        {if: =extents.large, more-than: 1.0, then: true, else: false},
						        {if: =extents.large, less-than: 1.5, then: true, else: false}
						    ], then: 32, else: 56 },
							padding:[0, 0, 20, 0],
							line-height: {if-all: [
							    =scale.headlines,
							    {if: =extents.large, more-than: 1.0, then: true, else: false},
							    {if: =extents.large, less-than: 1.5, then: true, else: false}
							], then: 34, else: 60 },
							text-transform:uppercase,
							font-name:DJ5Escrow-Roman
						}
					},
					{if: true, then: {
							font-name: DJ5EscrowCond-Semibold,
							padding:[0, 0, 20, 0],
							font-size:19,
							line-height: 23
						}
					}

				]

			},
			{
				font-name: { if: =issue.type, equals: "NOW", then: "DJ5Exchange-Semibold" }
			}
		]
	},
	.module_summary: {
		content: =article.summary
	},
	.body: {
		font-name: "DJ5Exchange-Medium",
		text-indent: =text.indent,
		font-size:{$multiply:{if: =options.large_body, then:20, else:14}},
		line-height:{$multiply:{if: =options.large_body, then:26, else:20}},
		text-overflow: =text.overflow,
        text-align: { if: =options.justify, then:=justify, else:left},
		text-scale: {if: =widescreen, then: {$multiply: [=scale.text, 1.2] }, else: inherit},
		hyphens:auto,
		color:{if: =options.white_text, then:#fff, else:#222221}


	},
	.escrow_body: {
		font-name: DJ5Escrow-Roman,
		text-indent:0,
		font-size:24,
		line-height:26,
        text-align: { if: =options.justify, then:=justify, else:left},
		color:{if: =options.white_text, then:#fff, else:#222221}


	},
	.deco_caption: {
		font-name: DJ5Exchange-Medium,
		font-size:14,
		line-height:20,
		color:#fff

	},
	.deco_headline:{
		font-name: DJ5EscrowCond-Semibold,
		color:#fff,
		padding:[0, 0, 6, 0],
		font-size:{if: =options.large_headline, then:45, else:24},
		line-height:{if: =options.large_headline, then:45, else:24}
	},
	.module_flashline: {
		font-name:DJ5Exchange-Bold,
		font-size:12,
		line-height:12,
		color: =page.tint,
		text-transform:uppercase,
		padding:[0, 0, 6, 0]
	},
	.module_caption: {
		font-name:DJ5Exchange-Medium,
		font-size:11,
		line-height:13,
		padding:[4, 0, 4, 0],
		display: {if: =options.show_image, then:inherit, else:none}
	},
	.key: {
		font-name: {if: =device.platform, equals: Android, then: DJ5Utility, else: DJ5Utility-Regular },
		font-size: 16,
		content: "\u00a0K",
		display: { if-all: [=issue.locked, =article.paid], then: default, else: none },
		color: #948464
	},	
	#body-first-p: {
		text-indent: {if: =options.indent, then: =text.indent, else: 0}
	},
	.body-first-p-mark: {
		font-name: {if: =device.platform, equals: Android, then: DJ5Utility, else: DJ5Utility-Regular },
		content: "K\u00a0",
		display: { if-all: [=issue.locked, =article.paid], then: default, else: none },
		color: #948464
	},
	.byline: {
		font-name:DJ5Exchange-Medium,
		font-size:14,
		line-height:20,
		color:#5D5D5D
	},
	.hidden_tablet: {
		display: none
	},
	.hidden_phone: {
		display: inherit
	},
	#m_subsection: { content: =article.subsection },
	.m_headline: { content: =article.headline },
	em: {
		font-name:DJ5Exchange-MediumItalic
	},
	.link-pdf: {
		color:{if: =intent.article, then:=page.tint}
	},
	.link-external: {
		color:{if: =intent.article, then:=page.tint}
	},
	a: {
		color:{if: =intent.article, then:=page.tint}
	},
	.link-article: {
		text-decoration: none,
		color:{if: =intent.article, then:=page.tint}
	},
	.ticker: {
		display: none
	}
}
