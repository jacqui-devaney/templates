<jpml id="CONTINUATION-fancy-3story-G_template">
	<style src="GRID-stylesheet.ejs" /> 
	<style src="CONTINUATION-stylesheet.ejs" /> 
	<style src="GLOBAL-stylesheet.ejs" /> 
	<style src="PHONE-stylesheet.ejs" /> 
    <style>{
		#b1: {options: { $switch: [
				{if: =scale.phone, then: {bottom_border:true, hide_content:true}},
				{if: =portrait, then: {large_headline:true, show_flashline:true, show_image:true, right_border:true}},
				{if: =landscape, then: {large_headline:true, show_flashline:true, show_image:true, right_border:true, F_image:{if:=widescreen, then:true, else:false}}}			
		]}},
		#b2: {options: { $switch: [
				{if: =scale.phone, then: {hide_content:true}},
				{if: =portrait, then: {medium_headline:true, show_flashline:true, one_column:true}},
				{if: =landscape, then: {small_headline:true, show_flashline:true}}			
		]}},
		#b3: {options: { $switch: [
				{if: =scale.phone, then: {hide_content:true}},
				{if: =portrait, then: {small_headline:true, show_flashline:true, top_border:true}},
				{if: =landscape, then: {small_headline:true, show_flashline:true, top_border:true}}			
		]}}

    }</style>
	<style>{
    $switch: [ 
        {if: =scale.phone, then: {
       		#b1: {
				height: {if:=articles.b1.show_subsection, then:inherit, else:50}
			}
            
		}},
        {if: =portrait, then: {
	        #b1 : { 
				top:0,
				height:640
			},
            #b2 : { 
				top:0,
				height:640
					
			},
            #b3 : { 
				top:640,
				height:320
			}
        }},
        {if: =landscape, then: {
	        #b1 : { 
				top:0,
				height:706
			},
	        #b2 : { 
				top:0,
				height:353
				
			},
	        #b3 : { 
				top:353,
				height:353
			}
        }}
    ]}</style>
    <box id="b1" class="column4 positionx1 maude unit_continuation_strap" embed="article" module="HEADLINE-IMAGE_module.xml" />    
    <box id="b2" class="column4-2 positionx5 maude unit_continuation_strap" embed="article" module="RIGHT-MIDDLE-INSET-IMAGE_module.xml" />
    <box id="b3" class="column4-6 positionx5-1 maude unit_continuation_strap" embed="article" module="RIGHT-MIDDLE-INSET-IMAGE_module.xml" />

</jpml>

