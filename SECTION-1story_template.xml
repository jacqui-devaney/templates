<jpml id="SECTION-1story_template">
	<style src="GLOBAL-stylesheet.ejs" />
    <style src="GRID-stylesheet.ejs"/>
    <style>{
    	#page_details: {
			display: inherit,
			frame: [0, 0, 10, 10],
			options: {
				tintColor: white,
				tintTitle: true,
				title: { if: =page.section, equals: "WSJ_MAGAZINE", then: "WSJ." }
			}
		}
	}</style>
    <style>{

		#deco: {
			options:{$switch:[
				{if: =portrait, then: {very_large_caps_headline:true, white_text:true, full_screen:true, large_body:true}},
				{if: =landscape, then: {very_large_caps_headline:true, white_text:true, full_screen:true, large_body:true}}
			]
		}}

	}</style>
	<style> {
		$switch: [
			{if: =scale.phone, then: {

			}},
			{if: =portrait, then: {
				jpml: {padding:[0]},
				#deco:	{
						top:0,
						height:1024
				}

			}},
			{if: =landscape, then: {
				jpml: {padding:[0]},
				#deco:	{
					top:0,
					height:768
				}

			}}
		]
	} </style>
	<box id="page_details" embed="pagedescription" />
	<box id="deco" embed="article" class="column_full positionx_full" module="FULL-SIZE_module.xml" />

</jpml>
