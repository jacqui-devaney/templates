<jpml id="ARTICLE-election-front_module">
	<style src="GLOBAL-stylesheet.ejs"/>
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="ARTICLE-stylesheet.ejs" />
	<style src="MEDIA-stylesheet.ejs" />
	<style>{
		jpml: {
			background-color: =options.background_color
		}
	}</style>
	<style>{
		$join: [
		{#body_container: {
            column-count: { if: =portrait, then: 3, else: 4},
            column-gutter: 20,
			flow: article_body,
			min-height: {if: =page.hasmedia, then:400, else:300},
			padding:[10, 0, 0, 0],
			layout-grid-line: {$multiply: [20, =view.zoomlevel]},
			layout-grid-line-offset: {$multiply: [20, =view.zoomlevel]}

        }},
		{.border-p:{
			layout-grid-line: 0,
			layout-grid-line-offset: 0,
			border-color: =color.background

		}},
		{if: =portrait, then: {
			#media_container: {
				top: 0,
				left: {if: =media.width, less-than: 720, then: 248, else: {if: =media.width, more-than: 968, then: 248, else: 248}},
				width: {$switch: [
					{if: =media.width, less-than: 720, then: 237},
					{if: =media.width, more-than: 968, then: 485},
					237
				]}
			}
        }, else: {
			#media_container: {
				top: 0,
				left: {if: =media.width, less-than: 720, then: 248, else: {if: =media.width, more-than: 968, then: 248, else: 248}},
				width: {$switch: [
					{if: =media.width, less-than: 720, then: 236},
					{if: =media.width, more-than: 968, then: 484},
					236
				]}
			}
        }}
		]
    }</style>

    <style>{
        #headline_container:{
            anchor-x: center,
            padding: [8, 0, 10, 0],
            background-color: #2b3333,
            width: 344
        },
        #election_container:{
            padding: [12, 12, 0, 12],
            text-align: center,
            background-color: #dfe7df,
            display: {if: =app.push.tags.topic.politics, then: none, else: inherit },
            top: {if: =portrait, then: 792, else: 532},
            width: 460
        },
        .banner_headline: {
            font-name: "WhitneySSm-Semibold",
            color: #fff,
            line-height: 22,
            font-size: 12,
            text-align: center,
            position: absolute
        },
        .banner_headline: {
            font-name: "WhitneySSm-Semibold",
            color: #fff,
            line-height: 22,
            font-size: 12,
            text-align: center,
            position: relative,
            width: 48
        },
        .banner_caption: {
            font-name: WhitneySSm-Book,
            font-size: 16,
            line-height: 22,
            padding: [52, 0, 7.4, -245],
            color: #4f5757
        },
        .cont_caption: {
            font-name: WhitneySSm-Book,
            font-size: 16,
            color: #4f5757,
            position: relative,
            line-height: 50,
            anchor-x: right,
            padding: [-43, 0, 0, 78]
        },
        #bell: {
            background-image: "url(thickBell_promo@3x.png)",
            width: 24,
            height: 24,
            background-position: aspect-fit,
            top: -32,
            right: 310
        },
        .sleepy_election:{
            font-size: 24,
            position: relative,
            color: transparent
        }
    }
    </style>
    <style>
    {
        #sleepy_election_link_old: {
            display: {if: =app.version, more-than: "8.3", then: none, else: inherit}
        },
        #sleepy_election_link_new: {
            display: {if: =app.version, more-than: "8.3", then: inherit, else: none}
        }
    }
    </style>

    <box id="election_container" class="tablet_only columns-4 xposition-1">
    <box id="headline_container">
        <p id="banner_headline" class="banner_headline"><span class="banner_headline">FOLLOW ELECTION 2016</span><mark class="space"/></p>
    </box>
    <box id="caption_container">
            <p id="banner_caption" class="banner_caption">Tap <mark class="banner_caption" /></p>
        <panel id="bell-panel"><box id="bell" />
            <p id="cont_caption" class="cont_caption"> to manage your notifications.<mark class="cont_caption" /></p>
        </panel>
    </box>
        <box id="mattress">
            <p id="sleepy_election" class="sleepy_election">
                <a id="sleepy_election_link_old" class="sleepy_election" href="subscribe:politics?tag-group=topic">zzzzzzzzzzzzzzzzzzzzzzzzzzzzz</a>
                <a id="sleepy_election_link_new" class="sleepy_election" href="wsj:///subscribe?tag=politics&amp;tag-group=topic">zzzzzzzzzzzzzzzzzzzzzzzzzzzzz</a>
            </p>
        </box>
    </box>

    <panel id="header_top">
        <p class="article_headline"><span embed="headline"/></p>
		<h2 class="article_subhed" embed="subhed" />
	</panel>

	<panel id="body_container">
		<box id="media_container">
			<p id="media_title"><mark id="mark_media_title"/></p>
            <panel id="media_vr_header">
                <p id="media_vr_header_left"><mark id="mark_media_vr_header_left"/></p>
                <p id="media_vr_header_right"><mark id="mark_media_vr_header_right"/></p>
            </panel>
			<box id="media_asset" embed="media"/>
			<p id="media_vr_footer"><mark id="mark_media_vr_footer"/></p>
			<p id="media_caption"><mark id="mark_caption" /></p>
			<p id="media_vr_link"><a href="http://wsj.com/virtual-reality"><mark id="mark_media_vr_link"/></a></p>
		</box>
		<p class="module_flashline" embed="flashline"/>
    	<p class="byline" embed="byline"/>
		<p class="border-p"><mark class="border-mark"/></p>
		<panel class="article_body" embed="body"/>
	</panel>
</jpml>
