<jpml id="ELECTION-COVER.module.xml">
	<style src="GLOBAL-stylesheet2.ejs" />
	<style src="GRID-extras2.ejs" />
	<style src="GLOBAL_MODULES-stylesheet2.ejs" />
	<style src="PHONE-MODULES-stylesheet.ejs" />
	<style>{
		jpml: {
			background-color: transparent
		}
	}</style>
	<style>{
			{
				#body: {
					display: {if: =options.hide_body, then:none, else:inherit}
				},
				#deco_container: {
					display:none
				},
				.byline: {
					display:{if: =options.show_byline, then:inherit, else:none}
				},
				.module_flashline: {
					display: {if: =options.show_flashline, then:inherit, else:none}
				}
			}
		]
	}</style>
	<style>{
		if: =scale.phone, then: {
			.module_headline: {
				padding: [-10, 19.5, 4, 19.5]
			},
			image: {
				height: {$multiply: [=view.width, .665 ]},
				display: inherit,
				padding: [0, 4, 0, 4]
			},
			.byline: {
				display: none
			},
			#body: {
				display: inherit
			},
			.body: {
				display: none
			},
			#summary: {
				display: inherit,
				text-align:left,
				padding: [0, 20, 0, 20]
			},
			.opinion_dek: {
				display: none
			},
			#article_status: {
				position: relative,
				padding: [{if: =options.show_body, then: 1, else: 5}, 4, 0, 4],
				left: -20,
				width: 16,
				height: 16,
				options: {
					identifier: =article.id
				}
			},
			#deco_container: {
				padding: [0, 4, 0, 4],
				if: =options.float_image, equals: right, then: {
					anchor-x: right,
					padding: [0, 4, 0, 4],
					width: 111
				}, else: {if: =view.height, less-than: 200, then: [0, 20, 14, 20], else: [0, 4, 0, 4]}
			},
			.opinion_flashline: {
				font-name: WhitneySSm-Semibold,
				font-size:12,
				line-height: 22,
				text-transform:uppercase,
				color: #878f8f,
				padding: [-11, 0, 4, 20],
				display: {if: =page.section, equals: "OPINION", then: none, else: {if: =article.category, equals: "Opinion", then: inherit, else: none}}
			}
		}, else: {
			.opinion_flashline: {
				display: {if: =page.section, equals: "OPINION", then: none, else: {if: =article.category, equals: "Opinion", then: inherit, else: none}},
				font-name:DJ5Exchange-Bold,
				font-size:12,
				line-height:12,
				color: =page.tint,
				text-transform:uppercase,
				padding:[0, 0, 6, 0]
			},
			.opinion_dek:{
				font-name:WhitneySSm-Medium,
				font-size: 12,
				line-height: 18,
				color: #878f8f,
				display: none,
				padding:[0, 0, 10, 0]

			},
			#summary: {
				display: none
			}
		}
	}</style>
	<style>{
		if: =options.float_image, equals: right, then: {
			image: {
				width: 111,
				height: 111,
				padding: [0, 4, 0, 4],
				image-scale: 0.5
			}
		}
	}</style>
	<style>{
		if: =options.show_opinion_dek, equals: true, then: {
			.opinion_dek: {
				display: inherit
			}
		}
	}
	</style>
	<box id="deco_container" embed="deco-image">
	</box>
	<panel id="vertical" >
		<p class="opinion_flashline">OPINION</p>
		<panel id="body" class="vertical-grid-module">
			<panel class="body">
			</panel>
		</panel>
	 </panel>
</jpml>