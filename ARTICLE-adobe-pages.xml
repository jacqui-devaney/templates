<pages preprocessor="preprocessor.ejs" class="article">

                <page template="ARTICLE-adobe-front_template.xml" type="prefix" for="tablet">
                                <link id="view" module="ARTICLE-adobe-front_module.xml"/>
                </page>

    <!-- These pages will repeat as needed, hence the "repeat" type -->
                <page template="ARTICLE-adobe-continuation_template.xml" type="repeat" for="tablet">
                                <link id="view" module="ARTICLE-adobe-continuation_module.xml"/>
                </page>

    <!-- The "suffix" type is used to render the last page. -->
                <page template="ARTICLE-adobe-continuation_template.xml" type="suffix" for="tablet">
                                <link id="view" module="ARTICLE-adobe-continuation_module.xml"/>
                </page>

                <!-- phone -->
			    <page template="ARTICLE-adobe-front-phone_template.xml" type="prefix" for="phone">
			                    <link id="view" module="ARTICLE-adobe-front-phone_module.xml"/>
			    </page>
			    <page template="ARTICLE-adobe-continuation-phone_template.xml" type="repeat" for="phone">
			                    <link id="view" module="ARTICLE-adobe-continuation-phone_module.xml"/>
			    </page>
			    <page template="ARTICLE-adobe-continuation-phone_template.xml" type="suffix" for="phone">
			                    <link id="view" module="ARTICLE-adobe-continuation-phone_module.xml"/>
			    </page>
</pages>
