<pages preprocessor="preprocessor.ejs" class="article">
                <page template="ARTICLE-front-v-slideshow_template.xml" type="prefix" for="tablet">
                                <link id="view" module="ARTICLE-front-v-slideshow_module.xml"/>
                </page>

    <!-- These pages will repeat as needed, hence the "repeat" type -->
                <page template="ARTICLE-continuation_template.xml" type="repeat" for="tablet">
                                <link id="view" module="ARTICLE-continuation_module.xml"/>
                </page>

    <!-- The "suffix" type is used to render the last page. -->
                <page template="ARTICLE-continuation_template.xml" type="suffix" for="tablet">
                                <link id="view" module="ARTICLE-continuation_module.xml"/>
                </page>
                 <page template="GENERIC-fullpagead-template.xml" type="interstitial" for="tablet"/>
                           <!-- phone -->
                <page template="ARTICLE-front-phone_template.xml" type="prefix" for="phone">
                                <link id="view" module="ARTICLE-front-phone_module.xml"/>
                </page>
                <page template="ARTICLE-continuation-phone_template.xml" type="repeat" for="phone">
                                <link id="view" module="ARTICLE-continuation-phone_module.xml"/>
                </page>
                <page template="ARTICLE-continuation-phone_template.xml" type="repeat" for="phone">
                                <link id="view" module="ARTICLE-continuation-phone_module.xml"/>
                </page>
                <page template="ARTICLE-continuation-phone_template.xml" type="suffix" for="phone">
                                <link id="view" module="ARTICLE-continuation-phone_module.xml"/>
                </page>
                <page template="GENERIC-fullpagead-template.xml" type="interstitial" for="phone"/>
</pages>
