<jpml id="DECO_module">
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="PHONE-MODULES-stylesheet.ejs" />
	<style>{
			image:{
				width:=view.width,
				height: {$subtract:[=view.height, 1]},
				image-scale: {if: =options.full_screen, then:.9, else:1}
				
			},
			#deco_caption_container: {
				bottom:0,
				background-color:"rgba(0, 0, 0, .5)",
				padding:[10, 0]
				
			},
			.deco_caption: {
				display:{if: =options.show_caption, then:inherit, else:none}
			}
	}</style>
			<box id="deco_container" embed="deco-image">
				<image embed="summary-image" />
				<box id="deco_caption_container">
					<p class="deco_headline"><span embed="headline" /><mark class="key" /></p>
					<panel class="deco_caption">
						<p embed="body-first-p" />
					</panel>
				</box>
			</box>
			
</jpml>
