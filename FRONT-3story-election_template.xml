<jpml id="FRONT-3story-election_template">
	<style src="GLOBAL-stylesheet.ejs" />
    <style src="GRID-stylesheet.ejs"/>
	<style src="RAIL-stylesheet.ejs" />
    <style>{
    	#page_details: {
			display: inherit,
			frame: [0, 0, 10, 10],
			options: {
                tintColor: { if: =page.section, equals: "WSJ_MAGAZINE", then: #66, else: white },
				tintTitle: true,
				title: { if: =page.section, equals: "WSJ_MAGAZINE", then: "WSJ. MAGAZINE" }
			}
		}
	}</style>
	<style> {
		$switch: [
			{if: =scale.rail, then: {
				#deco: {
					width: =view.width
				}
			}},
			{if: =portrait, then: {
				jpml: {padding:[0]},
				#deco:	{
					top:0,
					height:1024,
					position: absolute,
					options:{very_large_caps_headline:true, image_idiom:portrait, white_text:true, full_screen:true, large_body:true}
				},
				#b1:	{
					top:550,
					height:150,
					options:{medium_headline:false, hide_body:true, show_flashline:false, small_image:false, show_image:false, show_headline:false}
				},
				#b2:	{
					top:800,
					height:150,
					options:{medium_headline:false, show_body:false, show_flashline:false, small_image:false, show_image:false, show_headline:false}
				}

			}},
			{if: =landscape, then: {
				jpml: {padding:[0]},
				#deco:	{
					top:0,
					height:768,
					position: absolute,
					options:{very_large_caps_headline:true, white_text:true, image_idiom:landscape, full_screen:true, large_body:true}
				},
				#b1:	{
					top:400,
					height:150,
					options:{}
				},
				#b2:	{
					top:600,
					height:150,
					options:{}
				}
			}}
		]
	} </style>
	<box id="page_details" class="tablet_only" embed="pagedescription" />
	<box id="deco" embed="article" class="column_full positionx_full maude unit_full" module="FULL-SIZE_module.xml" />
	<box id="b1" embed="article" class="landscape-columns-6 portrait-columns-6 landscape-xposition-1 portrait-xposition-1 maude unit_plain" module="ELECTION_COVER_module.xml" />
	<box id="b2" embed="article" class="landscape-columns-6 portrait-columns-6 landscape-xposition-1 portrait-xposition-1 maude unit_plain" module="ELECTION_COVER_module.xml" />

</jpml>
