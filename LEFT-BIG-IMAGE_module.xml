<jpml id="LEFT-IMAGE_module">
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="GLOBAL-stylesheet.ejs" />
	<style>{
        $join: [
			{jpml: {
				padding:[0, 0, 8, 8]
			}},
			{ $switch: [
				{ if: =options.no_border, then: {
					#wrapper: {
						border-width: [0, 0, 0, 0],
						padding: [0, 0, 8, 0]
					}
			
				}},
				{ if: true, then: {
					#wrapper: {
						border-width: [1, 0, 0, 0],
						border-color: #b1aca1,
						padding: [8, 0, 8, 0]
					}
					}}
			]},
			
			{#headline: {padding:[2, 0, 0, 0]}
			},
			{#body: { 
	            column-count: {if: =options.two_columns, then:2, else:1},
	            column-gutter: 15
	        }},
			{#image_wrapper: { 
				left:0,
				top:0,
				bottom:0,
				position:relative,
				padding: [0, 15, 8, 0 ],
				pixels-per-point-x:1,
				pixels-per-point-y:1
			}},
			
			{#image_container: { 
				width: {$multiply: [=view.height, .97]},
				display: {if: =options.hide_image, then:none, else:inherit}
			}},
			{.byline: {display: {$switch: [
				{if: =scale.small, then:{if: =options.byline, then:inherit, else:none}},
				{if: =scale.large, then: inherit}
			]}}},
			{#body-first-p: {text-indent: {$switch: [
				{if: =scale.small, then:{if: =options.no_indent, then:0, else:inherit}},
				{if: =scale.large, then: inherit}
			]}}}
				
		]	
		
		}</style>
	<box id="wrapper">
		<panel id="headline">
			<p class="module_headline"><span embed="headline" /><mark class="key" /></p>
		</panel> 
	</box>   
	<box id="image_wrapper">
		<box id="image_container">
		    <image embed="summary-image" />
		</box>
	</box>
	<panel id="body">
		<p class="byline" embed="byline"/>
		<panel class="body" embed="body"/>
	</panel>
</jpml>
