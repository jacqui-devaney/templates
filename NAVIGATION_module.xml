<jpml id="NAVIGATION_module">
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="PHONE-MODULES-stylesheet.ejs" />
	<style>{
		jpml: {
			background-color: =options.background_color,
			padding:[2,25,0, 25]
		},

		#deco_container: {
			display: {
				if: {$count:[=article.thumbnail]},
				more-than: 0,
				then: inherit,
				else: none
			},
			anchor-x:left,
			anchor-y:left,
			width: 175
		},

		.byline: {
			display: {if: =options.show_byline, then:inherit, else:none}
		},

		.m_byline: {
			content: =article.byline
		},

		.article_subhed: {
			display: {if: =options.show_subhed, then:inherit, else:none},
			font-name: DJ5Exchange-MediumItalic,
			font-size:14,
			line-height:17,
			color: #666666
		},

		.m_subhed: {
			content: =article.deckline
		},

		.module_headline: {
			font-name: DJ5Exchange-SemiBold,
			font-size: 18,
			line-height:19
		},

		#module_text: {
			padding:[5,0,10,0]
		},

		.body: {
			display: inherit,
			font-name: DJ5Exchange-Medium,
			font-size:13,
			line-height:16
		},
		
		.m_summary: {
			content: =article.summary
		},

		image: {
			height: 115,
			width: 160,
    		padding:[5, 0, 0, 0],
    		background-color: inherit,
			options: {
				source: {$join: ["url(", =article.thumbnail, ")"]}
			}
		}
	}</style>

	<box id="deco_container" embed="deco-image">
		<image embed="summary-image" />
	</box>
	<panel id="module_text">
		<p id="headline" class="module_headline"><mark class="m_headline" /></p>
		<p class="article_subhed"><mark class="m_subhed"/></p>
        <p class="byline"><mark class="m_byline"/></p>
        <p class="body"><mark class="m_summary"/></p>
    </panel>

</jpml>
