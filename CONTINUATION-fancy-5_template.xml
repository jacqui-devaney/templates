<jpml id="CONTINUATION-fancy-5_template">
	<style src="CONTINUATION-stylesheet.ejs" /> 
	<style src="GLOBAL-stylesheet.ejs" /> 
	<style src="PHONE-stylesheet.ejs" /> 
    <style>{
		#deco: {options: { $switch: [
				{if: =scale.phone, then: {normal_headline:true, G_image:true, small_caption:true}},
				{if: =portrait, then: {normal_headline:true, bottom_border:true}},
				{if: =landscape, then: {normal_headline:true, bottom_border:true, F_image:{if: =widescreen, then:true, else:false}}}			
			]}},
			#b1 : {
				options: {hide_image:{if: =portrait, then:true}, hide_strap: {if:=articles.b1.show_subsection, then: false, else: {if: =scale.phone, then:true, else:false}}, bind: {if:=scale.phone,then:none}, reuse:{if:=scale.phone,then:continuation}} 
			},
			#b2 : {
				options: {hide_image:{if: =landscape, then:true}, hide_strap: {if:=articles.b2.show_subsection, then: false, else: true}, bind: {if:=scale.phone,then:none}, reuse:{if:=scale.phone,then:continuation}} 
			},
			#b3 : {
				options: {hide_image:{if: =portrait, then:true}, hide_strap: {if:=articles.b3.show_subsection, then: false, else: true}, bind: {if:=scale.phone,then:none}, reuse:{if:=scale.phone,then:continuation}} 
			},
			#b4 : {
				options: {hide_image:{if: =portrait, then:true}, hide_strap: {if:=articles.b4.show_subsection, then: false, else: true}, bind: {if:=scale.phone,then:none}, reuse:{if:=scale.phone,then:continuation}} 
			}
			
		

    }</style>
	<style>{
    $switch: [ 
        {if: =scale.phone, then: {
	        #b1: {
						height: {if:=articles.b1.show_subsection, then:inherit, else:50}
			},
			#b2: {
	                    height: {if:=articles.b2.subsection, equals:=articles.b1.subsection, then: 50} 
	        },
	        #b3: {
	                    height: {if:=articles.b3.subsection, equals:=articles.b2.subsection, then: 50} 
	        },
	        #b4: {
	                    height: {if:=articles.b4.subsection, equals:=articles.b3.subsection, then: 50} 
	        }
       }},
        {if: =portrait, then: {
            #b1 : { 
					frame: {$switch: [
						{if: =widescreen, then: [0, 0, 256, 349]},
						{if: =scale.large, then: [0, 0, 256, 411]}
					]}
			},
            #b2 : { 
					frame: {$switch: [
						{if: =widescreen, then: [0, 357, 256, 518]},
						{if: =scale.large, then: [0, 419, 256, 456]}
					]}
			},
            #b3 : { 
					frame: {$switch: [
						{if: =widescreen, then: [256, 357, 256, 518]},
						{if: =scale.large, then: [256, 419, 256, 456]}
					]}
			},
            #b4 : { 
					frame: {$switch: [
						{if: =widescreen, then: [512, 357, 256, 518]},
						{if: =scale.large, then: [512, 419, 256, 456]}
					]}
			},
            #deco : { 
                    frame: {$switch: [
                        {if: =widescreen, then: [264, 8, 491, 345]},
                        {if: =scale.large, then: [264, 8, 491, 395]}
                    ]}
			}
        }},
        {if: =landscape, then: {
	        #b1 : { frame: [0, 0, 256, 619] },
	        #b2 : { frame: [256, 0, 256, 619] },
	        #b3 : { frame: [519, 419, 256, 200] },
	        #b4 : { frame: [775, 419, 249, 200] },
	        #deco : { frame: [521, 8, 491, 395] }
        }}
    ]}</style>
    <box id="b1" class="maude unit_continuation_strap" embed="article" module="CONTINUATION-dynamic_module.xml" />    
    <box id="b2" class="maude unit_continuation_strap" embed="article" module="CONTINUATION-dynamic_module.xml" />
    <box id="b3" class="maude unit_continuation_strap" embed="article" module="CONTINUATION-dynamic_module.xml" />
    <box id="b4" class="maude unit_continuation_strap" embed="article" module="CONTINUATION-dynamic_module.xml" />
    <box id="deco" class="maude unit_G_deco" embed="article" module="DECO_module.xml" />

</jpml>

