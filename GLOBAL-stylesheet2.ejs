{
	jpml: {
		image-scale: { if: =intent.template, then: {$max:[=scale.width,=scale.height]}, else: 1 },
		pixels-per-point-x: { if: =intent.template, then: =scale.width, else: 1 },
		pixels-per-point-y: { if: =intent.template, then: =scale.height, else: 1 },

		min-height: {if-all: [=intent.template, =intent.section, =smoothPagination], then: 0},
		max-height: {if-all: [=intent.template, =intent.section, =smoothPagination], then: 10000}
	},

	.tablet_only: {
		display: { if: =scale.tablet, then: inherit, else: none }
	},

	.rail_only: {
		display: { if: =scale.rail, then: inherit, else: none }
	},

	.phone_only: {
		display: { if: =scale.phone, then: inherit, else: none }
	},
	.pullquote: {
		display: none
	},

	#prototype: {
		display: none
	},

	#body-first-media: {
	    display: none
	},

	#page_details: {
		display: { if: =scale.tablet, then: inherit, else: none },
		frame: [0, 0, 1, 1],
		options: {
			tintTitle: true
		}
	},
	#rail_content: {
		top: 0,
		height: {
			if: =landscape,
			then: 658,
			else: 914
		},
		border-width: [
			0,
			0,
			0,
			1
		],
		border-color: #d8d8d8
	},
	.column_full: {
		width: {
			if: =landscape,
			then: 1024,
			else: 768
		}
	}
}
