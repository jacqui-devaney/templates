<jpml id="CONTINUATION-1story-future-of-everything_template">
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="GRID-stylesheet.ejs" />
	<style src="ADVERTISING-stylesheet.ejs"/>
	
<style src="PHONE-stylesheet.ejs" />
<style src="RAIL-stylesheet.ejs" />
    <style>{
		if: =scale.tablet,then: {
    	#page_details: {
			frame: [0, 0, 10, 10],
			options: {
                if: =portrait, then: {
				title: ""
			}
		}
				title: "",
				tintColor: white
			}
        }}, else:{tintTitle: true}}
    </style>

	<style> {
		$switch: [
			{if: =scale.rail, then: {
				#b1: {
					width: =view.width
				}
			}},
			{if: =portrait, then: {
				jpml: {padding:[0]},
				#b1:	{
					top:0,
					height:1024,
					options:{very_large_caps_headline:true, image_idiom:portrait, white_text:true, full_screen:true, large_body:true}
				}

			}},
			{if: =landscape, then: {
				jpml: {padding:[0]},
				#b1:	{
					top:0,
					height:768,
					options:{very_large_caps_headline:true, white_text:true, image_idiom:landscape, full_screen:true, large_body:true}
				}
			}}
		]
	} </style>
	<box id="page_details" class="tablet_only" embed="pagedescription" />
	<box id="b1" embed="article" class="column_full positionx_full maude unit_full" module="FULL-SIZE_module.xml" />
</jpml>
