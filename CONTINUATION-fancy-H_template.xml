<jpml id="CONTINUATION-fancy-H_template">
	<style src="CONTINUATION-stylesheet.ejs" /> 
	<style src="GLOBAL-stylesheet.ejs" /> 
	<style src="PHONE-stylesheet.ejs" /> 
    <style>{
        #b2: {
					options: {hide_strap: {if:=articles.b2.subsection, equals:=articles.b1.subsection}} 
        },
        #b3: {
					options: {hide_strap: {if:=articles.b3.subsection, equals:=articles.b2.subsection}} 
        },
        #b4: {
					options: {hide_strap: {if:=articles.b4.subsection, equals:=articles.b3.subsection}} 
        },
        #b5: {
					options: {hide_strap: {if:=articles.b5.subsection, equals:=articles.b4.subsection}} 
        },
		#deco: {options: { $switch: [
				{if: =scale.phone, then: {bottom_headline:true, H_image:true, no_caption:true}},
				{if: =portrait, then: {bottom_headline:true, bottom_border:true, H_image:true, fake_deco:true}},
				{if: =landscape, then: {bottom_headline:true, bottom_border:true, H_image:true, fake_deco:true}}			
			]}}

    }</style>
	<style>{
    $switch: [ 
        {if: =scale.phone, then: {
	        #b2: {
	                    height: {if:=articles.b2.subsection, equals:=articles.b1.subsection, then: 44} 
	        },
	        #b3: {
	                    height: {if:=articles.b3.subsection, equals:=articles.b2.subsection, then: 44} 
	        },
	        #b4: {
	                    height: {if:=articles.b4.subsection, equals:=articles.b3.subsection, then: 44} 
	        },
	        #b5: {
	                    height: {if:=articles.b5.subsection, equals:=articles.b4.subsection, then: 44} 
	        }
       }},
        {if: =portrait, then: {
            #b2 : { 
					frame: {$switch: [
						{if: =widescreen, then: [0, 0, 256, 518]},
						{if: =scale.large, then: [0, 0, 225, 450]}
					]}
			},
            #b3 : { 
					frame: {$switch: [
						{if: =widescreen, then: [0, 357, 256, 518]},
						{if: =scale.large, then: [0, 450, 225, 426]}
					]}
			},
            #b4 : { 
					frame: {$switch: [
						{if: =widescreen, then: [256, 357, 256, 518]},
						{if: =scale.large, then: [225, 450, 273, 426]}
					]}
			},
			#b5 : { 
					frame: {$switch: [
						{if: =widescreen, then: [512, 357, 256, 518]},
						{if: =scale.large, then: [498, 450, 273, 426]}
					]}
			},
            #deco : { 
                    frame: {$switch: [
                        {if: =widescreen, then: [265, 0, 491, 345]},
                        {if: =scale.large, then: [225, 0, 545, 450]}
                    ]}
			}
        }},
        {if: =landscape, then: {
	        #b2 : { frame: [0, 0, 238, 620] },
	        #b3 : { frame: [238, 0, 238, 620] },
	        #b4 : { frame: [475, 440, 275, 180] },
	        #b5 : { frame: [750, 440, 275, 180] },
	        #deco : { frame: [475, 0, 550, 445] }
        }}
    ]}</style>
    <box id="b1" class="maude unit_continuation_strap" embed="article" module="CONTINUATION-dynamic_module.xml" />    
    <box id="b2" class="maude unit_continuation_strap" embed="article" module="CONTINUATION-dynamic_module.xml" />
    <box id="b3" class="maude unit_continuation_strap" embed="article" module="CONTINUATION-dynamic_module.xml" />
    <box id="b4" class="maude unit_continuation_strap" embed="article" module="CONTINUATION-dynamic_module.xml" />
    <box id="b5" class="maude unit_continuation_strap" embed="article" module="CONTINUATION-dynamic_module.xml" />
    <box id="deco" class="maude unit_7" embed="article" module="DECO_module.xml" />

</jpml>

