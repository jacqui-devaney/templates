<jpml id="RIGHT-INSET-IMAGE_module">
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="PHONE-MODULES-stylesheet.ejs" />
	<style>{
        $join: [
			{ $switch: [
				{ if: =options.border, then: {
					#wrapper: {
						border-width: [1, 0, 0, 0],
						border-color: #b1aca1,
						padding: [8, 8, 0, 8]
					}
			
				}},
				{ if: =options.right_border, then: {
					#wrapper: {
						border-width: [0, 1, 0, 0],
						border-color: #b1aca1,
						padding: [8, 8, 0, 8]
					}
			
				}},
				{ if: =options.right_top_border, then: {
					#wrapper: {
						border-width: [1, 1, 0, 0],
						border-color: #b1aca1,
						padding: [8, 8, 0, 8]
					}
			
				}},
				{ if: true, then: {
					#wrapper: {
					border-width: [0],
					padding: [8, 8, 0, 8]
					}
					}}
			]},
		{#body: { 
            column-count: {if: =options.two_columns, then:2, else:{$divide: [=view.width, {$multiply:[250, =scale.dpi]}]}},
            column-gutter: 20
        }},
		{#body_container: {
			padding: [0, 0, {if: =options.bottom, then:15, else:8}, 0]
		}},
		{#image_container: { 
			anchor-x: right,
			width: {if: =options.C_image, then:177, else:86},
			pixels-per-point-x:{if: =scale.small, then:.7, else:1},
			pixels-per-point-y:{if: =scale.small, then:.7, else:1},
			image-scale:{if: =scale.small, then:.7, else:1}
			
		}},
		{image: {
			width:{if: =options.C_image, then:167, else:76},
			height:{if: =options.C_image, then:94, else:76},
			padding: [ 0, 0, {if: =options.C_image, then:10, else:8}, 10 ]
			
		}},
        {#headline: { padding: [ 0, 4, 0, 0 ] }},
		{.byline: {
		display: {$switch: [
			{if: =scale.small, then:{if: =options.byline, then:inherit, else:none}},
			{if: =scale.large, then: {if: =options.no_byline, then:none, else:inherit}}
		]}
		}},
		{.body: {padding:{if: =options.byline, then:[0], else:[3, 0, 0, 0]}}},
		{#body-first-p: {text-indent: {if: =options.no_indent, then:0, else:inherit}}},
		{.highlight_flashline: {display:{if:=options.show_flashline, then:inherit, else:none}}}
		
		]
	}</style>
	<style>{
		if: =scale.phone, then: {
			jpml: {
				border-width: [{if: =options.top_border, then:1, else:0}, 0, {if: =options.no_border, then:0, else:1}, 0],
				border-color: #d6d6d6,
				padding: [0, 8, 0, 8]
			},
			#wrapper: {
				padding:[0],
				anchor-y:middle,
				border-color:#d6d6d6
			},
			#image_container: { 
				width:86,
				pixels-per-point-x:1,
				pixels-per-point-y:1,
				image-scale:1,
				display:{if: =options.hide_image, then:none, else:inherit}
				
			},
			image: { 
				image-scale: 1,
				pixels-per-point-x:1,
				pixels-per-point-y:1,
				height:76
			},
			#body_container: {
				display:none
			},
			#headline: {
				padding:[0, 0, 0, 0],
				vertical-align:top
			}
			
		}, else:{}
	
	}</style>
	
   	<box id="wrapper">
 		<box id="image_container">
			<image embed="summary-image" />
		</box>
		<panel id="headline">
			<p class="highlight_flashline" embed="flashline" />
			<p class="module_headline"><span embed="headline" />kashf <mark class="key" /></p>
		</panel>
		<panel id="body_container">
			<panel id="body">
	            <p class="byline" embed="byline"/>
	            <panel class="body" embed="body"/>
	        </panel>
	    </panel>
	</box>
</jpml>
