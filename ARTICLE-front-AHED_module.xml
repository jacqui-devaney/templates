<jpml id="ARTICLE-front-AHED_module">
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="GLOBAL-stylesheet.ejs" />
	<style>{
		$join: [
		{#header_top: { padding:[18, 10, 8, 15] }},
		{#body_container: { 
            padding: [10, 20, 0, 20],
			column-count: {$divide: [=view.width, {$multiply:[250, =scale.dpi]}]},
            column-gutter: 30,
			column-height:balance,
			flow: article_body,
			layout-grid-line: {$multiply: [22, =view.zoomlevel]},
			layout-grid-line-offset: {$multiply: [20, =view.zoomlevel]}
			
        }},
		{.article_body:{
			text-align:justify,
			hyphens:auto,
			column-min-height:50
		}},
		{#media: {
			width:546,
			height:385,
			anchor-x:center,
			options: {
				id: =page.number
			}
		}},
		{if: =portrait, then: {
            .portrait_bucket:	{ frame: [14, 10, 565, 402], display:inherit },
            .landscape_bucket:	{ display:none  },
            .landscape_media:	{ display:none  }
			

        }, else: {
        	.landscape_bucket:	{ frame: [302, 10, 565, 402], display:inherit},
            .portrait_bucket:	{ display:none  },
            .portrait_media:	{ display:none  }

        }},
		{image: {
			width:113,
			height:113,
			padding: [ 8, 18, 8, {if: =portrait, then: 18, else:0} ]

		}},
		{#image_container: { 
			anchor-x: {if: =portrait, then: center, else:left},
			top:{if: =portrait, then: 70, else:100},
			width: {if: =portrait, then: 149, else:131},
			pixels-per-point-x:1,
			pixels-per-point-y:1,
			image-scale:1

		}},

		{#filler: {
			position: relative,
			top: 10,
			left: 0,
			right: 0,
			bottom: 0,
			min-height: 0,
			border-image:url(articleBackground.png),
			border-width: [16, 0, 0, 0],
			border-slice: [16, 0, 0, 0]
		}},
		{#article_advertisement: {
			min-height: 206,            
			min-width: 555,            
			anchor-x: center,            
			anchor-y: middle        

		}}
		]
    }</style>
	<box id="continues_label">
		<p><mark id="continues" /></p>
	</box>
	<box id="mediabucket_container" class="portrait_bucket">
        <box id="media" class="portrait_media" embed="media" />
    </box>
    
    <panel id="header_top">
        <p class="article_flashline" embed="flashline"/>
        <p class="article_headline"><span embed="headline"/><mark class="key"/></p>
		<h2 class="article_subhed" embed="subhed" />
	</panel>
	<box class="hr"></box>
	<panel>
		<box id="mediabucket_container" class="landscape_bucket">
			<box id="media" embed="media" class="landscape_media" />
		</box>
		<panel id="body_container">
			<box id="image_container">
				<image embed="summary-image" target-width="113" target-height="113" />
			</box>
			<p class="article_byline" embed="byline"/>
	        <panel class="article_body" embed="body"/>
	    
		</panel>
	</panel>
	<box id="filler">
		<box id="article_advertisement" class="ad-twocolumn" embed="advertisement"/>
	</box>
	
</jpml>


