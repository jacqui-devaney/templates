<jpml id="SKYBOX_module">
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="PHONE-MODULES-stylesheet.ejs" />
    <style>{
		jpml: {
				background-color:{if: =options.white_highlight, then:#ffffff, else:#efefef},
				padding: [{if: =options.top_border, then:8, else:0}, 8, 10, 8],
				border-width: [{if: =options.top_border, then:1, else:0}, 0, 0, 0],
				border-color:#b1aca1
		},
		
		#image_container: {
			position:relative,
			height:{if: =options.D_image, then:153, else:249},
			padding:[0]
		},
		image: {
			pixels-per-point-x:1,
			pixels-per-point-y:1,
			options: {
				$switch: [
					{ if: =options.D_image, then: {match: { width:262, height:174, min-height:174 } } },
					{ if: =options.C_image, then: {match: { width:167, height:94, min-height:94 } } },
					{ if: =options.E_image, then: {match: { width:359, height:239, min-height:239 } } }
				]
			},
			image-scale: 1,
			anchor-x:center,
			gravity:aspect-fit
		},
		.text: {
			padding:{if: =options.large_padding, then:[10, 0, 25, 0], else:[0, 0, 5, 0]}
		}
    }</style>
	<style>{
		if: =scale.phone, then: {
			#image_container: { 
				display:none
			},
			.portrait: {
				display:none
			},
			.highlight_body: {
				display:none
			},
			jpml: {
				padding: [0, 8],
				background-color:#ffffff,
				border-width: [0, 0, {if: =options.no_border, then:0, else:1}, 0],
				border-color:#d6d6d6
			},
			#wrapper: {
				anchor-y:middle
			},
			.highlight_byline: {
				display:none
			},
			.highlight_body: {
				display:none
			}
			
		}, else:{}
	
	}</style>
	<panel id="wrapper">
		<panel class="text">
			<p class="skybox_large_headline"><span embed="headline" /><mark class="key" /></p>
			<h2 class="skybox_large_dek"><span embed="subhed" /></h2>

		</panel>
		<box id="image_container">
	        <image embed="summary-image" />
	    </box>	 
	</panel>
</jpml>
