<jpml id="COLUMN-IMAGE_module">
	<style src="GLOBAL-stylesheet2.ejs" />
	<style src="GLOBAL_MODULES-stylesheet2.ejs" />
	<style src="MODULES_COMMON-stylesheet.ejs" />

	<style>{
    	#deco_container: {
            <!-- don't do this at home -->
            <!-- (=options.image_column_number - 1) * (((=view.width - ((=options.body_column_count - 1) * column_gutter_value)) / =options.body_column_count) + column_gutter_value) -->
        	left: { 
				if-all: [
					{ if: =options.body_column_count, more-than: 1, then: true, else: false },
					{ if: =options.image_column_number, more-than: 1, then: true, else: false },
					{ if-any: [ { if: =options.image_column_number, equals: =options.body_column_count }, { if: =options.body_column_count , more-than: =options.image_column_number }], then: true, else: false }
				],
					then: { $multiply: [{ $subtract: [=options.image_column_number, 1] }, { $add: [{ $divide: [{ $subtract: [=view.width, { $multiply: [{ $subtract: [=options.body_column_count, 1] }, 12] }] }, =options.body_column_count] }, 12] }] },
					else: 0
			},
        	top: 0,
            <!-- if (=options.body_column_count > 1) (=view.width - ((=options.body_column_count -1) * column_gutter_value)) / =options.body_column_count -->
			width: { if: =options.body_column_count, more-than: 1, then: { $divide: [{ $subtract: [=view.width, { $multiply: [{ $subtract: [=options.body_column_count, 1] }, 12] }] }, =options.body_column_count] } },
			display: { if: =options.show_image, then:inherit, else:none }
		},
		#body: {
			<!-- keep this here to make sure nothing overrides the column-gutter, because the deco size strictly depends on it -->
			column-count: {if: =options.body_column_count, more-than:0, then:=options.body_column_count, else: 1},
			column-gutter: 12,
			display: { if: =options.hide_body, then:none, else:inherit }
		}
	}</style>
	
	<panel id="vertical" >
		<panel id="headline">
			 <p class="module_flashline"><mark class="flashline-mark" /></p>
			 <p class="module_headline"><mark class="m_headline" /></p>
			 <h2 id="subhead"><mark class="subhed-mark" /></h2>
		</panel>
		<panel id="body" class="vertical-grid-module">
			<panel class="body">
				<box id="deco_container" embed="deco-image">
					 <image class="summary-image"/>
				</box>
				<p class="byline"><mark class="byline-mark"/></p>
				<p>
					<mark class="body-first-p-mark" />
					<mark class="body-mark"/>
				</p>
			</panel>
		</panel>
	 </panel>
</jpml>

