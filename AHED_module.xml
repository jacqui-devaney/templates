<jpml id="AHED_module">
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="AHED-stylesheet.ejs" />
	<style src="PHONE-MODULES-stylesheet.ejs" />
	<style>{
		$join: [
			{ $switch: [
				{ if: =article.type, equals:"A-hed", then: {
					jpml: {
						border-width: [0, 0, 0, 0],
						padding: [0]
					}
			
				}},
				{ if: =options.top_border, then: {
					jpml: {
						border-width: [1, 0, 0, 0],
						padding: [10, 10, 0, 0],
						border-color: #cfcfcf
					}
			
				}},
				{ if: =options.left_border, then: {
					jpml: {
						border-width: [0, 0, 0, 1],
						border-color: #cfcfcf,
						padding: [0, 0, 0, 10]
					}
			
				}},
				{ if: =options.right_border, then: {
					jpml: {
						border-width: [0, 1, 0, 0],
						border-color: #cfcfcf,
						padding: [0, 10, 0, 0]
					}
			
				}},
				{ if: true, then: {
					jpml: {
						border-width: [0, 0, 0, 0],
						padding: [0, 10, 0, 0]
					}
				}}
			]},
			{
				#image_wrapper: {
					width:72,
					anchor-x:right,
					anchor-y:bottom
	            },
				image: {
					pixels-per-point-x:1,
					pixels-per-point-y:1,
					height: 62, 
					padding: [0, 0, 13, 9],
					display:{if: =article.type, equals:"A-hed", then: inherit, else:none}
	            },
				.byline: {
					display: {if-all:[{if: =options.show_byline}, {if: =scale.tablet}], then:inherit, else:none}
				},
				.ahed_subhed: {
					display: {if-all:[{if: =options.show_subhed}, {if: =scale.tablet}], then:inherit, else:none}
				},
				#body-first-p: {
					text-indent: {if: =options.indent, then:20, else:0}
				},
				.module_headline:{
					display:{if: =article.type, equals:"A-hed", then: none, else:inherit}
				},
				#ahed_content:{
					display:{if: =article.type, equals:"A-hed", then: inherit, else:none}
				}
			}
		
			]
		}</style>
		<style>{
			if: =scale.phone, then: {
				jpml: {
					padding:[0],
					border-width: [{if: =options.top_border, then:1, else:0}, 0, {if: =options.no_border, then:0, else:1}, 0],
					border-color: #d6d6d6,
					anchor-y:middle				
				},
				#headline: {
					padding: [{if: =options.top_align, then:8, else:0}, 8, 0, 8]
				},
				#vertical: {
					vertical-align: {if: =options.top_align, then: top, else: middle}
				}

			}, else:{}
		}</style>
		
        <box id="image_wrapper" class="hidden_phone">
			<image target-width="79" target-height="79" embed="summary-image"/>
		</box>
		<panel id="vertical">
			<panel id="headline">
				<p class="module_headline"><span embed="headline" /><mark class="key" /></p>
		        <panel id="ahed_content">
					<p class="ahed_headline"><span embed="headline"/><mark class="key"/></p>
		        	<h2 class="ahed_subhed" embed="subhed"/>
				</panel>
			</panel>
			<panel id="body">
	            <p class="byline" embed="byline"/>
	            <panel class="body hidden_phone" embed="body"/>
	        </panel>
		</panel>

</jpml>
