<jpml id="ARTICLE-continuation-phone-no-ads_module">
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="PHONE-MODULES-stylesheet.ejs" />
	<style>{
		$join: [
		{#body_container : { padding: [0, 10, 0, 10]}},
		{.article_body: { 
			line-height: {$multiply: [22, =view.zoomlevel]}
        }},
		{#body_continuation: {
			content: from-flow(article_body),
			flow: article_body
		}},
		{#filler: {
			position: relative,
			top: 10,
			left: 0,
			right: 0,
			bottom: 0,
			min-height: 50,
			border-image:url(articleBackground.png),
			border-width: [16, 0, 0, 0],
			border-slice: [16, 0, 0, 0]
		}}
		]
    }</style>
	<box id="pagenext" embed="pagenext" />
	<box id="pageback" embed="pageback" />
	<box id="pagedown" embed="pagenext" />
	<box id="pageup" embed="pageback" />
	
	<panel id="body_container">
    	<panel class="article_body" id="body_continuation" embed="body" />
	</panel>
	<box id="filler">
        
	</box>
</jpml>
