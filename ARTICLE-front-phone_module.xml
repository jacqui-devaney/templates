<jpml id="ARTICLE-front-phone_module">
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="ARTICLE-stylesheet.ejs" />
	<style src="PHONE-MODULES-stylesheet.ejs" />
	<style src="MEDIA-stylesheet.ejs" />
	<style>{
		jpml: {
			background-color: =options.background_color
		}
	}</style>
	<style>{
		jpml: { min-height: 0 },
		#body_container: {
			flow: article_body
		},
		.article_body: {
            hyphens: auto,
            padding: [0, 16, 0, 16]
		},
		.article_flashline: {
            font-name: Whitney-Semibold,
            font-size: 13,
            line-height: 22,
            border-width: [0, 0, 1, 0],
            border-color: #e1e0df
		},
        #media_credit:{
            padding: [0, 16, 0, 16],
            text-transform: uppercase
        },
        #media_container:{
            padding: [0, 0, 19, 0]
        },
        #media_asset:{
            padding: [{if: =media.height, more-than: =media.width, then: -16, else: 0}, {if: =media.height, more-than: =media.width, then: 16, else: 4}, {if: =media.height, more-than: =media.width, then: -10, else: 10}, {if: =media.height, more-than: =media.width, then: 16, else: 4}]
        },
        #media_caption: {
            layout-grid-line: 1,
            layout-grid-line-offset: 0,
            color: #4f5757,
            font-size: 17,
            line-height: 22,
            font-name: "Whitney-Book",
            padding: { if-all: [
                    { if: =page.number, equals: 0, then: true, else: false },
                    { if: =scale.phone, then: true, else: false }
                ], then: [0, 16, 0, 16], else: [0, 0, 0, 0]
        }},
        #mark_caption: {
            content: =media.caption
        }
	}</style>
	<p class="article_flashline" embed="flashline"/>

	<panel id="header_top">
		<p class="article_headline"><span embed="headline"/></p>
		<h2 class="article_subhed" embed="subhed" />
	</panel>

	<box id="media_container">
		<p id="media_title"><mark id="mark_media_title"/></p>
		<p id="media_vr_header"><mark id="mark_media_vr_header"/></p>
        <box id="media_asset" embed="media"/>
		<p id="media_vr_footer"><mark id="mark_media_vr_footer"/></p>
        <p id="media_caption"><mark id="mark_caption" /></p>
        <p id="media_credit"><mark id="mark_credit"/></p>
        <p id="media_vr_link"><a href="http://wsj.com/virtual-reality"><mark id="mark_media_vr_link"/></a></p>
    </box>

	<panel id="body_container">
		<p class="article_byline" embed="byline"></p>
		<p class="article_pubdate">Updated
			<span  embed="pubdate-string"/>
		</p>
		<panel class="article_body" embed="body"/>
	</panel>

</jpml>
