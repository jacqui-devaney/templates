<jpml id="IMAGE-OVERLA_module">
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="PHONE-MODULES-stylesheet.ejs" />
	<style>{
			image:{
				width:=view.width,
				height: {$subtract:[=view.height, 1]},
				image-scale: {if: =options.full_screen, then:.9, else:1}
				
			},
			#text_container: {
				bottom:0,
				background-color:"rgba(0, 0, 0, .5)",
				padding:[20, 10],
				height:120
				
			},
			.deco_caption: {
				display:{if: =options.show_caption, then:inherit, else:none}
			}
	}</style>
	<style>{
		if: =scale.phone, then: {
			jpml: {
				padding:[0],
				border-width: [{if: =options.top_border, then:1, else:0}, 0, {if: =options.no_border, then:0, else:1}, 0],
				border-color: #d6d6d6,
				anchor-y:middle				
			},
			#image_wrapper: { 
				anchor-x:right,
				position:relative,
				width: 76,
				padding:[8, 8, 0, 10],
				display:{if: =options.show_image, then:inherit, else:none}

			},
			#headline: {
				padding: [{if: =options.top_align, then:8, else:0}, 8, 0, 8]
			},
			image: { 
				height: 76,
				width:76,
				display:inherit,
				padding: [0]
			
			},
			#vertical: {
				vertical-align: {if: =options.top_align, then: top, else: middle}
			},
			.byline: {
				display:{if: =options.show_byline, then:inherit, else:none}
			},
			#body: {
				display:{if-any: [=options.show_body, {if: =page.section, equals: "OPINION"}], then:inherit, else:none},
				padding: [0, 8, 0, 8]
			}
			
		}, else: {}
	}</style>
	<box id="container" class="hidden_phone">
		<image embed="summary-image" />
		<box id="text_container">
			<p class="module_headline"><mark class="m_headline" /><mark class="key" /></p>
			<panel class="body">
				<p embed="subhed" />
			</panel>
		</box>
	</box>
	<box id="container" class="hidden_tablet">
		<box id="image_wrapper">
			<image id="deco-image" embed="summary-image" />
		</box>
		<panel id="vertical">
			<panel id="headline">
				<p class="module_headline"><mark class="m_headline" /><mark class="key" /></p>
			</panel>
			<panel id="body">
				<panel class="body" embed="body"/>
			</panel>
		</panel>
		
	</box>
			
</jpml>
