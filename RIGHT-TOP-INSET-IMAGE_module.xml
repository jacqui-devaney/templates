<jpml id="RIGHT-TOP-INSET-IMAGE_module">
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="PHONE-MODULES-stylesheet.ejs" />
	<style>{
        jpml: {padding:[10, 0, {if: =options.bottom, then:15, else:10}, 0]
		},
		#body: { 
            column-count: { if: =options.one_column, then:1, else:2},
            column-gutter: 20
        },
        #image_container: { 
			comment: "14 represents half of 28, which is 20 gutter + 8 jpml left padding",
			width:{$divide: [{$subtract: [=view.width, {$multiply:[=scale.dpi,28]}]}, 2]},
			padding: [0, 0, 8, 20],
			anchor-x:right,
			anchor-y:top,
			pixels-per-point-x:1,
			pixels-per-point-y:1,
			image-scale:1		
		},		
		image: {
			height:{$multiply: [{$subtract:[=view.width, {$multiply:[=scale.dpi,28]}]}, 0.33] },
			display: { if: =options.hide_image, then:none, else:inherit }
		},
		.invisible: { display:none },
		#small_headline: { display: { if: =options.small_headline, then:inherit }},
		#medium_headline: { display: { if: =options.medium_headline, then:inherit }},
		#large_headline: { display: { if: =options.large_headline, then:inherit }}
	}</style>
	<style>{
		if: =scale.phone, then: {
			#image_container: { 
				anchor-x:right,
				position:relative,
				width: 76,
				padding:[0, 10, 0, 15],
				pixels-per-point-x:1,
				pixels-per-point-y:1,
				image-scale:1

			},
			image: { 
				height: 76,
				display:inherit,
				padding: [0],
                options:{},
				image-scale: 1
				
			},
			.byline: {
				display:none
			},
			.body: {
				display:none
			},
			#headline: { padding: [0, 0, 0, 8]}
			
			
		}
	}</style>
	
	<box id="image_container">
		<image embed="summary-image"/>
	</box>
    <panel id="headline">
		<p id="small_headline" class="invisible"><span embed="headline" /><mark class="key" /></p>
		<p id="medium_headline" class="invisible"><span embed="headline" /><mark class="key" /></p>
		<p id="large_headline" class="invisible"><span embed="headline" /><mark class="key" /></p>
	</panel>
	<panel id="body-container">
		<panel id="body">
            <p class="byline" embed="byline"/>
            <panel class="body" embed="body"/>
        </panel>
    </panel>

</jpml>
