<jpml id="ARTICLE-front_module">
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="GLOBAL-stylesheet.ejs" />
	<style>{
		$join: [
		{#header_top: { padding:[0, 0, 8, 5] }},
		{#body_container: { 
			padding: [4, 5, 0, 5],
            column-count:{if: =portrait, then:{$divide: [=view.width, {$multiply:[250, =scale.dpi]}]}, else: 1},
            column-gutter: 20,
			column-height:balance,
			flow: article_body
        }},
		{#mediabucket: {frame: [3, 3, 570, 612] }},
		{if: =portrait, then: {
            #mediabucket_container:	{ frame: [0, 0, 582, 623]  }
        }, else: {
        	#mediabucket_container:	{ frame: [0, 0, 582, 623]  }
        }},
		{#filler: {
			position: relative,
			top: 10,
			left: 0,
			right: 0,
			bottom: 0,
			min-height: 0,
			border-image:url(articleBackground.png),
			border-width: [16, 0, 0, 0],
			border-slice: [16, 0, 0, 0]
		}}

		]
    }</style>
	
	<box id="mediabucket_container">
		<box id="mediabucket" embed="mediabucket" />
	</box>
	<panel id="header_top">
        <p class="offduty_article_headline"><span embed="headline"/><mark class="key"/></p>
		<h2 class="offduty_article_subhed" embed="subhed" />
    </panel>
	<panel id="body_container">
	    <p class="article_byline" embed="byline"/>
        <panel class="article_body" embed="body"/>
    </panel>
    <box id="filler">
	</box>
	
</jpml>


