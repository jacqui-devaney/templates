<jpml id="OPINION-5story-E-alternate_template">
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="OPINION-stylesheet.ejs" />
    <style src="PHONE-stylesheet.ejs" />
    <style>{
		#b1: {options:{small_headline:true, show_image:true, no_border:{if: =scale.phone, then:false, else:true}, byline:{if-any: [=scale.phone, =scale.large], then:false, else:true}, F_image:{if: =scale.small, then:true, else:false}, top_align:true}},
		#b2: {options:{small_headline:true, hide_summary:true, no_border:true, byline:{if-any: [=scale.phone, =scale.large], then:false, else:true}}},
		#b3: {options:{header:true, hide_dek:true, border:{if: =scale.phone, then:true, else:false}}},
		#b4: {options: {small_headline:true, hide_dek:true}},
		#b5: {options: {small_headline:true, no_border:{if: =scale.phone, then:false, else:true}, hide_dek:true}},
		.phone_ad: {display:{if: =scale.phone, then:inherit, else:none}},
		.tablet_ad: {display:{if: =scale.phone, then:none, else:inherit}},
		#h1: {options:{hide_image:{if-all: [=scale.small, =landscape], then:true, else:false}, byline:{if: =scale.phone, then:false, else:true}}},
		#h2: {options:{hide_image:{if-all: [=scale.small, =landscape], then:true, else:false}, byline:{if: =scale.phone, then:false, else:true}, no_border:{if: =scale.phone, then:true, else:false}}}
	}</style>
    <style>{
		$switch: [
			{if: =scale.phone, then: {
					#articles: {
						padding:[0], 
						border-width:[0]
					}
			}},
			{if-any: [=scale.large, =scale.small], then: {	
				$join: [
					{if: =portrait, then: {
							#articles:	{ frame: [8, 10, 362, 610] },
							#b3:	{ frame: [0, 0, 362, 220]},
							#b1:	{ frame: [388, 0, 377, 420]},
							#b2:	{ frame: [388, 420, 377, 196] }
						}, else: {
							#articles:	{ frame: [15, 10, 362, 610] },
							#b3:	{ frame: [0, 0, 362, 220]},
							#b1:	{ frame: [379, 0, 377, 420]},
							#b2:	{ frame: [379, 420, 377, 196]}
						}
					},
					{$switch: [
						{ if: =articles.b3.type, equals: "Letters", then: {
							_comment: "neither have the header",
							#b4: { frame: [0, 230, 362, 180] },
							#b5: { frame: [0, 420, 362, 180] }
						}},
						{ if: =articles.b4.type, equals: "Letters", then: {
							_comment: "b2 has the header",
							#b4: { frame: [0, 220, 362, 210], options:{header:true} },
							#b5: { frame: [0, 440, 362, 160] }
						}},
						{ if: =articles.b5.type, equals: "Letters", then: {
							_comment: "b3 has the header",
							#b4: { frame: [0, 230, 362, 180] },
							#b5: { frame: [0, 410, 362, 190], options:{header:true} }
						}}, 
						{ if: true, then: {
							_comment: "neither have the header",
							#b4: { frame: [0, 230, 362, 180] },
							#b5: { frame: [0, 420, 362, 180] }
						}}
		        	]}
		    	]   
				
			}}
		]
	}</style>

    <box id="articles">
		<box id="b1" embed="article" class="maude unit_166" module="TOP-IMAGE_module.xml" />
		<box id="b2" embed="article" class="maude unit_75" module="TOP-IMAGE_module.xml" />
	    <box id="ad_background" class="ad_light unit_ad maude phone_ad">
			<box id="highlight_ad" class="ad-rectangle" embed="advertisement" />
		</box>
		<box id="b3" embed="article" class="maude unit_75" module="OPINION-RANDO-LETTERS_module.xml" />
    	<box id="b4" embed="article" class="maude unit_75" module="OPINION-RANDO-LETTERS_module.xml" />
	    <box id="b5" embed="article" class="maude unit_75" module="OPINION-RANDO-LETTERS_module.xml" />
    </box>
    <box id="ad_background" class="ad_light maude unit_ad tablet_ad">
		<box id="highlight_ad" class="ad-rectangle" embed="advertisement" />
	</box>

    <box id="h1" embed="article" class="maude unit_highlight" module="HIGHLIGHTS_module.xml" />
    <box id="h2" embed="article" class="maude unit_highlight" module="HIGHLIGHTS_module.xml" />

    
</jpml>


