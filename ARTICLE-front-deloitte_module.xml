<jpml id="ARTICLE-front-deloitte_module">
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="GLOBAL-stylesheet.ejs" />
	<style>{
		$join: [
		{.deloitte:{
			background-position: top-left
		}},
		{.deloitte_article:{
			padding:[6, 0, 0, 15]
		}},
		{.deloitte_slug:{
			text-align:left,
			padding:[0, 0, 0, 15]
		}},
		{#header_top: { 
			padding:[6, 10, 8, 15],
			border-width:[1, 0, 0, 0],
			border-color:#e7e7e7
		}},
		{#body_container: { 
            padding: [10, 20, 0, 20],
			column-count: {$divide: [=view.width, {$multiply:[260, =scale.dpi]}]},
            column-gutter: 30,
			column-height:balance,
			flow: article_body,
			min-height: {if: =page.mediabucket, then:400, else:200},
			layout-grid-line: {$multiply: [22, =view.zoomlevel]},
			layout-grid-line-offset: {$multiply: [18, =view.zoomlevel]}
			
        }},

		{.body-bug: {
			display: none
		}},
		{#deloitte_close_wrap: {
			top:0,
			right:0,
			padding:[5, 10, 0, 0],
			width:70
		}},
		{#close_button_box: {
			top:inherit,
			right:inherit,
			left:0,
			bottom:0
		}},
		
		{#mediabucket: {
			width:314,
			height:229,
			anchor-x:center,
			anchor-y:top
		}},
		{if: =portrait, then: {
			#mediabucket_container:	{ frame: [379, 0, 354, 249],padding:[0, 0, 0, 0]  }
			
        }, else: {
			#mediabucket_container:	{ frame: [676, 0, 314, 249], padding:[0, 0, 0, 0] }
		}},
		{#filler: {
			position: relative,
			top: 10,
			left: 0,
			right: 0,
			bottom: 0,
			min-height: 0,
			border-image:url(articleBackground.png),
			border-width: [16, 0, 0, 0],
			border-slice: [16, 0, 0, 0]
		}},
		{#cio: {
			display:{if: =page.section, equals: "CIO", then:inherit, else:none}
		}},
		{#cfo: {
			display: {if: =page.section, equals: "CFO", then:inherit, else:none}
		}},
		{#risk: {
			display: {if: =page.section, equals: "RISK_AND_COMPLIANCE", then:inherit, else:none}
		}},
		{em: {
			font-name:Helvetica-Oblique
		}},
		{strong: {
			font-name:Helvetica-Bold
		}},
		{p: {
			padding:[0, 0, 10, 0]
		}},
		{cite: {
			font-name:Helvetica
		}}
		
		
		
		]
    }</style>
	<panel id="deloitte_article_header">
		<box id="deloitte_close_wrap">
			<box id="close_button_box" embed="close">
				<p id="close_button_p"><mark class="close"></mark></p>
			</box>
		</box>
		<panel class="deloitte_article">
			<panel class="deloitte" />
		</panel>
		<panel class="slug">
			<p class="deloitte_slug" id="cio">Business-led, Technology-enabled: Insight from Deloitte</p>
			<p class="deloitte_slug" id="cfo">CFO insight and analysis written and compiled by Deloitte</p>
			<p class="deloitte_slug" id="risk">Risk management, strategy and analysis written and compiled by Deloitte</p>
		</panel>
	</panel>
	<box id="continues_label">
		<p><mark id="continues" /></p>
	</box>
	
    <panel id="header_top">
        <p class="deloitte_article_headline"><span embed="headline"/><mark class="key"/></p>
	</panel>
	
	<panel id="body_container">
		<box id="mediabucket_container">
			<box id="mediabucket" embed="mediabucket" />
		</box>
        <panel class="deloitte_article_body" embed="body"/>
	    
	</panel>
	<box id="filler"/>
	
</jpml>


