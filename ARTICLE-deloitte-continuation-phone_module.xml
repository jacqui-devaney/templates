<jpml id="ARTICLE-deloitte-continuation-phone_module">
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="ARTICLE-stylesheet.ejs" />
	<style src="PHONE-MODULES-stylesheet.ejs" />
	<style src="DELOITTE-stylesheet.ejs" />
	<style src="MEDIA-stylesheet.ejs" />
	<style>{
		$join: [
		{jpml: { min-height: 0 }},
		{#body_container : { padding: [0, 10, 0, 10]}},
		{.article_body: {
			line-height: {$multiply: [22, =view.zoomlevel]},
			text-align: justify,
			hyphens: auto,
			font-name: "Whitney-Medium"
        }},
		{#body_continuation: {
			content: from-flow(article_body),
			flow: article_body
        }},
		{if: =portrait, then: {
			#media: {
				top: 0,
				left:{if: =media.width, less-than: 360, then: 0, else: {if: =media.width, more-than: 484, then: 0, else: 0}},
				width: {$switch: [
					{if: =media.width, less-than: 360, then: 236},
					{if: =media.width, more-than: 484, then: 484},
					236
				]}
			}
        }, else: {
			#media: {
				top: 0,
				left:{if: =media.width, less-than: 360, then: 248, else: {if: =media.width, more-than: 484, then: 248, else: 248}},
				width: {$switch: [
					{if: =media.width, less-than: 360, then: 236},
					{if: =media.width, more-than: 484, then: 484},
					236
				]}
			}
        }}
		]
		]
    }</style>

	<panel id="body_container">
    	<panel class="article_body" id="body_continuation" embed="body" />
	</panel>
</jpml>
