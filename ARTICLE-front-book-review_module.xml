<jpml id="ARTICLE-front_module">
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="GLOBAL-stylesheet.ejs" />
	<style>{
		$join: [
		{#header_top: { padding:[18, 10, 8, 15] }},
		{#book_strap: { padding:[6, 10, -2, 15] }},
		{#body_container: { 
            padding: [10, 20, 0, 20],
			column-count: {$divide: [=view.width, {$multiply:[250, =scale.dpi]}]},
            column-gutter: 30,
			column-height:balance,
			flow: article_body,
			min-height: {if: =page.mediabucket, then:400, else:200},
			layout-grid-line: {$multiply: [22, =view.zoomlevel]},
			layout-grid-line-offset: {$multiply: [20, =view.zoomlevel]}
			
        }},

		{#media: {
			width:546,
			height:385,
			anchor-x:center,
			options: {
				id: =page.number
			}
		}},
		{if: =portrait, then: {
            #mediabucket_container:	{ frame: [0, 0, 565, 402]  }
        }, else: {
        	#mediabucket_container:	{ frame: [290, 0, 565, 422] }
        }},
		{#filler: {
			position: relative,
			top: 10,
			left: 0,
			right: 0,
			bottom: 0,
			min-height: 0,
			border-image:url(articleBackground.png),
			border-width: [16, 0, 0, 0],
			border-slice: [16, 0, 0, 0]
		}},
		{#article_advertisement: {
			min-height: 206,            
			min-width: 555,            
			anchor-x: center,            
			anchor-y: middle        

		}},
		{.book_title: {
		font-name:DJ5RetinaCd-Semibold,
		text-align:left,
		font-size:25,
		color:black;
		}},
		{.book_info: {
		font-name:DJ5RetinaCd-Semibold,
		text-align:left,
		font-size:18,
		color:black;
		}}
		]
    }</style>
	<box id="continues_label">
		<p><mark id="continues" /></p>
	</box>
	
    <panel id="header_top">
        <p class="article_flashline" embed="flashline"/>
        <p class="article_headline"><span embed="headline"/><mark class="key"/></p>
		<h2 class="article_subhed" embed="subhed" />
	</panel>
	
	<box class="hr"></box>
	
	<panel id="book_strap">
		<p class="book_title">Turing's Cathedral <span class="book_info">By Helen Berry, Pantheon, 401 pages, $29.95</span></p>
	</panel>
	
	<box class="hr"></box>
	
	<panel id="body_container">
		<box id="mediabucket_container">
			<box id="media" embed="media" />
		</box>
		<p class="article_byline" embed="byline"/>
        <panel class="article_body" embed="body"/>
	    
	</panel>
	<box id="filler">
		<box id="article_advertisement" class="ad-twocolumn" embed="advertisement"/>
	</box>
	
</jpml>


