<jpml id="ARTICLE-continuation-ads_module">
	<style src="GRID-stylesheet.ejs" />
	<style src="ADVERTISING-stylesheet.ejs" />
	<style src="ARTICLE-stylesheet.ejs" />
	<style>{
		$join:[
		{jpml: {
			padding:[0]
		}},
		{.article_body: { 
            column-count: {if: =landscape, then:3, else:2},
            column-gutter: 10,
			layout-grid-line: {$multiply: [24, =view.zoomlevel]},
			padding:[0, 10, 0, 0]
        }},
		{#body_continuation: {
			content: from-flow(article_body),
			flow: article_body
		}},
		{#article_ad: {
			top:0,
			height:704,
			left:768
		}},
		{if: =portrait, then: {
            #mediabucket_container:	{ frame: [0, 0, 480, 364]},
			#mediabucket: {
				width:480,
				height:354
			}
        }, else: {
	    	#mediabucket_container:	{ frame: [245, 0, 502, 351] },
			#mediabucket: {
				width:470,
				height:341
			}
        }}
		]
    }</style>
	
	<panel id="body_container">
		<box id="mediabucket_container">
			<box id="mediabucket" embed="mediabucket" />
		</box>
        <box id="article_advertisement" class="column2">
			<box id="skyscraper_ad" class="ad-skyscraper" embed="advertisement" />
		</box>
		<panel class="article_body" id="body_continuation" embed="body" />
    </panel>
	
</jpml>
