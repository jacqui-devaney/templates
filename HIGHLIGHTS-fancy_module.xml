<jpml id="HIGHLIGHTS-fancy">
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
    <style>{
		$join: [
			{if: =portrait, then: {
				jpml: { padding: [0] },
				#landscape: { display:none },
				#image_container: { 
					anchor-x: right,
					width: 80,
					height: 84,
					padding: [ 0, 0, 0, 10 ]
				}
			
			}, else: {
				jpml: { padding: [8, 0] },
				#portrait: { display:none },
				#image_container: { 
					width: 225,
					height: 126,
					padding:[0, 20, 4, 0]
				},
				#inset: {
					padding: [0]
				}
				
			}},
						{.highlight_body: {
				text-overflow: "\u00bb",
	        	text-align: justify
			}},
			{ $switch: [
				{ if: =article.type, equals: "Letters", then: {
					.magazine_highlight_type: { display: inherit},
					.magazine_highlight_flashline: { display: inherit},
					.magazine_highlight_headline: { display: inherit},
					.magazine_highlight_body: { display: inherit},			
					.offduty_highlight_type: { display: none},
					.offduty_highlight_flashline: { display: none},
					.offduty_highlight_headline: { display: none},
					.offduty_highlight_body: { display: none}
				}},
				{ if: true, then: {
					.magazine_highlight_type: { display: none},
					.magazine_highlight_flashline: { display: none},
					.magazine_highlight_headline: { display: none},
					.magazine_highlight_body: { display: none},			
					.offduty_highlight_type: { display: inherit},
					.offduty_highlight_flashline: { display: inherit},
					.offduty_highlight_headline: { display: inherit},
					.offduty_highlight_body: { display: inherit}
				}}
			]}
			
		]
    }</style>
    
	<box id="portrait">
	    <box id="image_container">
	        <image class="A_size" embed="summary-image" />
	    </box>
	    <p class="offduty_highlight_type" embed="type" />
	    <p class="magazine_highlight_type" embed="type" />
	    <p class="magazine_highlight_flashline" embed="flashline" />
	    <p class="offduty_highlight_flashline" embed="flashline" />
	    <p class="magazine_highlight_headline"><span embed="headline" /><mark class="key" /></p>
	    <p class="offduty_highlight_headline"><span embed="headline" /><mark class="key" /></p>
		<panel embed="body" class="magazine_highlight_body"/>
		<panel embed="body" class="offduty_highlight_body"/>
	</box>
	<box id="landscape">
	    <p class="offduty_highlight_type" id="inset" embed="type" />
	    <p class="magazine_highlight_type" id="inset" embed="type" />
	    <box id="image_container">
	        <image embed="summary-image" />
	    </box>
	    <p class="magazine_highlight_flashline" id="inset" embed="flashline" />
	    <p class="offduty_highlight_flashline" id="inset" embed="flashline" />
	    <p class="magazine_highlight_headline" id="inset"><span embed="headline" /><mark class="key" /></p>
	    <p class="offduty_highlight_headline" id="inset"><span embed="headline" /><mark class="key" /></p>
	</box>
	
</jpml>
