<jpml id="LEFT-IMAGE_module">
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="PHONE-MODULES-stylesheet.ejs" />
	<style>{
        $join: [
			{jpml: {
				padding:[0, 8, 0, 8]
			}},
			{ $switch: [
				{ if: =options.no_border, then: {
					#wrapper: {
						border-width: [0, 0, 0, 0],
						padding: [8, 0, 0, 0]
					}
			
				}},
				{ if: true, then: {
					#wrapper: {
						border-width: [1, 0, 0, 0],
						border-color: #b1aca1,
						padding: [8, 0, 0, 0]
					}
					}}
			]},
			
			{#headline: {padding:[0, 0, 0, 0]}
			},
			{#image_wrapper: { 
				left:0,
				top:0,
				bottom:0,
				position:relative,
				width: {$multiply: [=view.width, .6]},
				padding: [0, 15, 8, 0 ],
				pixels-per-point-x:1,
				pixels-per-point-y:1
			}},
			
			{#image_container: { 
				height: {$multiply: [=view.width, .4]}
			}},
			{.byline: {display: {$switch: [
				{if: =scale.small, then:{if: =options.byline, then:inherit, else:none}},
				{if: =scale.large, then: {if: =options.no_byline, then:none, else:inherit}}
			]}}},
			{#body-first-p: {text-indent: {if: =options.no_indent, then:0, else:inherit}}}
				
		]	
		
		}</style>
		<style>{if: =scale.phone, then: {
			#body-first-p: {
				text-indent: 0
			},
			jpml: {
				border-width: [{if: =options.top_border, then:1, else:0}, 0, {if: =options.no_border, then:0, else:1}, 0],
				border-color: #d6d6d6,
				anchor-y:middle,
				padding: [{if: =options.top_align, then: 8, else:0}, 0, 0, 0]
			},
			#image_wrapper: { 
				anchor-x:right,
				position:relative,
				width: 76,
				padding:[0, 8, 6, 15],
				pixels-per-point-x:1,
				pixels-per-point-y:1,
				image-scale:1,
				display:{if: =options.show_image, then: inherit, else:none}

			},
			image: { 
				height: 76,
				display:inherit,
				padding: [0],
                options:{},
				image-scale: 1
				
			},
			.byline: {
				display:none
			},
			#headline: {
				padding:[0, 8]
			},
			#body_container: {
				display:{if: =options.show_body, then:inherit, else:none},
				padding:[0, 8]
			},
			#vertical: {
				vertical-align: {if: =options.top_align, then: top, else: middle}
			}
				
			}, else:{}
		}</style>
		<box class="hidden_phone">
			<box id="wrapper">
				<panel id="headline">
					<p class="module_headline"><span embed="headline" /><mark class="key" /></p>
				</panel> 
			</box>   
			<box id="image_wrapper">
				<box id="image_container">
				    <image embed="summary-image" />
				</box>
			</box>
			<panel id="body">
				<p class="byline" embed="byline"/>
				<panel class="body" embed="body"/>
			</panel>
		</box>
		<box class="hidden_tablet">
			<panel id="vertical">
				<box id="image_wrapper">
					<image embed="summary-image" />
				</box>
					<panel id="headline">
						<p class="module_headline"><span embed="headline" /><mark class="key" /></p>
					</panel>
					<panel id="body_container">
				        <panel id="body">
				            <p class="byline" embed="byline"/>
				            <panel class="body" embed="body"/>
				        </panel>
				    </panel>
			</panel>
		</box>
		
</jpml>
