<template id="OPINION-6story-D" stylesheet="OPINION-stylesheet.xml">
	<style>
		{ $join: [
			{
				#b1:	{ frame: [1, 50, 474, 156] },
				#b5:	{ frame: [389, 3, 281, 412] },
				#b6:	{ frame: [389, 412, 281, 207] }
			},
			
			_comment: "Adjust boxes b2 to include a header depending on the first instance of the Letters article type",
			{ $switch: [
				{ if: =articles.b2.type, equals: "Letters", then: {
					_comment: "b2 has the header",
					#b2: { frame: [1, 206, 474, 206], context: {header: true} },
					#b3: { frame: [1, 412, 474, 207] },
					#b4: { frame: [1, 476, 474, 142] }
				}},
				{ if: =articles.b3.type, equals: "Letters", then: {
					_comment: "b3 has the header",
					#b2: { frame: [1, 206, 474, 206] },
					#b3: { frame: [1, 412, 474, 207], context: {header: true} },
					#b4: { frame: [1, 476, 474, 142] }
				}}, 
				{ if: =articles.b4.type, equals: "Letters", then: {
					_comment: "b4 has the header",
					#b2: { frame: [1, 206, 474, 206] },
					#b3: { frame: [1, 412, 474, 207] },
					#b4: { frame: [1, 476, 474, 142], context: {header: true} }
				}}, 
				{ if: true, then: {
					_comment: "neither have the header",
					#b2: { frame: [1, 206, 474, 206] },
					#b3: { frame: [1, 412, 474, 207] },
					#b4: { frame: [1, 476, 474, 142] }
				}}
	    	]}
		]}
	</style>
    
    <box id="b1" module="5column-opinion-module.xml" />
    <box id="b2" module="5column-opinion-module.xml" />
    <box id="b3" module="5column-opinion-module.xml" />
    <box id="b4" module="5column-opinion-module.xml" />
    <box id="l4" class="line" />
    <box id="b5" module="3column-image-notprominent-E-module.xml" />
    <box id="b6" module="3column-noimage-notprominent-module.xml" />

    <box id="h1" module="highlights-opinion-module.xml" class="highlight_light" />
    <box id="l1" class="line" />
    <box id="h2" module="highlights-opinion-module.xml" class="highlight_light" />
    <box id="l2" class="line" />    
    <box id="had" embed="advertisement" class="highlight" />
    
</template>

