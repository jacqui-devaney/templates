<jpml id="ARTICLE-future_of_everything_template">
	<style src="GLOBAL-stylesheet.ejs"/>
  <style src="GRID-stylesheet.ejs"/>
  <style src="ADVERTISING-stylesheet.ejs" />
  <style src="FUTURE-stylesheet.ejs" />

  <style>{
    #page_details: {
      display: {if: =scale.phone, then: none},
      options: {
          tintTitle: true
      }
    },
		#view: {if: =scale.phone, then: {
      width:=view.width,
      height:{$multiply: [2, =view.height]}
    }, else: {
      top:0,
      bottom:24
    }}
  }</style>
  <style> {
		$switch: [
			{if: =scale.phone, then: {
        #view: {
          options: {
            background_color: =color.background,
            indent: true,
            module: {if: =page.number, equals: 0, then: url(ARTICLE-front-phone_module.xml), else: url(ARTICLE-continuation-phone_module.xml)}
          }
        }
			}},
            {
        #view: {
          options: {
            background_color: =color.background,
            indent: true,
            module: {if: =page.number, equals: 0, then: url(ARTICLE-future_of_everything-front_module.xml), else: url(ARTICLE-future_of_everything-continuation_module.xml)}
          }
        }
        }]
    }</style>
  <style>{
    if: =intent.ad, then: {
      jpml: {
          min-height:0,
          padding: [0,0,0,0]
      },
      #fullpage_container: {
        display: inherit
      },
      #view: {
        display: none
      },
      #page_details: {
        display: none
      }
    }, else: {
      #fullpage_container: {
        display: none
      }
    }
  }</style>
  <box id="fullpage_container">
      <box id="fullpage_ad" class="ad-fullpage" embed="fullpagead" />
  </box>
  <box id="page_details" embed="pagedescription" />
  <box id="view" embed="article" class="column16-12 positionx1 maude" />
</jpml>
