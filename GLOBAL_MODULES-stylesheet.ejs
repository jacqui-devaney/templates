{
	#invisible: {
		display:none
	},
	.module_headline: {
		$join: [
			{
				font-name: {
					$switch: [
						{if: =issue.type, equals: "NOW", then: "DJ5Exchange-Semibold"},
						{if: =options.small_headline, then: "DJ5EscrowCond-Semibold"},
						{if: =options.smedium_headline, then: "DJ5EscrowCond-Semibold"},
						{if: =options.medium_headline, then: "DJ5EscrowCond-Semibold"},
						{if: =options.very_large_caps_headline, then: "DJ5Escrow-Roman"},
						"DJ5EscrowCond-Semibold"
					]
				}
			},
			{
				color:{if: =options.white_text, then:#fff, else:#000}
			},
			{
				$switch:[
					{if: =options.small_headline, then:{
						padding:[0, 0, 2, 0],
						font-size: 16,
						line-height: 21
					}},
					{if: =options.smedium_headline, then:{
						padding:[0, 0, 2, 0],
						font-size: 20,
						line-height: 24
					}},
					{if: =options.medium_headline, then:{
						padding:[0, 0, 7, 0],
						font-size: 24,
						line-height: 26
					}},
					{if: =options.large_headline, then: {
						padding:[0, 0, 4, 0],
						font-size: 36,
						line-height: 39
					}},
					{if: =options.very_large_caps_headline, then: {
						padding:[0, 0, 20, 0],
						font-size: 56,
						line-height: 60,
						text-transform:uppercase
					}},
					{if: true, then: {
						padding:[0, 0, 20, 0],
						font-size:19,
						line-height: 23
					}}
				]
			}
		]
	},
	.module_summary: {
		content: =article.summary
	},
	.body: {
		font-name: "DJ5Exchange-Medium",
		text-indent: =text.indent,
		font-size:{$multiply:{if: =options.large_body, then:20, else:14}},
		line-height:{$multiply:{if: =options.large_body, then:26, else:20}},
		text-overflow: =text.overflow,
        text-align: { if: =options.justify, then:=justify, else:left},
		hyphens:auto,
		color:{if: =options.white_text, then:#fff, else:#222221}


	},
	.escrow_body: {
		font-name: DJ5Escrow-Roman,
		text-indent:0,
		font-size:24,
		line-height:26,
        text-align: { if: =options.justify, then:=justify, else:left},
		color:{if: =options.white_text, then:#fff, else:#222221}


	},
	.deco_caption: {
		font-name: DJ5Exchange-Medium,
		font-size:14,
		line-height:20,
		color:#fff

	},
	.deco_headline:{
		font-name: DJ5EscrowCond-Semibold,
		color:#fff,
		padding:[0, 0, 6, 0]
	},
	.module_flashline: {
		font-name:DJ5Exchange-Bold,
		font-size:12,
		line-height:12,
		color: =page.tint,
		text-transform:uppercase,
		padding:[0, 0, 6, 0]
	},
	.module_caption: {
		font-name:DJ5Exchange-Medium,
		font-size:11,
		line-height:13,
		padding:[4, 0, 4, 0],
		display: {if: =options.show_image, then:inherit, else:none}
	},
	.key: {
		font-name: "DJ5Utility-Regular",
		font-size: 16,
		content: "\u00a0K",
		display: { if-all: [=issue.locked, =article.paid], then: default, else: none },
		color: #948464
	},	
	#body-first-p: {
		text-indent: {if: =options.indent, then: =text.indent, else: 0}
	},
	.body-first-p-mark: {
		font-name: "DJ5Utility-Regular",
		content: "K\u00a0",
		display: { if-all: [=issue.locked, =article.paid], then: default, else: none },
		color: #948464
	},
	.byline: {
		font-name:DJ5Exchange-Medium,
		font-size:14,
		line-height:20,
		color:#5D5D5D
	},
	.hidden_tablet: {
		display: none
	},
	.hidden_phone: {
		display: inherit
	},
	#m_subsection: { content: =article.subsection },
	.m_headline: { content: =article.headline },
	em: {
		font-name:DJ5Exchange-MediumItalic
	},
	.link-pdf: {
		color:{if: =intent.article, then:=page.tint}
	},
	.link-external: {
		color:{if: =intent.article, then:=page.tint}
	},
	a: {
		color:{if: =intent.article, then:=page.tint}
	},
	.link-article: {
		text-decoration: none,
		color:{if: =intent.article, then:=page.tint}
	},
	.ticker: {
		display: none
	}
}
