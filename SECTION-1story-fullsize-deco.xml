<jpml id="SECTION-1story-fullsize-deco_template">
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="GRID-stylesheet.ejs"/>
    <style src="ADVERTISING-stylesheet.ejs"/>
	<style src="SECTION-stylesheet.ejs" />
	<style src="PHONE-stylesheet.ejs" />
	<style>{
		$switch:[
		{if: =scale.phone, then:{
			#deco: {
				options: {G_image:true, bottom_border:true, normal_headline:true, no_caption:true}
			}
		}},
		{if: =portrait, then: {
			#deco:	{ 
				top:0,
				height:960,
				options:{FULL-port_image:{if: =widescreen, then:false, else:true}, FULL-Wport_image:{if: =widescreen, then:true, else:false}} }
		}}, 
		{if: =landscape, then: {
			#deco:	{ 
				top:0,
				height:706, 
				max-height: 706,
				pixels-per-point-y: {if: =device.model, starts-with: iPad, then: 1},
				options: {FULL-land_image:{if: =widescreen, then:false, else:true}, FULL-Wland_image:{if: =widescreen, then:true, else:false}} }
		}}]
	}</style>
	
	<box id="deco" embed="article" class="column_full position_full maude unit_G_deco" module="IMAGE-only_module.xml" />

	
</jpml>