<jpml id="FLASHLINE-HEADLINE_module">
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="PHONE-MODULES-stylesheet.ejs" />
	<style>{
		$join: [
			{ $switch: [
				{ if: =options.border, then: {
					#wrapper: {
						border-width: [1, 0, 0, 0],
						border-color: #b1aca1,
						padding: [8, 8, 5, 8]
					}
			
				}},
				{ if: true, then: {
					#wrapper: {
						border-width: [0, 0, 0, 0],
						padding: [5, 8, 5, 8]
					}
				}}
			]},
			{#link_out: {
				background-image: url(link_out.png),
				background-position:left,
				padding:[2, 0, 0, 14],
				display: {if-any: [
					{if: =article.type, equals: "Deco Summary Liondoor Cio Special 1", then:true},
					{if: =article.type, equals: "Deco Summary Liondoor Cfo Special 1", then:true}
				],
				then: inherit,
				else: none}
				
			}},
			{#fromwsj: {
			  	display: {if-any: [
					{if: =article.type, equals: "Deco Summary Liondoor Cio Special 1", then:true},
					{if: =article.type, equals: "Deco Summary Liondoor Cfo Special 1", then:true}
				],
				then: none,
				else: inherit}
			
			}},
			{.invisible: { 
				display:none
			}},
			{#flashline: {
				max-height:20
			}},
			{#continuation_headline: { 
				text-overflow:" \u00bb",
				display: { if: =options.continuation, then:inherit, else:none },
				font-size:16,
				line-height:15,
				padding:[0]
			}},
			{#extra_small_headline: { 
				text-overflow:" \u00bb",
				display: {if: =options.small, then:inherit, else:none},
				padding:[0]
				
			}}
			]
		}</style>
	<style>{
		if: =scale.phone, then: {
			#wrapper: {padding:[0, 8], border-color:#d6d6d6}
		}, else:{}
	}</style>
	<box id="wrapper">
		<panel class="vertical_center">
			<panel id="flashline">
				<p class="highlight_flashline_small" id="fromwsj">From WSJ</p>
				<p class="highlight_flashline_small" id="link_out" embed="flashline"/>
			</panel>
		    <panel id="headline">
				<p id="continuation_headline" class="invisible"><span embed="headline" /></p>
				<p id="extra_small_headline" class="invisible"><span embed="headline" /></p>
			</panel>
		</panel>
	</box>
</jpml>
