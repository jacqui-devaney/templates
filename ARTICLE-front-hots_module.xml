<jpml id="ARTICLE-front-hots_module">
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="GLOBAL-stylesheet.ejs" />
	<style>{
		$join: [
		{#header_top: { padding:[10, 10, 8, 15] }},
		{#body_container : { padding: [10, 20, 0, 20],
            column-width: 250,
            column-gutter: 30,
			column-height:balance,
			flow: article_body,
			min-height: {if: =page.mediabucket, then:400, else:200},
			layout-grid-line: {$multiply: [22, =view.zoomlevel]}
        }},
		{.article_body: {
			column-min-height:50
		}},
		{#media: {
			width:546,
			height:385,
			anchor-x:center,
			options: {
				id: =page.number
			}
		}},
		{if: =portrait, then: {
            #mediabucket_container:	{ frame: [14, 10, 565, 402]  }
        }, else: {
        	#mediabucket_container:	{ frame: [302, 10, 565, 402] }
        }},
		{#filler: {
			position: relative,
			top: 10,
			left: 0,
			right: 0,
			bottom: 0,
			min-height: 0,
			border-image:url(articleBackground.png),
			border-width: [16, 0, 0, 0],
			border-slice: [16, 0, 0, 0]		
		}},
		{#article_advertisement: {
			min-height: 206,            
			min-width: 555,            
			anchor-x: center,            
			anchor-y: middle        

		}}
		]
    }</style>
	<box id="continues_label">
		<p><mark id="continues" /></p>
	</box>
	
    <panel id="header_top">
        <p class="hots_flashline" embed="flashline"/>
        <p class="article_headline"><span embed="headline"/><mark class="key"/></p>
		<h2 class="article_subhed" embed="subhed" />
    </panel>
	<box class="hr"></box>

	<panel>
		<box id="mediabucket_container">
			<box id="media" embed="media" />
		</box>
		<panel id="body_container">
			<p class="article_byline" embed="byline"/>
	        <panel class="article_body" embed="body"/>
	    
		</panel>
	</panel>
    <box id="filler">
		<box id="article_advertisement" class="ad-twocolumn" embed="advertisement"/>
	</box>
	
</jpml>


