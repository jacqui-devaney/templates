{ $join: [
  {
	jpml: {
		padding:[0]
	},
	.article_headline: {
		font-name: ChronicleDisplay-Semi,
		font-size: 41,
		line-height: 45,
		color: #2b3333,
		padding:[5, 0, 5, 0]
	},
	.article_subhed: {
		font-name: WhitneySSm-Book,
		text-align: left,
		font-size: 15,
		line-height: 25,
		color: #2b3333
	},
	.module_flashline: {
		font-size:{$multiply: [12, =view.zoomlevel]},
		line-height:{$multiply: [13, =view.zoomlevel]}
	},
	.byline: {
		font-name: ChronicleSSmBook-Italic,
		font-size: {$multiply: [14, =view.zoomlevel]},
		line-height: {$multiply: [20, =view.zoomlevel]},
		color: #2b3333,
		padding: [0,0,{$multiply: [20, =view.zoomlevel]},0]
	},
	.byline-author: {
		if: =app.version, at-least: "8.4", then: {
			padding: [0, 22, 0, 0],
			background-position: right,
			background-size: contain,
			background-repeat: no-repeat,
			white-space: nowrap
		}
	},
	h2: {
		font-name: {if: =intent.article, then:ChronicleSSmMedium-Regular, else:ChronicleSSmMedium-Regular},
		text-indent: 0
	},
	h3: { 
		font-name: {if: =intent.article, then:ChronicleSSmMedium-Regular, else:ChronicleSSmMedium-Regular},
		text-indent: 0,
		text-transform: uppercase,
		padding: {if: scale.tablet, then: [20, 0, 0, 0], else: [0, 0, 0, 0]}
	},
	.article_body: {
		column-count: { if: =scale.tablet, then: { if: =portrait, then: 3, else: 4 } },
		font-name: ChronicleSSmBook-Regular,
		font-size:{$multiply: [14, =view.zoomlevel]},
		line-height:{$multiply: [20, =view.zoomlevel]},
	    text-align: left,
	    hyphens: auto,
		color: #2b3333,
		text-indent: =text.indent
	},
	strong: {
		font-name:{if: =intent.article, then:ChronicleSSmMedium-Regular, else:ChronicleSSmMedium-Regular}
	},
	em: {
		font-name:{if: =intent.article, then:ChronicleSSmBook-Italic, else:ChronicleSSmBook-Italic}
	},
	cite: {
        font-name:{if: =intent.article, then:ChronicleSSmBook-Italic, else:ChronicleSSmBook-Italic}
    },
	.byline-credit: {
		display: {if-any: [
			{if: =page.section, equals: "CIO", then:true},
			{if: =page.section, equals: "CFO", then:true}
		],
		then: none,
		else: inherit}
	},
	#m_subsection: { content: =article.subsection },
	#m_headline: { content: =article.headline },
	.list-item: {
	break-inside: avoid-column,
        padding: [11, 16, 8, 12],
        text-indent: {$subtract: [{$multiply: [-10, =view.zoomlevel]}, 4]},
        line-height: {$multiply: [20, =view.zoomlevel]}
    },
	.list-item-bullet: {
		content: "\u00a0\u2022 ",
        color: #a7afaf
	},
	.blockquote: {
		padding: [0, 0, 10, 20]
	},
	.blockquote-p: {
		padding: [0, 0, 0, 8],
		border-width: [0, 0, 0, 1],
		border-color: black
	},
	.ticker: {
		display: inherit,
		color: transparent,
		hyphens: none,
		font-name: "WhitneySSm-Medium"
	},
	.tweet: {
		display: {if: =app.version, equals: "17.0", then: inherit, else: none}
	},
	.tweet-p: {
		padding: [0],
		break-inside: avoid-column,
		text-align: justify,
		text-indent: 0,
		line-height: 90
	},
	.tweet-mark: {
		font-name: "HelveticaNeue",
		font-size: 60,
	    hyphens: none,
	    color: transparent,
		content: "TWTR-TWTR-"
	},
	.body-last-p-mark: {
		content: " \u00A0 \u00A0 "
	},
	.pullquote: {
	    color: #3b4343
    },
    .pullquote-p: {
        font-size:{$multiply: [32, =view.zoomlevel]},
        line-height:{$multiply: [36, =view.zoomlevel]},
        text-indent: -12
    },
    .pullquote-tagline: {
        font-name: "ChronicleSSmMedium-Italic",
        font-size:{$multiply: [16, =view.zoomlevel]},
        line-height:{$multiply: [24, =view.zoomlevel]}
    },
    .mark-quote-prologue: {
        content: "\u201c"
    },
    .mark-quote-epilogue: {
        content: "\u201d"
    },
    .pullquote-inset-cite: {
        font-name: "ChronicleSSmMedium-Italic"
    },
    .pullquote-quote: {
        font-name: "ChronicleDisplay-Light"
    }
  },
  {
  	$associate: {
  		flatmap: { $range: [0, 6] },
  		let: x,
  		in: [
  			{ $join: [#byline-author-span-, =x] },
  			{
				if: =app.push.tags.author,
				contains: =article.authors[x],
				then: {
					background-image: url(follow_on_icon.png),
					options: { reference: { $join: [
						"wsj:///unsubscribe?tag-group=author&tag=",
						{ $urlencode: [=article.authors[x]]}
					] } }
				},
				else: {
					background-image: url(follow_off_icon.png),
					options: { reference: { $join: [
						"wsj:///subscribe?tag-group=author&tag=",
						{ $urlencode: [=article.authors[x]]}
					] } }
				}
			}
		]
	}
  }
  ]
}
