<jpml id="ARTICLE-front-phone_module">
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="ARTICLE-stylesheet.ejs" />
	<style src="PHONE-MODULES-stylesheet.ejs" />
	<style src="MEDIA-stylesheet.ejs" />
	<style>{
		jpml: {
			background-color: =options.background_color
		}
	}</style>
	<style>{
		jpml: { min-height: 0 },
		.article_body: {
			hyphens: auto,
			flow: article_body
		},
		.article_flashline: {
            font-name: WhitneySSm-Semibold,
            font-size: 13,
            line-height: 22,
            border-width: [0, 0, 1, 0],
            border-color: #e1e0df
		},
        #media_container:{
            padding: [0, 0, 20, 0]
        },
        #media_caption: {
            layout-grid-line: 1,
            layout-grid-line-offset: 0,
            color: #4f5757,
            font-size: 17,
            line-height: 22,
            font-name: "WhitneySSm-Book"
        },
        #mark_caption: {
            content: =media.caption
        },
        #byline-in-header: {
        	if: =size.media.is_inset, else: { display: none }
        },
        #byline-below-media: {
        	if: =size.media.is_inset, then: { display: none }
        }
	}</style>

    <box id="prototype">
    	<box id="byline-pubdate-prototype">
			<p class="article_byline" embed="byline"></p>
			<p class="article_pubdate">Updated <span embed="pubdate-string"/></p>
    	</box>
    </box>

	<p class="article_flashline" embed="flashline"/>

	<panel id="header_top">
		<p class="article_headline"><span embed="headline"/></p>
		<h2 class="article_subhed" embed="subhed" />
		<panel id="byline-in-header" embed="byline-pubdate"/>
	</panel>

	<panel id="body_container">

		<box id="media_container">
			<p id="media_title"><mark id="mark_media_title"/></p>
	        <panel id="media_vr_header">
	            <p id="media_vr_header_left"><mark id="mark_media_vr_header_left"/></p>
	            <p id="media_vr_header_right"><mark id="mark_media_vr_header_right"/></p>
	        </panel>
	        <box id="media_asset" embed="media"/>
			<p id="media_vr_footer"><mark id="mark_media_vr_footer"/></p>
	        <p id="media_caption"><mark id="mark_caption" /></p>
	        <p id="media_vr_link"><a href="http://wsj.com/virtual-reality"><mark id="mark_media_vr_link"/></a></p>
	    </box>

		<panel id="byline-below-media" embed="byline-pubdate"/>
		<panel class="article_body" embed="body"/>
	</panel>

</jpml>
