<jpml id="FRONT-NO-IMAGE_module">
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="PHONE-MODULES-stylesheet.ejs" />
	<style>{
		$join: [
			{ $switch: [
				{ if: =options.no_border, then: {
					#wrapper: {
						border-width: [0],
						padding: [10, 0, 0, 0]
					}
			
				}},
				{ if: true, then: {
					#wrapper: {
						border-width: [1, 0, 0, 0],
						border-color: #b1aca1,
						padding: [10, 0, 0, 0]
					}
					}}
			]},
			{#body: { 
	            column-count: {$switch: [
					{if: =widescreen, then: { if: =options.two_columns, then:2, else:1 }},
					{if: =scale.large, then: {if: =options.static_columns, then:2, else:{$divide: [=view.width, {$multiply:[245, =scale.dpi]}]}}}
					
				]},
	            column-gutter: 20,
				display:{if: =options.hide_body, then:none, else:inherit},
				padding: [0, 0, {if: =options.bottom, then:15, else:10}, 0]
	        }},
			{#body_container: { padding: [0, 8]}},
			{#headline: { padding: [0, 8]}},
			{.invisible: { display:none }},
			{#small_headline: { display: { if: =options.small_headline, then:inherit }}},
			{#medium_headline: { display: { if: =options.medium_headline, then:inherit }}},
			{#large_headline: { display: { if: =options.large_headline, then:inherit }}},
			{#bignews_huge_headline: { display: { if: =options.bignews_huge_headline, then:inherit }}},
			{#bignews_large_headline: { display: { if: =options.bignews_large_headline, then:inherit }}},
			{#bignews_big_headline: { display: { if: =options.bignews_big_headline, then:inherit }}},
			{#bignews_small_headline: { display: { if: =options.bignews_small_headline, then:inherit }}},
			{.byline: {display: {$switch: [
				{if: =scale.small, then:{if: =options.byline, then:inherit, else:none}},
				{if: =scale.large, then: {if: =options.no_byline, then:none, else:inherit}}
			]}}},
			{#image_wrapper: {display:none}},
			{.body: {padding:{if: =options.byline, then:[0], else:[0, 0, 0, 0]}}},
			{#body-first-p: {text-indent: {$switch: [
				{if: =scale.small, then:{if: =options.no_indent, then:0, else:inherit}},
				{if: =scale.large, then: {if: =options.no_indent, then:0, else:20}}
			]}}}
			
			]
		}</style>
		<style>{
				if: =scale.phone, then: {
					#image_wrapper: { 
						anchor-x:right,
						position:relative,
						width: 76,
						padding:[0, 10, 5, 15],
						pixels-per-point-x:1,
						pixels-per-point-y:1,
						image-scale:1,
						display:{if: =options.hide_image, then:none, else:inherit}
					},
					image: { 
						height: 76,
						display:inherit,
						padding: [0],
		                options:{},
						image-scale: 1
					
					},
					.byline: {
						display:none
					},
					#body: {
						display:{if: =options.show_body, then:inherit, else:none},
						padding:[0]
					},
					#wrapper: {
						padding: [{if: =options.top_align, then: 8, else:0}, 0, 0, 0],
						border-color:#d6d6d6
				
					},
					#headline: {
						vertical-align: {if: =options.top_align, then: top, else:middle}
					}
				}, else:{}
		}</style>
		
	<box id="wrapper">
		<box id="image_wrapper">
			<image embed="summary-image" target-width="76" target-height="76" />
		</box>
		<panel id="headline">
			<p id="small_headline" class="invisible"><mark id="m_headline" /><mark class="key" /></p>
			<p id="medium_headline" class="invisible"><mark id="m_headline" /><mark class="key" /></p>
			<p id="large_headline" class="invisible"><mark id="m_headline" /><mark class="key" /></p>
			<p id="bignews_huge_headline" class="invisible"><span embed="headline" /></p>
			<p id="bignews_large_headline" class="invisible"><span embed="headline" /></p>
			<p id="bignews_big_headline" class="invisible"><span embed="headline" /></p>
			<p id="bignews_small_headline" class="invisible"><span embed="headline" /></p>
		</panel>
		<panel id="body_container">
	        <panel id="body">
	            <p class="byline" embed="byline" />
	            <panel class="body" embed="body"/>
	        </panel>
	    </panel>
	</box>
</jpml>
