<jpml id="ARTICLE-front-H_module">
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="GLOBAL-stylesheet.ejs" />
	<style>{
		$join: [
		{.article_headline: {font-size:35, line-height:37}},
		{.article_subhed: {font-size:20, line-height:22}},
		{#header_top: { padding:[18, 10, 8, 15]}},
		{.article_subhed: {font-size:18, line-height:21}},
		{if: =portrait, then: {
            #mediabucket_container:	{ 
				frame: [10, 10, 749, 528]
			},
            #head:{ padding: [10, 240, 0, 0]},
        	#article_copy:{padding: [0, 243, 0, 0], max-height:290},
            #body_container:{           
				padding: [10, 0, 0, 20],
				layout-grid-line: {$multiply: [22, =view.zoomlevel]},
				layout-grid-line-offset: {$multiply: [34, =view.zoomlevel]}},
			#mediabucket: {
				width:740,
				height:503,
				anchor-x:center
			},
			.hr: {
				width:520
			}
		
		}, else: {
        	#mediabucket_container:	{ frame: [28, 110, 749, 512]},
        	#mediabucket: {
				width:740,
				height:503,
				anchor-x:middle
			},
        	#header_top: { padding:[10, 10, 8, 15]},
			#head:{ padding: [0, 0, 0, 0], max-height:130},
        	#body_container:{ display:none },
			.article_headline: {font-size:36, line-height:38},
			.article_subhed: {font-size:20, line-height:22},
			.hr: {
				right:0,
				width:775
			}
        }}
	]
    }</style>
	<box id="mediabucket_container">
		<box id="mediabucket" embed="mediabucket" />
	</box>
	<panel id="head">
		<panel id="header_top">
			<p class="article_headline"><span embed="headline"/><mark class="key"/></p>
			<h2 class="article_subhed" embed="subhed" />
		</panel>
		<box class="hr"></box>
	</panel>
	<panel id="article_copy">
		<panel id="body_container">
			<p class="article_byline" embed="byline"/>
			<panel class="article_body" embed="body"/>
		</panel>
	</panel>
	
</jpml>


