<jpml id="HIGHLIGHTS_module">
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="GLOBAL-stylesheet.ejs" />
    <style>{
		jpml: {
				background-color:#e6f5ff,
				padding: [10, 8, 10, 8],
				border-width: {if: =options.portrait, then: [0, 1, 0, 0], else: [1, 0, 0, 0]},
				border-color:#b1aca1
		},
		.cio_highlight_headline: {
			color:#333,
			font-name:Helvetica-Bold,
			font-size:14,
			line-height:15
		},
		.cio_highlight_byline: {
			color:#333,
			font-name:Helvetica-Bold,
			font-size:11,
			line-height:12,
			display: {$switch: [
				{if: =scale.small, then:{if: =options.byline, then:inherit, else:none}},
				{if: =scale.large, then: inherit}
			]}
		},
		.cio_body: {
			color:#333,
			font-name:Helvetica,
			font-size:13,
			line-height:15,
			text-overflow: "\u00bb",
			padding: [4, 0, 0, 0]
		},
		#image_container: { 
			anchor-x: right,
			width: 86,
			pixels-per-point-x:{if: =scale.small, then:.7, else:1},
			pixels-per-point-y:{if: =scale.small, then:.7, else:1},
			image-scale:{if: =scale.small, then:.7, else:1},
			display:{if: =options.hide_image, then:none}
			
		},
		#body-first-p: {
			font-name:Helvetica
		},
		em: {
			font-name:Helvetica
		},
		image: {
			width:76,
			height:76,
			padding: [ 0, 0, 1, 10 ]
		}
    }</style>
    <box id="image_container">
        <image class="A_size" embed="summary-image" />
    </box>
    <p class="cio_highlight_headline"><span embed="headline" /></p>
   	<p class="cio_highlight_byline" embed="byline" />
	<panel embed="body" class="cio_body"/>
</jpml>
