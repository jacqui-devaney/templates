<jpml id="HIGHLIGHTS_module">
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="GLOBAL-stylesheet.ejs" />
    <style>{
		jpml: {
				background-color: { $switch: [
					{ if: =options.highlight_dark, then: #e4e4e4 },
					{ if: =options.highlight_light, then: #f6f5f3 }
				] },
				padding: [8, 8, 16, 8],
				border-width: [0, {if: =portrait, then: 1, else: 0}, {if: =landscape, then: 1, else: 0}, 0],
				border-color:#b1aca1
		},
		
		#image_container: { 
			anchor-x: right,
			width: 86,
			display: {$switch: [
				{if: =scale.small, then: none},
				{if: =scale.large, then: inherite}
			]}
			
		},
		image: {
			width:76,
			height:76,
			padding: [ 0, 0, 0, 10 ]
		},
		.highlight_body: {
			text-overflow: "\u00bb",
			padding: [4, 0, 0, 0]
		}
    }</style>
    <box id="image_container">
        <image class="A_size" embed="summary-image" />
    </box>
    <p class="highlight_flashline" embed="flashline" />
    <p class="highlight_headline"><span embed="headline" /><mark class="key" /></p>
   	<p class="highlight_byline" embed="byline" />
	<panel embed="body" class="highlight_body"/>
</jpml>
