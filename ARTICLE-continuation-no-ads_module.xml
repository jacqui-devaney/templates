<jpml id="ARTICLE-continuation-no-ads_module">
	<style src="ARTICLE-stylesheet.ejs" />
	<style>{

		$join: [
		{#body_container : { 
			min-height:200
		}},
		{.article_body: { 
            column-count: { if: =portrait, then: 3, else: 4},
            column-gutter: 10,
			layout-grid-line: {$multiply: [24, =view.zoomlevel]}
        }},


		{#body_continuation: {
			content: from-flow(article_body),
			flow: article_body
		}},

		{if: =portrait, then: {
            #mediabucket_container:	{ frame: [0, 0, 502, 379]},
			#mediabucket: {
				width:500,
				height:363,
				anchor-x:center
			}
        }, else: {
        	#mediabucket_container:	{ frame: [256, 0, 502, 379] },
			#mediabucket: {
				width:500,
				height:363,
				anchor-x:center
			}
        }}		
		]
    }</style>
	
	<panel id="body_container">
        <box id="mediabucket_container">
			<box id="mediabucket" embed="mediabucket" />
		</box>
		<panel class="article_body" id="body_continuation" embed="body"/>
    </panel>
</jpml>