{
	jpml: {
		padding:[0]
	},
	.article_headline: {
		font-name: ChronicleDisplay-Semi,
		font-size: 41,
		line-height: 45,
		color: #2b3333,
		padding:[5, 0, 5, 0]
	},
	.article_subhed: {
		font-name: WhitneySSm-Book,
		text-align: left,
		font-size: 15,
		line-height: 25,
		color: #2b3333
	},
	.module_flashline: {
		font-size:{$multiply: [12, =view.zoomlevel]},
		line-height:{$multiply: [13, =view.zoomlevel]}
	},
	.byline: {
		font-name: ChronicleSSmBook-Italic,
		font-size: {$multiply: [14, =view.zoomlevel]},
		line-height: {$multiply: [20, =view.zoomlevel]},
		color: #2b3333,
		padding: [0,0,{$multiply: [20, =view.zoomlevel]},0]
	},
	h2: {
		font-name: {if: =intent.article, then:ChronicleSSmMedium-Regular, else:ChronicleSSmMedium-Regular},
		text-indent: 0
	},
	h3: { 
		font-name: {if: =intent.article, then:ChronicleSSmMedium-Regular, else:ChronicleSSmMedium-Regular},
		text-indent: 0,
		text-transform: uppercase
	},
	.article_body: {
		column-count: { if: =scale.tablet, then: { if: =portrait, then: 3, else: 4 } },
		font-name: ChronicleSSmBook-Regular,
		font-size:{$multiply: [14, =view.zoomlevel]},
		line-height:{$multiply: [20, =view.zoomlevel]},
	    text-align: left,
	    hyphens: auto,
		color: #2b3333,
		text-indent: =text.indent
	},
	strong: {
		font-name:{if: =intent.article, then:ChronicleSSmMedium-Regular, else:ChronicleSSmMedium-Regular}
	},
	em: {
		font-name:{if: =intent.article, then:ChronicleSSmBook-Italic, else:ChronicleSSmBook-Italic}
	},
	cite: {
		font-name:{if: =intent.article, then:ChronicleSSmBook-Italic, else:ChronicleSSmBook-Italic}
	},
	.byline-credit: {
		display: {if-any: [
			{if: =page.section, equals: "CIO", then:true},
			{if: =page.section, equals: "CFO", then:true}
		],
		then: none,
		else: inherit}
	},
	#m_subsection: { content: =article.subsection },
	#m_headline: { content: =article.headline },
	.list-item: {
	break-inside: avoid-column,
        padding: [11, 16, 8, 12],
        text-indent: {$subtract: [{$multiply: [-10, =view.zoomlevel]}, 4]},
        line-height: {$multiply: [20, =view.zoomlevel]}
    },
	.list-item-bullet: {
		content: "\u00a0\u2022 ",
        color: #a7afaf
	},
	.blockquote: {
		padding: [0, 0, 10, 20]
	},
	.blockquote-p: {
		padding: [0, 0, 0, 8],
		border-width: [0, 0, 0, 1],
		border-color: black
	},
	.ticker: {
		display: inherit,
		color: transparent,
		hyphens: none,
		font-name: {if: =app.version, at-least: 7.6, then: "WhitneySSm-Medium"}
	},
	.tweet: {
		display: {if: =app.version, equals: "17.0", then: inherit, else: none}
	},
	.tweet-p: {
		padding: [0],
		break-inside: avoid-column,
		text-align: justify,
		text-indent: 0,
		line-height: 90
	},
	.tweet-mark: {
		font-name: "HelveticaNeue",
		font-size: 60,
	    hyphens: none,
	    color: transparent,
		content: "TWTR-TWTR-"
	},
	.body-last-p-mark: {
		content: " \u00A0 \u00A0 "
	}
}
