<jpml id="HIGHLIGHTS_module">
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="PHONE-MODULES-stylesheet.ejs" />
    <style>{
		jpml: {
				background-color:{if: =options.white_highlight, then:#ffffff, else:#efefef},
				padding: [10, 8, 10, 8],
				border-width: { if: =options.single, then:[0, {if: =portrait, then: 0, else: 1}, {if: =landscape, then: 0, else: 1}, 0], else:[0, {if: =portrait, then: 1, else: 0}, {if: =landscape, then: 1, else: 0}, 0]},
				border-color:#b1aca1
		},
		
		#image_container: { 
			anchor-x: right,
			width: 86,
			pixels-per-point-x:{if: =scale.small, then:.7, else:1},
			pixels-per-point-y:{if: =scale.small, then:.7, else:1},
			image-scale:{if: =scale.small, then:.7, else:1},
			display:{if: =options.hide_image, then:none}
			
		},
		.highlight_byline: {display: {$switch: [
			{if: =scale.small, then:{if: =options.byline, then:inherit, else:none}},
			{if: =scale.large, then: inherit}
		]}},
		image: {
			width:76,
			height:76,
			padding: [ 0, 0, 0, 10 ]
		},
		.highlight_body: {
			text-overflow: "\u00bb",
			padding: [4, 0, 0, 0]
		},
		.highlight_flashline: {display: {$switch: [
			{if: =scale.small, then:{if: =options.hide_flashline, then:none, else:inherit}},
			{if: =scale.large, then: inherit}
		]}}
    }</style>
	<style>{
		if: =scale.phone, then: {
			#image_container: { 
				pixels-per-point-x:1,
				pixels-per-point-y:1,
				image-scale:1
			},
			image: { 
				image-scale: 1
				
			},
			.highlight_body: {
				display:none
			},
			jpml: {
				padding: [0, 8],
				background-color:#ffffff,
				border-width: [0, 0, {if: =options.no_border, then:0, else:1}, 0],
				border-color:#d6d6d6
			},
			#wrapper: {
				anchor-y:middle
			},
			.highlight_byline: {
				display:none
			},
			.highlight_body: {
				display:none
			}
			
		}, else:{}
	
	}</style>
	<box id="wrapper">
	    <box id="image_container">
	        <image class="A_size" embed="summary-image" />
	    </box>
    	<p class="highlight_flashline" embed="flashline" />
    	<p class="highlight_headline"><span embed="headline" /><mark class="key" /></p>
		<p class="highlight_byline" embed="byline" />
		<panel embed="body" class="highlight_body"/>
	</box>
</jpml>
