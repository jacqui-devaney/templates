<jpml id="GENERIC-fullpagead-template">
    <style src="GLOBAL-stylesheet.ejs" />
    <style src="PHONE-stylesheet.ejs" />
	<style>{
	        #fullpage_container: { display: {
	            if: =scale.phone,
	            and: =intent.section,
	            then: none,
	            else: inherit
	        }},
	        #ad_background: { display: {
	            if-all: [=scale.phone, =intent.section, {if: =page.number, equals:2}],
	            then: inherit,
	            else: none
	        }}
    }</style>
<box id="fullpage_container">
	<box id="fullpage_ad" class="ad-fullpage" embed="fullpagead" />
</box>
<box id="ad_background" class="ad_light maude unit_ad">
	<box id="highlight_ad" class="ad-rectangle" embed="advertisement" />
</box>
</jpml>