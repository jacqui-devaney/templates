<jpml id="ARTICLE-continuation-deloitte-no-ads_module">
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="GLOBAL-stylesheet.ejs" />
	<style>{
		$join: [
		{.deloitte:{
			background-position: top-left
		}},
		{.deloitte_article:{
			padding:[6, 0, 0, 15]
		}},
		{.deloitte_slug:{
			text-align:left,
			padding:[0, 0, 0, 15]
		}},
		{#body_continuation: {
			content: from-flow(article_body),
			flow: article_body
		}},
		{.body-bug: {
			display: none
		}},
		{#deloitte_close_wrap: {
			top:0,
			right:0,
			padding:[5, 10, 0, 0],
			width:70
		}},
		{strong: {
			font-name:Helvetica-Bold
		}},
		{em: {
			font-name:Helvetica-Oblique
		}},
		
		{#close_button_box: {
			top:inherit,
			right:inherit,
			left:0,
			bottom:0
		}},
		{#body_container: { 
			padding: [10, 20, 0, 20],
			column-count: {$divide: [=view.width, {$multiply:[260, =scale.dpi]}]},
            column-gutter: 30,
			column-height:balance,
			layout-grid-line: {$multiply: [22, =view.zoomlevel]},
			layout-grid-line-offset: {$multiply: [18, =view.zoomlevel]},
			border-width:[1, 0, 0, 0],
			border-color:#e7e7e7
        }},
		{#deloitte_legal:{
			padding:[0, 0, 20, 20],
			anchor-y:bottom,
			anchor-x:left,
			width:647
		}},
		{#filler: {
			position: relative,
			top: 10,
			left: 0,
			right: 0,
			bottom: 0,
			min-height: 0,
			border-image:url(articleBackground.png),
			border-width: [16, 0, 0, 0],
			border-slice: [16, 0, 0, 0]
		}},
		{#cio: {
			display:{if: =page.section, equals: "CIO", then:inherit, else:none}
		}},
		{#cfo: {
			display: {if: =page.section, equals: "CFO", then:inherit, else:none}
		}},
		{#risk: {
			display: {if: =page.section, equals: "RISK_AND_COMPLIANCE", then:inherit, else:none}
		}},
		{em: {
			font-name:Helvetica-Oblique
		}},
		{strong: {
			font-name:Helvetica-Bold
		}},
		{cite: {
			font-name:Helvetica
		}},
		{p: {
			padding:[0, 0, 10, 0]
		}},
		{#continued_label: {
			padding: [0, 100, 3, 0],
			display: { if: =page.count, equals: {$add:[=page.number, 1]}, then:none, else:inherit}

		}}
				
		
		

		]
    }</style>
	<box id="deloitte_article_header">
		<box id="deloitte_close_wrap">
			<box id="close_button_box" embed="close">
				<p id="close_button_p"><mark class="close"></mark></p>
			</box>
		</box>
		<panel class="deloitte_article">
			<panel class="deloitte" />
		</panel>
		<panel class="slug">
			<p class="deloitte_slug" id="cio">Business-led, Technology-enabled: Insight from Deloitte</p>
			<p class="deloitte_slug" id="cfo">CFO insight and analysis written and compiled by Deloitte</p>
			<p class="deloitte_slug" id="risk">Risk management, strategy and analysis written and compiled by Deloitte</p>
		</panel>
	</box>
	<panel id="body_container">
        <box id="continued_label">
			<p><mark id="continued" /></p>
		</box>
		<panel class="deloitte_article_body" id="body_continuation" embed="body"/>
	    
	</panel>
	<box id="filler"/>
	
</jpml>


