<jpml id="OPINION-RANDO-LETTERS_module">
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="PHONE-MODULES-stylesheet.ejs" />
	<style>{
		$join: [		
			{ $switch: [
				{ if: =article.type, equals: "Letters", then: {
					.opinion_headline: { display: none},
					.opinion_dek: { display: none},
				    #rando_header: { display: none },
                    #letters_header: { display: { if: =options.header, then: inherit, else: none } }
                
				}},
				{ if: true, then: {
					.letters_headline: { display: none},
				    #letters_header: { display: none },
                    #rando_header: { display: { if: =options.header, then: inherit, else: none } }
                }}
			]}
	]			
	
		
	}</style>
	<style>{
		if: =scale.phone, then:{
			jpml: {
				border-width:[
					{if-any: [
						{if: =options.no_border, equals:true},
						{if: =options.header, equals: true}
					], then: 0, else:1}, 
					0, 0, 0],
				border-color:#b1aca1,
				padding: [0, 0, 8, 0]
			},
			.articles: {
				padding:[4, 8, 0, 8],
				vertical-align:middle
			},
			.body: {
				display:none
			},
			#opinion_line: {
				display:none
			},
			#letters_line: {
				display:none
			}
			
		}, else: {}
	}</style>
	
		<panel id="rando_header">
		    <p class="rando_heading"><mark class="rando" /></p>
			<box id="opinion_line" />
		</panel>
		<panel id="letters_header">
		    <p class="letters_heading"><mark class="letters" /></p>
			<box id="letters_line" />
		</panel>
		<panel class="articles">
			<p class="opinion_headline"><span embed="headline" /><mark class="key" /></p>
			<p class="opinion_headline_small"><span embed="headline" /><mark class="key" /></p>
		    <p class="letters_headline"><span embed="headline" /><mark class="key" /></p>
			<h2 class="opinion_dek" embed="subhed" ></h2>
			<panel class="body" embed="body" />
		</panel>
</jpml>