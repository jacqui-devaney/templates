<jpml id="ARTICLE-front-phone_module">
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="PHONE-MODULES-stylesheet.ejs" />
	<style>{
		$join: [
		{#body_container: { 
            padding: [0, 10, 0, 10],
			flow: article_body
        }},
		{#media: {
			width:248,
			height:180,
			padding:[0, 10, 0, 10],
			anchor-x:center,
			options: {
				id: =page.number
			}
		}}
		]
    }</style>
	<style>{
		if: =scale.phone, then: {
			#header_top: {padding:[5]},
			.article_subhed: {
				display:{if-any: [{if: =article.type, in: ["A-hed", "Review &amp; Outlook (Asia)", "Review &amp; Outlook (Europe)", "Review &amp; Outlook (U.S.)"]}], then:inherit, else:none }},
			.article_byline: {
				layout-grid-line: {$multiply: [22, =view.zoomlevel]},
				layout-grid-line-offset: {$multiply: [20, =view.zoomlevel]}
				
			},
			.article_body: {
				line-height: {$multiply: [22, =view.zoomlevel]}
			}
		}, else: {}
	}</style>
	<box id="pagenext" embed="pagenext" />
	<box id="pageback" embed="pageback" />
	<box id="pagedown" embed="pagenext" />
	<box id="pageup" embed="pageback" />
	
    <panel id="header_top">
        <p class="article_flashline" embed="flashline"/>
        <p class="article_headline"><span embed="headline"/><mark class="key"/></p>
		<h2 class="article_subhed" embed="subhed" />
	</panel>
	
	<panel id="body_container">
		<box id="media" embed="media" />
		<p class="article_byline" embed="byline"></p>
        <panel class="article_body" embed="body"/>
	</panel>
	
</jpml>


