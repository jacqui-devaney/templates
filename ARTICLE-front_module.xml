<jpml id="ARTICLE-front_module">
	<style src="ARTICLE-stylesheet.ejs" />
	<style>{
		$join: [
		{#body_container: { 
            column-count: { if: =portrait, then: 3, else: 4},
            column-gutter: 12,
			flow: article_body,
			min-height: {if: =page.hasmedia, then:400, else:300},
			layout-grid-line: {$multiply: [24, =view.zoomlevel]},
			layout-grid-line-offset: {$multiply: [24, =view.zoomlevel]},
			padding:[12, 0, 0, 0]
        }},
		{if: =portrait, then: {
			#media: {
				top: 0,
				left: {if: =media.width, less-than: 360, then: 248, else: {if: =media.width, more-than: 484, then: 248, else: 328}},
				width: {$switch: [
					{if: =media.width, less-than: 360, then: 237},
					{if: =media.width, more-than: 484, then: 485},
					361
				]},
				height: {$min: [{$max: [{$switch: [
					{if: =media.width, less-than: 360, then: {$divide: [236, =media.aspect]}},
					{if: =media.width, more-than: 484, then: {$divide: [484, =media.aspect]}},
					{$divide: [360, =media.aspect]}
				]}, {$multiply: [.25, =view.height]}]}, {$multiply: [.75, =view.height]}]},
				options: {
					id: =page.number
				}
			}
        }, else: {
			#media: {
				top: 0,
				left: {if: =media.width, less-than: 360, then: 248, else: {if: =media.width, more-than: 484, then: 248, else: 307}},
				width: {$switch: [
					{if: =media.width, less-than: 360, then: 236},
					{if: =media.width, more-than: 484, then: 484},
					360
				]},
				height: {$min: [{$max: [{$switch: [
					{if: =media.width, less-than: 360, then: {$divide: [236, =media.aspect]}},
					{if: =media.width, more-than: 484, then: {$divide: [484, =media.aspect]}},
					{$divide: [360, =media.aspect]}
				]}, {$multiply: [.25, =view.height]}]}, {$multiply: [.75, =view.height]}]},
				options: {
					id: =page.number
				}
			}
        }}
		]
    }</style>
	
    <panel id="header_top">
        <p class="article_flashline" embed="flashline"/>
        <p class="article_headline"><span embed="headline"/><mark class="key"/></p>
		<h2 class="article_subhed" embed="subhed" />
	</panel>
	
	<panel id="body_container">
		<box id="media" embed="media" />
		<p class="article_byline" embed="byline"/>
        <panel class="article_body" embed="body"/>
	    
	</panel>
	
</jpml>
