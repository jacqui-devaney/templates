	<style>{
		#b1: {options: { $switch: [
				{if: =scale.phone, then: {large_headline:{if: =page.number, equals:0, then:true, else:false }, show_image:true}},
				{if: =portrait, then: {justify:true, large_headline:true, hide_image:{if: =widescreen, then:true, else:false}}},
				{if: =landscape, then: {justify:true, large_headline:true}}			
			]}},
		#b2: {options: { $switch: [
				{if: =scale.phone, then: {small_headline:true}},
				{if: =portrait, then: {small_headline:true, show_image:true, no_indent:true}},
				{if: =landscape, then: {small_headline:true, show_image:{if: =widescreen, then:false, else:true}, no_indent:true}}			
			]}},
		#b3: {options: {small_headline:true, no_indent:true}},
