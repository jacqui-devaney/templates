<jpml id="OPINION-6story-E_template">
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="OPINION-stylesheet.ejs" />
    <style src="PHONE-stylesheet.ejs" />
    <style>{
		#b1: {options:{header:true, border:{if: =scale.phone, then:true, else:false}}},
		#b2: {options: {small_headline:true, no_border:true}},
		#b3: {options: {small_headline:true}},
		#b4: {options: {small_headline:true, no_border:true}},
		.phone_ad: {display:{if: =scale.phone, then:inherit, else:none}},
		.tablet_ad: {display:{if: =scale.phone, then:none, else:inherit}},
		#b5: {options:{small_headline:true, show_image:true, top_border:true, no_border:{if: =scale.phone, then:false, else:true}, byline:{if-any: [=scale.phone, =scale.large], then:false, else:true}, F_image:{if-all: [=widescreen, =landscape], then:true, else:false}}},
		#b6: {options:{small_headline:true, no_border:{if: =scale.phone, then:false, else:true}, byline:{if-any: [=scale.phone, =scale.large], then:false, else:true}}},
		#h1: {options:{hide_image:{if-all: [=scale.small, =landscape], then:true, else:false}, byline:{if: =scale.phone, then:false, else:true}}},
		#h2: {options:{hide_image:{if-all: [=scale.small, =landscape], then:true, else:false}, byline:{if: =scale.phone, then:false, else:true}, no_border:{if: =scale.phone, then:true, else:false}}}
	}</style>
    <style>{
		$switch: [
			{if: =scale.phone, then: {
					#articles: {
						padding:[0], 
						border-width:[0]
					}
			}},
			{if-any: [=scale.large, =scale.small], then: {	
				$join: [
					{if: =portrait, then: {
							#articles:	{ frame: [8, 10, 362, 610] },
							#b1:	{ frame: [0, 0, 362, 150]},
							#b5:	{ frame: [388, 2, 377, 420]},
							#b6:	{ frame: [388, 422, 377, 196]}
						}, else: {
							#articles:	{ frame: [15, 10, 362, 610] },
							#b1:	{ frame: [0, 0, 362, 150]},
							#b5:	{ frame: [399, 2, 377, 420]},
							#b6:	{ frame: [399, 422, 377, 196]}
						}
					},
					{$switch: [
						{ if: =articles.b1.type, equals: "Letters", then: {
							_comment: "neither have the header",
							#b2: { frame: [0, 160, 362, 140] },
							#b3: { frame: [0, 310, 362, 140] },
							#b4: { frame: [0, 460, 362, 140] }
						}},
						{ if: =articles.b2.type, equals: "Letters", then: {
							_comment: "b2 has the header",
							#b2: { frame: [0, 150, 362, 170], options:{header:true} },
							#b3: { frame: [0, 330, 362, 130] },
							#b4: { frame: [0, 470, 362, 130] }
						}},
						{ if: =articles.b3.type, equals: "Letters", then: {
							_comment: "b3 has the header",
							#b2: { frame: [0, 160, 362, 140] },
							#b3: { frame: [0, 300, 362, 170], options:{header:true} },
							#b4: { frame: [0, 480, 362, 120] }

						}}, 
						{ if: =articles.b4.type, equals: "Letters", then: {
							_comment: "b4 has the header",
							#b2: { frame: [0, 160, 362, 140] },
							#b3: { frame: [0, 310, 362, 140] },
							#b4: { frame: [0, 460, 362, 140], options:{header:true} }

						}}, 
						{ if: true, then: {
							_comment: "neither have the header",
							#b2: { frame: [0, 160, 362, 140] },
							#b3: { frame: [0, 310, 362, 140] },
							#b4: { frame: [0, 460, 362, 140] }

						}}
		        	]}
		    	]  
				
			}}
		]
	}</style>
    
    <box id="articles">
		<box id="b1" embed="article" class="maude unit_95" module="OPINION-RANDO-LETTERS_module.xml" />
    	<box id="b2" embed="article" class="maude unit_95" module="OPINION-RANDO-LETTERS_module.xml" />
    	<box id="ad_background" class="ad_light unit_ad maude phone_ad">
			<box id="highlight_ad" class="ad-rectangle" embed="advertisement" />
		</box>
	    <box id="b3" embed="article" class="maude unit_95" module="OPINION-RANDO-LETTERS_module.xml" />
	    <box id="b4" embed="article" class="maude unit_95" module="OPINION-RANDO-LETTERS_module.xml" />
	</box>
    <box id="ad_background" class="ad_light maude unit_ad tablet_ad">
		<box id="highlight_ad" class="ad-rectangle" embed="advertisement" />
	</box>
	<box id="b5" embed="article" class="maude unit_75" module="TOP-IMAGE_module.xml" />
    <box id="b6" embed="article" class="maude unit_75" module="TOP-IMAGE_module.xml" />

    <box id="h1" embed="article" class="maude unit_highlight" module="HIGHLIGHTS_module.xml" />
    <box id="h2" embed="article" class="maude unit_highlight" module="HIGHLIGHTS_module.xml" />

    
</jpml>

