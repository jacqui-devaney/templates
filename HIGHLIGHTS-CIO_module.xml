<jpml id="HIGHLIGHTS_module">
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="PHONE-MODULES-stylesheet.ejs" />
    <style>{
		jpml: {
				background-color:{if: =scale.phone, then: #fff, else: #b9e4f3},
				padding: [10, 8, 10, 8],
				border-width: {if: =options.portrait, then: [0, 1, 0, 0], else: [1, 0, 0, 0]},
				border-color:#b1aca1
		},
		.cio_highlight_headline: {
			color:#333,
			font-name:Helvetica-Bold,
			font-size:{if: =scale.phone, then:18, else:14},
			line-height:{if: =scale.phone, then:19, else:15},
			text-scale: {$multiply: [=scale.text, 1] }
		},
		.cio_highlight_byline: {
			color:#333,
			font-name:Helvetica-Bold,
			font-size:11,
			line-height:12,
			display: {$switch: [
				{if: =scale.small, then:{if: =options.byline, then:inherit, else:none}},
				{if: =scale.large, then: inherit}
			]}
		},
		.cio_body: {
			color:#333,
			font-name:Helvetica,
			font-size:{if: =scale.phone, then:16, else:13},
			line-height:{if: =scale.phone, then:18, else:15},
			text-overflow: "\u00bb",
			padding: [4, 0, 0, 0],
			display:{if: =options.hide_body, then:none, else:inherit}
		},
		#image_container: { 
			anchor-x: right,
			width: 86,
			pixels-per-point-x:{if: =scale.small, then:.7, else:1},
			pixels-per-point-y:{if: =scale.small, then:.7, else:1},
			image-scale:{if: =scale.small, then:.7, else:1},
			display:{if: =options.hide_image, then:none}
			
		},
		#body-first-p: {
			font-name:Helvetica
		},
		em: {
			font-name:Helvetica
		},
		strong: {
			font-name:Helvetica
		},
		cite: {
			font-name:Helvetica
		},
		
		image: {
			width:76,
			height:76,
			padding: [ 0, 0, 1, 10 ]
		}
    }</style>
    <box id="image_container">
        <image class="A_size" embed="summary-image" />
    </box>
    <p class="cio_highlight_headline"><span embed="headline" /></p>
	<panel embed="body" class="cio_body"/>
</jpml>
