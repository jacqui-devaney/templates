{if: =scale.phone, then: {

	#filler: {
		if-all: [
			=intent.article,
			{if: =app.version, at-least: 5.4},
			{if: =page.number, more-than: 0}
		],
		then: {
			display: none
		}
	},	

	.module_headline: {$switch: [
			{if: =options.small_headline, then:{
				font-size:{ $switch: [
						{if: =issue.edition, equals: "japan", then: 18},
						{if: =issue.edition, equals: "korea", then: 18},
						"20"
					]
				},	
				line-height:{ $switch: [
						{if: =issue.edition, equals: "japan", then: 18},
						{if: =issue.edition, equals: "korea", then: 18},
						"20"
					]
				},
				text-scale: {$multiply: [=scale.text, 1] },
				padding:[0, 0, 0, 0],
				text-overflow:" \u00bb"
				}
			},
			{if: =options.large_headline, then:{
				font-size:{ $switch: [
						{if: =issue.edition, equals: "japan", then: 23},
						{if: =issue.edition, equals: "korea", then: 23},
						"25"
					]
				},	
				line-height:{ $switch: [
						{if: =issue.edition, equals: "japan", then: 23},
						{if: =issue.edition, equals: "korea", then: 23},
						"25"
					]
				},
				text-scale: {$multiply: [=scale.text, 1] },
				padding:[0, 0, 5, 0],
				text-overflow:" \u00bb"
				}
			},
			{if: true, then: {
					font-size:24,
					line-height:{ $switch: [
							{if: =issue.edition, equals: "japan", then: 28},
							{if: =issue.edition, equals: "korea", then: 28},
							"26"
						]
					}
				}
			}

		]
	},	
	.body: {
		text-indent:0,
		font-size:16,
		line-height:20,
		text-scale: {$multiply: [=scale.text, 1] }
		
	},
	.ahed_headline:{
		font-size:20,	
		line-height:20,
		text-scale: {$multiply: [=scale.text, 1] },
		padding:[0, 0, 0, 0],
		text-overflow:" \u00bb",
		font-name:DJ5EscrowCond-Bold,
		color:#333
		
	},
	.highlight_flashline: {
		font-name:DJ5RetinaCd-Semibold,
		font-size:16,
		line-height:18,
		color:#656565,
		paragraph-padding: [ 0, 0, 20, 0 ]
	},
	
	#deco_headline: {
		text-scale: {$multiply: [=scale.text, 1] },
		font-size:18,
		line-height:18
	},
	#deco_bottom_headline: {
		font-size:21,
		line-height:21
	},
	.deco_caption: {
		font-size:14,
		line-height:14
	},
	.continuation_headline: {
		font-size:{if: =options.large_headline, then:18, else:16},
		text-scale: {$multiply: [=scale.text, 1] },
		line-height:19,
		padding:[1, 0, 0, 0]
	},
	#continuation_headline: {
		font-size:18,
		text-scale: {$multiply: [=scale.text, 1] },
		line-height:17
	},
	#strap: {
		padding: [4, 4, 0, 8],
		background-color:#e4e4e4
    },
	
	.subsection: {
		font-size:15,
		text-scale: {$multiply: [=scale.text, 1] },
		line-height:{if-any: [
				{if: =issue.edition, equals: "japan", then:true},
				{if: =article.type, equals: "korea", then:true}
			],
			then: 20,
			else: 16
		},
		text-transform:uppercase
	},
	.strap: {
		font-size:15,
		text-scale: {$multiply: [=scale.text, 1] },
		line-height:16,
		text-transform:uppercase
	},
	.highlight_flashline: {
		font-size:14,
		padding: [ 0, 0, 0, 0 ],
		line-height:14
	},
	.highlight_headline: {
		font-size:16,
		text-scale: {$multiply: [=scale.text, 1] },
		line-height:16,
		padding:[0],
		text-overflow:" \u00bb"
	},
	.highlight_large_headline: {
		font-size:16,
		text-scale: {$multiply: [=scale.text, 1] },
		line-height:16,
		padding:[0],
		text-overflow:" \u00bb"
	},
	.highlight_flashline_small: {
		font-size:14,
		line-height:14
	},
	.article_flashline: {
		font-size:16
	},
	.article_headline: {
		font-size:27,
		line-height:27
	},
	.article_subhed: {
		font-size:18,
		line-height:18
	},
	.article_byline: {
		font-size:15,
		line-height:20
	},
	.article_body: {
		font-size:{$multiply: [16, =view.zoomlevel]},
		line-height:{$multiply: [16, =view.zoomlevel]}
	},
	#mediabucket: {
		display: {if: =page.mediabucket, then:inherit, else:none}
	},
	#pagenext: {
		display: none
	},
	#pageback: {
		display: none
	},
	#pagedown: {
		right: 0, 
		bottom: 0, 
		width: 320,
		height:150,
		position:absolute,
		display:{ if: =app.version, at-least: 5.4, then: none, else: inherit }
	},
	#pageup: {
		top: 0, 
		left: 0, 
		height:150,
		width: 320,
		position:absolute,
		display:{ if: =app.version, at-least: 5.4, then: none, else: inherit }

	},
	
	.opinion_headline: {
		font-size:25,
		text-scale: {$multiply: [=scale.text, 1] },
		line-height:25,
		font-name:DJ5EscrowCond-Bold,
		text-align:left
	},
	.opinion_dek: {
		font-size:17,
		line-height:17,
		text-align:left,
		text-scale: {$multiply: [=scale.text, 1] },
		text-overflow:" \u00bb"
	},
	.deloitte_article_headline: {
		font-size:25,
		line-height:25,
		border-width:[0]
	},
	.deloitte_article_body: {
		font-size:{$multiply: [18, =view.zoomlevel]},
		line-height:{$multiply: [22, =view.zoomlevel]}
	},
	.cio_head: {
		color:#000,
		font-name:DJ5RetinaCd-Medium,
		text-transform:uppercase,
		text-align:left,
		font-size:18,
		text-scale: {$multiply: [=scale.text, 1] }
	},
	.tech_section: {
		font-size:22,
		line-height:23
	},
	.tagline: {
		font-size:11
	},
	.cio_highlight_headline: {
		text-overflow: " \u00bb"
	},
	#extra_small_headline: { 
		font-size:20,
		line-height:20,
		padding:[2, 0, 0, 0],
		text-scale: {$multiply: [=scale.text, 1] }
	},
	
	.large_dek: {
		font-name:DJ5Exchange-Medium,
		text-indent:0,
		font-size:18,
		line-height:20,
		text-overflow: " \u00bb",
        text-align: left,
		text-scale: {$multiply: [=scale.text, 1] },
		color:#000
	},
	.vertical_center: {
		vertical-align:middle
	},
	.hidden_tablet: {
		display: inherit
	},
	.hidden_phone: {
		display: none
	},

	#ad_inline_inner: {
		pixels-per-point-x: 1,
		pixels-per-point-y: 1,
		anchor-x: center,
		anchor-y: middle,
		options: { zone: {$join: [=ad.prefix, abanner]} },
		width: 320,
		height: 50,
		background-color: #e7e2d8
	},

	#ad_inline_outer: {
		pixels-per-point-x: 1,
		pixels-per-point-y: 1,
		position: relative,
		min-height: 100,
		height: 50,
		left: -12,
		top: -80,
		right: -12,
		padding: [10, 0],
		display: none
	},

	#ad_inline_panel: {
		pixels-per-point-x: 1,
		pixels-per-point-y: 1,
		padding: [10, 0],
		min-height: 50,
		display: none
	},

	image: {
		background-color:#e4e4e4
	}
	
}, else:{}}
