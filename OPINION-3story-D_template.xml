<jpml id="OPINION-3story-D_template">
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="OPINION-stylesheet.ejs" />
	<style src="PHONE-stylesheet.ejs" />
	<style>{
		#b1: {options:{header:true, border:{if: =scale.phone, then:true, else:false}}},
		#b3: {options:{small_headline:true, show_image:true, no_image:true, no_border:{if: =scale.phone, then:false, else:true}, byline:{if-any: [=scale.phone, =scale.large], then:false, else:true}, F_image:{if-all: [=widescreen, =landscape], then:true, else:false}}},
		#h1: {options:{hide_image:{if-all: [=scale.small, =landscape], then:true, else:false}, byline:{if: =scale.phone, then:false, else:true}}},
		#h2: {options:{hide_image:{if-all: [=scale.small, =landscape], then:true, else:false}, byline:{if: =scale.phone, then:false, else:true}, no_border:{if: =scale.phone, then:true, else:false}}}
	}</style>
    <style>{ 
		$switch: [
			{if: =scale.phone, then: {
				$join: [
				{#articles: {padding:[0], border-width:[0]}},
				{ $switch: [
					{ if: =articles.b1.type, equals: "Letters", then: {
						_comment: "no header",
						#b1 : {height:122},
						#b2: {options:{small_headline:true}, height:102}
	                }},
					{ if: =articles.b2.type, equals: "Letters", then: {
				 		_comment: "b2 has the header",
						#b2 : { options: {header:true, small_headline:true}, height:122 }
					}},
					{ if: true, then: {
						_comment: "no header",
						#b2: {options:{small_headline:true}}
					}}
			    ]}
				]
			}}, 
			{if-any: [=scale.large, =scale.small], then: {
				$join: [
					{ if: =portrait, then: {
							#articles:	{ frame: [8, 10, 460, 610] },
							#b1:	{ frame: [0, 0, 460, 314] },
							#b3:	 { frame: [486, 2, 280, 615] }
						}, else: {
							#articles:	{ frame: [16, 10, 460, 610] },
							#b1:	{ frame: [0, 0, 460, 314] },
							#b3:	{ frame: [496, 2, 280, 615]}

						}	
					},
					{ $switch: [
						{ if: =articles.b1.type, equals: "Letters", then: {
							_comment: "no header",
							#b2 : { frame: [0, 324, 460, 276] }
		                }},
						{ if: =articles.b2.type, equals: "Letters", then: {
					 		_comment: "b2 has the header",
							#b2 : { frame: [0, 314, 460, 286], options: {header: true} }
						}},
						{ if: true, then: {
							_comment: "no header",
							#b2 : { frame: [0, 324, 460, 276] }
						}}
				    ]}
				]
				
			}}
		]
    }</style>
    
    <box id="articles">
	    <box id="b1" embed="article" class="maude unit_95" module="OPINION-RANDO-LETTERS_module.xml" />
	    <box id="b2" embed="article" class="maude unit_75" module="OPINION-RANDO-LETTERS_module.xml" />
	</box>
    <box id="ad_background" class="ad_light unit_ad maude">
		<box id="highlight_ad" class="ad-rectangle" embed="advertisement" />
	</box>
	<box id="b3" embed="article" class="maude unit_75" module="TOP-IMAGE_module.xml" />

    <box id="h1" embed="article" class="maude unit_highlight" module="HIGHLIGHTS_module.xml" />
    <box id="h2" embed="article" class="maude unit_highlight" module="HIGHLIGHTS_module.xml" />
    

    
</jpml>