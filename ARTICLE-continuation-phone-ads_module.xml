<jpml id="ARTICLE-continuation-phone-ads_module">
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="PHONE-MODULES-stylesheet.ejs" />
	<style>{
		$join: [
		{#body_container : { padding: [0, 10, 0, 10]}},
		{.article_body: { 
			layout-grid-line: {$multiply: [22, =view.zoomlevel]},
			layout-grid-line-offset: {$multiply: [30, =view.zoomlevel]}
			
        }},
		{#body_continuation: {
			content: from-flow(article_body),
			flow: article_body
		}},
		{#filler: {
			position: relative,
			top: 10,
			left: 0,
			right: 0,
			bottom: 0,
			min-height: 50,
			border-image:url(articleBackground.png),
			border-width: [16, 0, 0, 0],
			border-slice: [16, 0, 0, 0]
		}},
		{#continues_label: {
			padding: [0, 10, 3, 0],
			display: { if: =page.count, equals: {$add:[=page.number, 1]}, then:none, else:inherit}

		}}
		]
    }</style>
	<box id="continues_label">
		<p><mark id="continues" /></p>
	</box>
	
	<panel id="body_container">
    	<panel class="article_body" id="body_continuation" embed="body" />
	</panel>
	<box id="filler">
		<box id="highlight_ad" class="ad-rectangle" embed="advertisement" />
	</box>
</jpml>
