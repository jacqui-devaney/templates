<jpml id="FOOTER_module">
	<style src="GLOBAL-stylesheet.ejs"/>
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="FOOTER-stylesheet.ejs" />
	<style>{
		$join: [
        { $switch: [
        { if: =options.top_border, then: {
        jpml: {
        border-width: [1, 0, 0, 0],
        padding: [10, 0, 0, 0],
        border-color: #cfcfcf
        }

        }},
        { if: =options.left_border, then: {
        jpml: {
        border-width: [0, 0, 0, 1],
        border-color: #cfcfcf,
        padding: [0, 0, 0, 10]
        }

        }},
        { if: =options.right_border, then: {
        jpml: {
        border-width: [0, 1, 0, 0],
        border-color: #cfcfcf,
        padding: [0, 10, 0, 0]
        }

        }},
        { if: true, then: {
        jpml: {
        border-width: [0, 0, 0, 0],
        padding: [0, 10, 0, 0]
        }
        }}
        ]},
        {
        #image_wrapper: {
        width: 80,
        height: 80,
        anchor-x: right,
        bottom: 8,
        padding: [0, 0, 0, 10]
        },
        .ahed_subhed: {
        color: black,
        font-size: 16,
        line-height: 20,
        font-name: "DJ5Exchange-Medium",
        padding: [10, 0, 3, 0]
        },
        #stars: {
        font-size: 22,
        line-height: 10,
        content: "*\u00a0\u00a0\u00a0*\u00a0\u00a0\u00a0*",
        text-align: center,
        color: #898b8e
        },
        .ahed_headline: {
        font-name: "DJ5EscrowCond-BoldItalic",
        font-size: 22,
        line-height: 22
        }
        }

        ]
		}</style>



    <box id="image_wrapper">
        <image class="summary-image"/>
    </box>

    <panel>
        <p id="headline" class="ahed_headline"><mark class="m_headline" /></p>
        <p><mark id="stars"/></p>
        <p class="ahed_subhed"><mark class="subhed-mark"/></p>
        <panel class="body">
            <p><mark class="body-first-p-mark" /><mark class="body-mark"/></p>
        </panel>
    </panel>
</jpml>
