<jpml id="OPINION-4story-1E_template">
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="GRID-stylesheet.ejs"/>
    <style src="ADVERTISING-stylesheet.ejs"/>
	<style src="OPINION-stylesheet.ejs" />
    <style src="PHONE-stylesheet.ejs" />
    <style>{
		#b1: {options:{justify:true, header:true}},
		#b2: {options: {justify:true, small_headline:true}},
		#b3: {options: {justify:true, small_headline:true, no_border:true}},
		.phone_ad: {display:{if: =scale.phone, then:inherit, else:none}},
		.tablet_ad: {display:{if: =scale.phone, then:none, else:inherit}},
		#b4: {options:{small_headline:true, justify:true, hide_summary:true, show_image:true, no_image:true, no_border:{if: =scale.phone, then:false, else:true}, byline:{if-any: [=scale.phone, =scale.large], then:false, else:true}}},
		#h1: {options:{hide_image:{if-all: [=scale.small, =landscape], then:true, else:false}, byline:{if: =scale.phone, then:false, else:true}}},
		#h2: {options:{hide_image:{if-all: [=scale.small, =landscape], then:true, else:false}, byline:{if: =scale.phone, then:false, else:true}, no_border:{if: =scale.phone, then:true, else:false}}}
	}</style>
	<style>{ 
			$switch: [
				{if: =scale.phone, then: {
						#articles: {
							padding:[0], 
							border-width:[0]
						}
				}},
				{if-any: [=scale.large, =scale.small], then: {
					$join: [
						{
							#b1:	{ 
								top:8,
								height:230
							},
							#b4:	 { 
								top:0,
								height:706
							}	
							
						},
						{ $switch: [
							{ if: =articles.b1.type, equals: "Letters", then: {
								_comment: "neither have the header",
								#b2: { 
									top:246,
									height:222
								},
								#b3: { 
									top:476,
									height:222
								}
			                }},
							{ if: =articles.b2.type, equals: "Letters", then: {
								_comment: "b2 has the header",
								#b2: { 
									top:246,
									height:222,
									options:{header:true}
								},
								#b3: { 
									top:476,
									height:222
								}
							}},
							{ if: =articles.b3.type, equals: "Letters", then: {
								_comment: "b3 has the header",
								#b2: { frame: [0, 230, 362, 180] },
								#b3: { frame: [0, 410, 362, 190], options: {header: true} }
							}}, 
							{ if: true, then: {
								_comment: "neither have the header",
								#b2: { frame: [0, 230, 362, 180] },
								#b3: { frame: [0, 420, 362, 180] }
							}}
			        	]}
		    		]
					
				
				}}
			]
	}</style>

    <box id="border" />
    <box id="b1" embed="article" class="column4 positionx1 maude unit_100" module="OPINION-RANDO-LETTERS_module.xml" />
    <box id="b2" embed="article" class="column4 positionx1 maude unit_100" module="OPINION-RANDO-LETTERS_module.xml" />
    <box id="b3" embed="article" class="column4 positionx1 maude unit_100" module="OPINION-RANDO-LETTERS_module.xml" />
    <box id="section_ad" class="column2 positionx7-5 ad_light maude unit_ad">
		<box id="highlight_ad" class="ad-rectangle" embed="advertisement" />
	</box>
	<box id="b4" embed="article" class="column2 positionx5 maude unit_75" module="TOP-IMAGE_module.xml" />

    <box id="h1" embed="article" class="column2 positionx7-1 maude unit_highlight" module="HIGHLIGHTS_module.xml" />
    <box id="h2" embed="article" class="column2 positionx7-3 maude unit_highlight"  module="HIGHLIGHTS_module.xml" />
    <box id="background_color" />

    
</jpml>