<jpml id="ARTICLE-front-die-welt_module">
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="GLOBAL-stylesheet.ejs" />
	<style>{
		$join: [
		{.die_welt:{
			background-image:url(welt-white.png),
			background-position:top-left,
			width:218,
			padding:[10, 0],
			height:21
		}},
		{.die_welt_article:{
			padding:[15, 0, 15, 11]
		}},
		{#header_top: { 
			padding:[6, 10, 8, 15],
			border-width:[1, 0, 0, 0],
			border-color:#e7e7e7
		}},
		{#body_container: { 
            padding: [10, 20, 0, 10],
			column-count: {$divide: [=view.width, {$multiply:[260, =scale.dpi]}]},
            column-gutter: 30,
			column-height:balance,
			flow: article_body,
			min-height: {if: =page.mediabucket, then:400, else:200},
			layout-grid-line: {$multiply: [22, =view.zoomlevel]},
			layout-grid-line-offset: {$multiply: [18, =view.zoomlevel]}
			
        }},
		{.body-bug: {
			display: none
		}},
		{#die_welt_header: {
			border-width:[3, 0, 0, 0],
			border-color:#10507f
		}},
		{#mediabucket: {
			width:546,
			height:385,
			anchor-x:center,
			padding: [0, 0, 0, 8]
		}},
		{if: =portrait, then: {
            #mediabucket_container:	{ frame: [0, 0, 565, 402]  }
        }, else: {
        	#mediabucket_container:	{ frame: [290, 22, 565, 402] }
        }},
		{#filler: {
			position: relative,
			top: 10,
			left: 0,
			right: 0,
			bottom: 0,
			min-height: 0,
			border-image:url(articleBackground.png),
			border-width: [16, 0, 0, 0],
			border-slice: [16, 0, 0, 0]
		}}
		
		]
    }</style>
	<panel id="die_welt_header">
		<panel class="die_welt_article">
			<panel class="die_welt" />
		</panel>
	</panel>
	<box id="continues_label">
		<p><mark id="continues" /></p>
	</box>
	
    <panel id="header_top">
        <p class="article_headline"><span embed="headline"/><mark class="key"/></p>
		<h2 class="article_subhed" embed="subhed" />
	</panel>
	<box class="hr"></box>
	
	<panel id="body_container">
		<box id="mediabucket_container">
			<box id="mediabucket" embed="mediabucket" />
		</box>
		<p class="article_byline" embed="byline"/>
        <panel class="article_body" embed="body"/>
	    
	</panel>
	<box id="filler">
		<box id="article_advertisement" class="ad-twocolumn" embed="advertisement"/>
	</box>
	
</jpml>


