{
	.vertical-grid-module: {
		layout-grid-line-offset: 5,
		layout-grid-line: { 
			if: =intent.article, then: { $multiply: [20, =view.zoomlevel] }, else: 20 
		}
	},
	.small-vertical-grid-module: {
		layout-grid-line-offset: -31,
		layout-grid-line: { 
			if: =intent.article, then: { $multiply: [20, =view.zoomlevel] }, else: 20 
		}
	},
	#vertical-grid: {
		top: { if: =scale.tablet, then: 68, else: inherit }
	},
	.visual-content-padding: {
		padding: [10, 0, 10, 0]
	},
	.visual-content-top: {
		top: 10
	}
}
