<jpml id="SAVED_ARTICLES-template">
	<!-- Do not delete me: used by the app to lay out Saved Articles -->
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="GRID-stylesheet.ejs" />
	<style src="CONTINUATION-stylesheet.ejs" />
	<style src="PHONE-stylesheet.ejs" />
	<style src="RAIL-stylesheet.ejs" />
	<style>{
		if: =scale.phone, then: {
			jpml: {
				padding:[0, 0, 0, 0]
			}
		}, else: {
			jpml: {
				padding:[{if: =page.number, equals: 0, then: 100, else: 0}, 15, 0, 15]
			}
		}
	}</style>
	<style>{
		if: =scale.phone, then: {
			#b1: {
				left: 0, 
				right: 0, 
				top: 0, 
				height: 135, 
				position: relative,
				options: {
					module: url(NAVIGATION_module.xml),
					medium_headline: true, 
					show_body: true,
					top_border: true
				}
			},
			jpml: {
				min-height: 0,
				max-height: 10000
			}
		}, else: {
			#b1: {
				left: 0,
				right: 0,
				top: 0,
				height: {if: =scale.tablet, then: 170, else: 135},
				position: relative,
				options: {
					module: {if: =scale.tablet, then: url(LEFT-IMAGE_module.xml), else: url(NAVIGATION_module.xml)},
					medium_headline: true,
					show_body: true,
					top_border: {if: =page.number, equals: 0, then: false, else: true}
				}
			},
			jpml: {
				min-height: 0,
				max-height: 10000
			}		
		}

	}</style>
	<box id="b1" embed="article"/>
</jpml>