<jpml id="RIGHT-INSET-IMAGE_module">
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="PHONE-MODULES-stylesheet.ejs" />
	<style>{
		jpml: {
			border-color: #d8d8d8,
			background-color: =options.background_color
		}
	}</style>
	<style>{
		$join: [
			{$switch: [
				{ if: =options.top_border, then: {
					jpml: {
						border-width: [1, 0, 0, 0],
						padding: [12, 0, 0, 0]
					}

				}},
				{ if: =options.left_border, then: {
					jpml: {
						border-width: [0, 0, 0, 1],
						padding: [0, 0, 0, 10]
					}

				}},
				{ if: =options.right_border, then: {
					jpml: {
						border-width: [0, 1, 0, 0],
						padding: [0, 10, 0, 0]
					}

				}},
				{ if: true, then: {
					jpml: {
						border-width: [0, 0, 0, 0],
						padding: [0, 0, 0, 0]
					}
				}}

			]},
			{
				#image_wrapper: {
					anchor-x:right,
					width: {$switch:[
						{if: =options.A_image, then:100},
						{if: =options.small_image, then:113},
						{if: =options.square_image, then:174},
						242
					]},
					padding: [0, 0, 0, 8],
					anchor-y:{if: =options.A_image, then:bottom, else:top},
					display:{if: =options.hide_image, then:none, else:inherit}

				},
				image: {
					pixels-per-point-x:1,
					pixels-per-point-y:1,
					height: {$switch:[
						{if: =options.small_image, then:92},
						{if: =options.square_image, then:150},
						92
					]},
					width: {$switch:[
						{if: =options.A_image, then:100},
						{if: =options.small_image, then:113},
						{if: =options.square_image, then:174},
						236
					]}
				},

				.byline: {
					display: {if: =options.show_byline, then:inherit, else:none}

				},
				.body: {
					display: {if: =options.show_body, then:inherit, else:none}

				},
				.module_flashline: {
					display: {if: =options.show_flashline, then:inherit, else:none}
				}
			}
		]

		}</style>
		<style>{
			if: =scale.phone, then:{
				jpml:{
					padding:[0, 8],
					border-width: [{if: =options.top_border, then:1, else:0}, 0, {if: =options.no_border, then:0, else:1}, 0],
					border-color: #d6d6d6
				},
				#image_wrapper: {
					display:none
				},
				#body: {
					display:none
				},
				#headline: {
					vertical-align:middle
				}
			}, else:{}
		}</style>
		<panel id="headline">
			<p class="module_headline"><mark class="m_headline" /></p>
		</panel>
    	<panel>
            <box id="image_wrapper" class="hidden_phone">
				<image class="summary-image"/>
			</box>
			<p class="module_flashline"><mark class="flashline-mark" /></p>
			<p class="byline"><mark class="byline-mark"/></p>
            <panel class="body">
            	<p><mark class="body-mark"/></p>
            </panel>
		</panel>

</jpml>
