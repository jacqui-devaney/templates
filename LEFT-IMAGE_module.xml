<jpml id="LEFT-IMAGE_module">
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="PHONE-MODULES-stylesheet.ejs" />
	<style>{
		jpml: {
			background-color: =options.background_color,
			border-color: #d8d8d8
		},
		#top_flashline: {
			display: none
		}
	}</style>
	<style>{
		$join: [
			{$switch: [
				{ if: =options.top_border, then: {
					jpml: {
						border-width: [1, 0, 0, 0],
						padding: [10, 0, 0, 0]
					}

				}},
				{ if: =options.left_border, then: {
					jpml: {
						border-width: [0, 0, 0, 1],
						padding: [0, 0, 0, 10]
					}

				}},
				{ if: =options.right_border, then: {
					jpml: {
						border-width: [0, 1, 0, 0],
						padding: [0, 10, 0, 0]
					}

				}},
				{ if: true, then: {
					jpml: {
						border-width: [0, 0, 0, 0],
						padding: [0, 0, 0, 0]
					}
				}}

			]},
			{
				#deco_container: {
					$switch: [
						{if: =options.top_image, then:{
							width:=view.width,
							padding: [0, 0, 10, 0]
						}},
						{if: =options.tall_image, then:{
							width:=view.width,
							padding: [0, 0, 10, 0],
							height: 362
						}},
						{if: =options.squarish_image, then:{
							anchor-x:left,
							anchor-y:top,
							width: 184,
							padding: [0, 0, 10, 0]
						}},
						{if: true, then: {
							anchor-x:left,
							anchor-y:{if: =options.A_image, then:bottom, else:top},
							width: {$switch:[
								{if: =options.large_image, then:501},
								{if: =options.small_image, then:119},
								{if: =options.tall_image, then:=view.width},
								248
							]}
						}}

					]
				},

				image: {
					pixels-per-point-x:1,
					pixels-per-point-y:1,
					height: {
						$switch: [
							{if: =options.tall_image, then:362},
							{if: =options.top_image, then:{$multiply: [=view.width, .62 ]}},
							{$subtract:[=view.height, {if: =options.top_border, then:12, else:0}]}
						]
					},
					width: {$switch:[
						{if: =options.large_image, then:486},
						{if: =options.small_image, then:92},
						{if: =options.squarish_image, then:174},
						{if: =options.top_image, then:=view.width},
						{if: =options.tall_image, then:=view.width},
						236
					]},
					image-scale: 0
	            },

				.byline: {
					display: {if: =options.show_byline, then:inherit, else:none}

				},
				.body: {
					display: {if: =options.show_body, then:inherit, else:none}

				},
				#top_flashline: {
					display: {if: =options.show_top_flashline, then:inherit, else:none}
				}
			}
		]

		}</style>
		<style>{
			if: =scale.phone, then:{
				jpml:{
					padding:[0, 8],
					border-width: [{if: =options.top_border, then:1, else:0}, 0, {if: =options.no_border, then:0, else:1}, 0],
					border-color: #d6d6d6
				},
				#image_wrapper: {
					display:none
				},
				#body: {
					display:none
				},
				#headline: {
					vertical-align:middle
				}
			}, else:{}
		}</style>
		<style>{
			if: =page.section, equals: "WSJ_MAGAZINE", then: {
				.module_flashline: {
					font-name: HelveticaNeue-Light,
					font-size: 12
				},
				.module_headline: {
					font-name: DJ5EscrowCond-Light,
					font-size: {if: =options.large_headline, then: 32, else: 24},
					line-height: {if: =options.large_headline, then: 36, else: 24},
					text-transform: uppercase,
					padding:[0, 0, 2, 0]
				},
				.body: {
					color: #222221
				}
			}
		}</style>
		<box id="deco_container" embed="deco-image">
			<image embed="summary-image" />
		</box>
		<panel id="headline">
			<p class="module_flashline" id="top_flashline"><span embed="flashline" /></p>
			<p class="module_headline"><mark class="m_headline" /></p>
            <p class="byline" embed="byline"/>
            <panel class="body" embed="body"/>
        </panel>

</jpml>
