{
	jpml: {
		image-scale: 1,
		text-scale: 1,
		pixels-per-point-x: 1,
		pixels-per-point-y: 1,
		min-height: 0,
		padding:[0, 0, 0, 0]
	},
	.item: {
		font-size: 14,
		padding:[9, 12],
		position:relative
	},
	p: {
		line-clamp: 6,
		text-overflow: " \u00bb",
		border-width:[0, 0, 1, 0],
		border-color:#d8d8d8
	},
	.break: {
		line-height:6
	},
	image: {
		pixels-per-point-x:1,
		pixels-per-point-y:1,
		width: {$subtract: [=view.width]},
		height: {$multiply: [=view.width, .66 ]}, 
		padding: [0, 0, 10, 0],
		image-scale: 1
	}
	
}
