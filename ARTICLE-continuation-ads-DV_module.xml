<jpml id="ARTICLE-continuation-ads_module">
	<style src="GRID-stylesheet.ejs" />
	<style src="ADVERTISING-stylesheet.ejs" />
	<style src="ARTICLE-stylesheet.ejs" />
	<style>{
		$join: [
			{.article_body: { 
	            column-count: 3,
	            column-gutter: 10,
				column-height:{ if: =page.count, equals: {$add:[=page.number, 1]}, then:inherit, else:balance},
				layout-grid-line: {$multiply: [24, =view.zoomlevel]},
				padding: [0, 10, 0, 0]
	        }},
			{#body_continuation: {
				content: from-flow(article_body),
				flow: article_body
			}},
			{#media: {
				width:246,
				height:392,
				options: {
					id: =page.number
				}
			}},
			{if: =portrait, then: {
	            #mediabucket_container:	{ 
					width:246,
					height:371,
					anchor-x:right

	 			}
	        }, else: {
	        	#mediabucket_container:	{ 
					top:0,
					height:402,
					width:246,
					left:258
					
				}
	        }},
			{#article_ad: {
				top:0,
				height:704,
				left:768
			}}
			
		]
    }</style>
	
	<panel id="body_container">
    	<box id="article_ad" class="positionx7 column2">
			<box id="skyscraper_ad" class="ad-skyscraper" embed="advertisement" />
		</box>
        <box id="mediabucket_container">
			<box id="media" embed="media" />
		</box>
    	<panel class="article_body" id="body_continuation" embed="body" />
	</panel>
</jpml>
