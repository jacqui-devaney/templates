<jpml id="OPINION-3story-E_template">
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="OPINION-stylesheet.ejs" />
    <style>{ 
		$join: [
				{#h2:	{options:{highlight_light:true, byline:true, hide_flashline:true, hide_image:{if: =scale.small, then:true, else:false}}}},
				{#h1:	{options:{highlight_light:true, byline:true, hide_flashline:true, hide_image:{if: =scale.small, then:true, else:false}}}},
				{ if: =portrait, then: {
					#articles:	{ frame: [8, 10, 362, 610] },
					#b1:	{ frame: [0, 0, 362, 314], options:{header:true} },
					#b3:	 { frame: [388, 2, 377, 615], options:{small_headline:true, show_image:true, no_border:true, byline:{if: =scale.small, then:true, else:false}} }
				}, else: {
					#articles:	{ frame: [19, 10, 362, 610] },
					#b1:	{ frame: [0, 0, 362, 314], options:{header:true} },
					#b3:	{ frame: [399, 2, 377, 615], options:{small_headline:true, show_image:true, no_border:true, byline:{if: =scale.small, then:true, else:false}} }
				}	
			},
			{ $switch: [
				{ if: =articles.b1.type, equals: "Letters", then: {
					_comment: "no header",
					#b2 : { frame: [0, 324, 362, 276] }
                }},
				{ if: =articles.b2.type, equals: "Letters", then: {
			 		_comment: "b2 has the header",
					#b2 : { frame: [0, 314, 362, 286], options: {header: true} }
				}},
				{ if: true, then: {
					_comment: "no header",
					#b2 : { frame: [0, 324, 362, 276] }
				}}
		    ]}
		]
    }</style>
    <box id="articles">
	    <box id="b1" embed="article" module="OPINION-RANDO-LETTERS_module.xml" />
	    <box id="b2" embed="article" module="OPINION-RANDO-LETTERS_module.xml" />
	</box>
    <box id="l4" class="line" />
    <box id="b3" embed="article" module="TOP-IMAGE_module.xml" />

    <box id="h1" embed="article" module="HIGHLIGHTS_module.xml" />
    <box id="h2" embed="article" module="HIGHLIGHTS_module.xml" />
    <box id="ad_background" class="ad_light">
		<box id="highlight_ad" class="ad-rectangle" embed="advertisement" />
	</box>

    
</jpml>