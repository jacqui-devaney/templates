<jpml id="ARTICLE-front-h-slideshow_module">
	<style src="GLOBAL-stylesheet.ejs"/>
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="ARTICLE-stylesheet.ejs" />
	<style>{
		#large_media: {
			top: 0,
			left: 0,
			right: 0,
			height: { if: =portrait, then: 550, else: 440 },
			padding: [0, 0, { if: =portrait, then: 10, else: 20 }, 0],
			options: {
				id: =page.number,
				hideCaption: true
			}			
		},
		.module_flashline: {
			font-name: "HelveticaNeue-Light",
			font-size: 10,
			line-height: 14,
			color:#212121
		},
		.article_headline: {
			font-name: "DJ5EscrowCond-Light",
			font-size: 38,
			line-height: 40,
			color: #212121,
			text-transform: uppercase
		},
		#caption_box: {
			background-color: black,
			position: relative,
			left: 0,
			right: 0,
			bottom: 0
		},
		#media_caption: {
			font-name: "DJ5Exchange-Medium",
			font-size: 11,
			line-height: 16,
			color: white,
			padding: [12]
		},
		#body_container: {
			text-align: center,
			position: relative,
			padding: [{ if: =portrait, then: 80, else: 10 }, 120, 0, 120]
		},
		#hairline_panel: {
			padding: [5, 0, 15, 0]
		},
		#hairline: {
			position: relative,
			background-color: #d8d8d8,
			anchor-x: center,
			width: 230,
			height: 1
		},
		.article_body: {
			text-align: center
		},
		.body-last-p-mark: {
			display: none
		}

	}</style>
	<box id="large_media" embed="media"/>
	<box id="body_container">
        <p class="module_flashline" embed="flashline"/>
		<p class="article_headline"><span embed="headline"/></p>
		<panel id="hairline_panel">
			<box id="hairline"/>
		</panel>
		<panel class="article_body" embed="body"/>
	</box>
</jpml>
