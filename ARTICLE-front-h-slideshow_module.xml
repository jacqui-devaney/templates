<jpml id="ARTICLE-front-h-slideshow_module">
	<style src="GLOBAL-stylesheet.ejs"/>
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="ARTICLE-stylesheet.ejs" />
	<style src="MEDIA-stylesheet.ejs" />
	<style>{
		#large_media: {
			top: 0,
			left: 0,
			right: 0,
			height: { if: =portrait, then: 550, else: 440 },
			padding: [0, 0, { if: =portrait, then: 10, else: 20 }, 0],
			options: {
				id: =page.number,
				hideCaption: true
			}
		},
		.module_flashline: {
			display: { if: =page.section, equals: WSJ_MAGAZINE, else: none },
			font-name: { if: =page.section, equals: WSJ_MAGAZINE, then: "HelveticaNeue-Light" },
			font-size: 10,
			line-height: 14,
			color: { if: =page.section, equals: WSJ_MAGAZINE, then: #212121 }
		},
		.article_headline: {
            font-name: {$switch:[
                { if: =page.section, equals: WSJ_MAGAZINE, then: "DJ5EscrowCond-Light" },
                { if: =page.section, equals: SPECIAL_REPORT, then: "WhitneySSm-Semibold" }
            ]},
			font-size: { if: =page.section, equals: SPECIAL_REPORT, then: 40, else: 38 },
			line-height: 40,
            padding: { if: =page.section, equals: SPECIAL_REPORT, then: [0, 0, 14, 0] },
			color: { if: =page.section, equals: WSJ_MAGAZINE, then: #212121 },
			text-transform: { if: =page.section, equals: WSJ_MAGAZINE, then: uppercase }
		},
        #caption_box: {
            background-color: black,
            position: relative,
            left: 0,
            right: 0,
            bottom: 0
        },
        #media_caption: {
            font-name: "DJ5Exchange-Medium",
            font-size: 11,
            line-height: 16,
            color: white,
            padding: [12]
        },
		#body_container: {
			text-align: center,
			position: relative,
			padding: [{ if: =portrait, then: 80, else: 10 }, 120, 0, 120]
		},
		.article_body: {
            text-align: center,
            font-name: { if: =page.section, equals: SPECIAL_REPORT, then: "WhitneySSm-Book" }

		},
		#hairline_panel: {
			padding: [5, 0, 15, 0]
		},
		#hairline: {
			position: relative,
			background-color: #d8d8d8,
			anchor-x: center,
			width: 230,
			height: 1
		},
		.body-last-p-mark: {
			display: none
		}

	}</style>
    <box id="media_container">
            <p id="media_title"><mark id="mark_media_title"/></p>
            <p id="media_vr_header"><mark id="mark_media_vr_header"/></p>
            <box id="large_media" embed="media"/>
            <p id="media_vr_footer"><mark id="mark_media_vr_footer"/></p>
            <box id="caption box">
                <p id="media_caption"><mark id="mark_caption"/></p>
            </box>
            <p id="media_vr_link"><a href="http://wsj.com/virtual-reality"><mark id="mark_media_vr_link"/></a></p>
    </box>

	<box id="body_container">
        <p class="module_flashline" embed="flashline"/>
		<p class="article_headline"><span embed="headline"/></p>
		<panel id="hairline_panel">
			<box id="hairline"/>
		</panel>
		<panel class="article_body" embed="body"/>
	</box>
</jpml>
