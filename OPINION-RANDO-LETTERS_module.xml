<jpml id="OPINION-RANDO-LETTERS">
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style>{
		$join: [		
			{ #rando_header: { display: { if: =options.rando, else:none }} },
			{ #letters_header: { display: { if: =options.letters, else:none }} },
		
		
			{ $switch: [
				{ if: =article.type, equals: "Letters", then: {
					.letters_headline: { display: inherit},
					.opinion_headline: { display: none},
					.opinion_dek: { display: none}
				
				}},
				{ if: true, then: {
					.letters_headline: { display: none},
					.opinion_headline: { display: inherit},
					.opinion_dek: { display: inherit}
				}}
			]} 
	]			
	
		
	}</style>
	<panel id="rando_header">
	    <p class="rando_heading"><mark class="rando" /></p>
		<box id="opinion_line" />
	</panel>
	<panel id="letters_header">
	    <p class="letters_heading"><mark class="letters" /></p>
		<box id="letters_line" />
	</panel>
	<panel id="articles">
		<p class="opinion_headline"><span embed="headline" /><mark class="key" /></p>
		<p class="letters_headline"><span embed="headline" /><mark class="key" /></p>
		<p class="opinion_dek"><span embed="subhed" /></p>
		<panel class="body" embed="body" />
	</panel>
	
</jpml>