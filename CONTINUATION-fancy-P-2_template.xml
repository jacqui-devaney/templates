<jpml id="CONTINUATION-fancy-P-2_template">
	<style src="CONTINUATION-stylesheet.ejs" /> 
	<style src="GLOBAL-stylesheet.ejs" /> 
	<style src="PHONE-stylesheet.ejs" /> 
	<style>{
		#deco: {options: { $switch: [
				{if: =scale.phone, then: {normal_headline:true, G_image:true, small_caption:true}},
				{if: =portrait, then: {bottom_headline:true, bottom_border:true, P_image:true, long_deco:{if: =scale.small, then:true, else:false}, narrow_text:{if: =scale.small, then:false, else:true}}},
				{if: =landscape, then: {bottom_headline:true, no_border:true, F_image:{if: =widescreen, then:true, else:false}, P_image:{if: =widescreen, then:false, else:true}, narrow_text:true}}			
		]}},
		#b1 : {
			options: {hide_image:{if: =landscape, then:true}, hide_strap: {if:=articles.b1.show_subsection, then: false, else: {if: =scale.phone, then:true, else:false}}, bind: {if:=scale.phone,then:none}, reuse:{if:=scale.phone,then:continuation}} 
		},
		#b2 : {
			options: {hide_image:{if: =landscape, then:true}, hide_strap: {if:=articles.b2.show_subsection, then: false, else: true}, bind: {if:=scale.phone,then:none}, reuse:{if:=scale.phone,then:continuation}} 
		}
			
	}</style>
	<style>{
		$switch: [
	        {if: =scale.phone, then: {
				#b1: {
							height: {if:=articles.b1.show_subsection, then:inherit, else:50}
				},
		        #b2: {
		                    height: {if:=articles.b2.subsection, equals:=articles.b1.subsection, then: 50} 
		        }
		        
			}},
			{if: =portrait, then: {
				#deco : { 
					frame: {$switch: [
						{if: =widescreen, then: [10, 0, 749, 461]},
						{if: =scale.large, then: [0, 0, 765, 604]}
					]}
				},
	            #b1 : { 
						frame: {$switch: [
							{if: =widescreen, then: [0, 469, 384, 407]},
							{if: =scale.large, then: [0, 612, 384, 264]}
						]}
				},
	            #b2 : { 
						frame: {$switch: [
							{if: =widescreen, then: [384, 469, 384, 407]},
							{if: =scale.large, then: [384, 612, 384, 264]}
						]}
				}

	        }},
	 		{if: =landscape, then: {
		        #b1 : { frame: [767, 0, 256, 310]},
		        #b2 : { frame: [767, 310, 256, 310]},
		        #deco : { frame: [0, 0, 765, 604]}
	        }}
    ]}</style>
    <box id="b1" embed="article" class="maude unit_continuation_strap" module="CONTINUATION-dynamic_module.xml" />    
    <box id="b2" embed="article" class="maude unit_continuation_strap" module="CONTINUATION-dynamic_module.xml" />
    <box id="deco" embed="article" class="maude unit_G_deco" module="DECO_module.xml" />

</jpml>

