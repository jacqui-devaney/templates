<jpml id="OPINION-5story-D" stylesheet="OPINION-stylesheet.ejs">
    <style>
		{ $join: [
			{
				#b1:	{ frame: [1, 50, 474, 156] },
				#b4:	{ frame: [389, 3, 281, 412] },
				#b5:	{ frame: [389, 412, 281, 207] }
			},
			{ $switch: [
				{ if: =articles.b2.type, equals: "Letters", then: {
					_comment: "b2 has the header",
					#b2: { frame: [1, 206, 474, 206], options: {header: true} },
					#b3: { frame: [1, 412, 474, 207] }
				}},
				{ if: =articles.b3.type, equals: "Letters", then: {
					_comment: "b3 has the header",
					#b2: { frame: [1, 206, 474, 206] },
					#b3: { frame: [1, 412, 474, 207], options: {header: true} }
				}}, 
				{ if: true, then: {
					_comment: "neither have the header",
					#b2: { frame: [1, 206, 474, 206] },
					#b3: { frame: [1, 412, 474, 207] }
				}}
        	]}
    	]}    
    </style>
    
    <box id="b1" module="OPINION-RANDO-LETTERS_module.xml" />
    <box id="b2" module="OPINION-RANDO-LETTERS_module.xml" />
    <box id="b3" module="OPINION-RANDO-LETTERS_module.xml" />
    <box id="l3" class="line" />
    <box id="b4" module="TOP-IMAGE_module.xml" />
    <box id="b5" module="TOP-IMAGE_module.xml" />

    <box id="h1" module="HIGHLIGHTS-module.xml" />
    <box id="l1" class="line" />
    <box id="h2" module="HIGHLIGHTS-module.xml" />
    <box id="l2" class="line" />    
