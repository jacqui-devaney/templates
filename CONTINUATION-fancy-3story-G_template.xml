<jpml id="CONTINUATION-fancy-3story-G_template">
	<style src="GLOBAL-stylesheet.ejs" /> 
	<style src="PHONE-stylesheet.ejs" /> 
    <style>{
		#b1: {options: { $switch: [
				{if: =scale.phone, then: {bottom_border:true, hide_content:true}},
				{if: =portrait, then: {large_headline:true, show_flashline:true, show_image:true, right_border:true}},
				{if: =landscape, then: {large_headline:true, show_flashline:true, show_image:true, right_border:true, F_image:{if:=widescreen, then:true, else:false}}}			
		]}},
		#b2: {options: { $switch: [
				{if: =scale.phone, then: {hide_content:true}},
				{if: =portrait, then: {medium_headline:true, show_flashline:true, one_column:true}},
				{if: =landscape, then: {medium_headline:true, show_flashline:true}}			
		]}},
		#b3: {options: { $switch: [
				{if: =scale.phone, then: {hide_content:true}},
				{if: =portrait, then: {small_headline:true, show_flashline:true, top_border:true}},
				{if: =landscape, then: {small_headline:true, show_flashline:true, top_border:true}}			
		]}}

    }</style>
	<style>{
    $switch: [ 
        {if: =scale.phone, then: {
       }},
        {if: =portrait, then: {
            #b1: {
						height: {if:=articles.b1.show_subsection, then:inherit, else:50}
			},
	        #b1 : { 
					frame: {$switch: [
						{if: =widescreen, then: [0, 5, 512, 547]},
						{if: =scale.large, then: [0, 5, 512, 547]}
					]}
			},
            #b2 : { 
					frame: {$switch: [
						{if: =widescreen, then: [512, 5, 256, 547]},
						{if: =scale.large, then: [512, 5, 256, 547]}
					]}
			},
            #b3 : { 
					frame: {$switch: [
						{if: =widescreen, then: [4, 560, 760, 315]},
						{if: =scale.large, then: [4, 560, 760, 305]}
					]}
			}
        }},
        {if: =landscape, then: {
	        #b1 : { frame: [0, 5, 512, 609] },
	        #b2 : { frame: [520, 0, 496, 310] },
	        #b3 : { frame: [520, 310, 496, 310] }
        }}
    ]}</style>
    <box id="b1" class="maude unit_continuation_strap" embed="article" module="HEADLINE-IMAGE_module.xml" />    
    <box id="b2" class="maude unit_continuation_strap" embed="article" module="RIGHT-MIDDLE-INSET-IMAGE_module.xml" />
    <box id="b3" class="maude unit_continuation_strap" embed="article" module="RIGHT-MIDDLE-INSET-IMAGE_module.xml" />

</jpml>

