<jpml id="TOP-IMAGE_module">
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="PHONE-MODULES-stylesheet.ejs" />

	<style>{
		jpml: {
			background-color: =options.background_color,
			border-color: #d8d8d8
		}
	}</style>
	<style>{
		$join: [
			{ $switch: [
				{ if: =options.top_border, then: {
					jpml: {
						border-width: [1, 0, 0, 0],
						padding: [7, 10, 0, 0]
					}

				}},
				{ if: =options.left_border, then: {
					jpml: {
						border-width: [0, 0, 0, 1],
						padding: [0, 0, 0, 10]
					}

				}},
				{ if: =options.right_border, then: {
					jpml: {
						border-width: [0, 1, 0, 0],
						padding: [0, 10, 0, 0]
					}

				}},
				{ if: true, then: {
					jpml: {
						border-width: [0, 0, 0, 0],
						padding: [0, 0, 0, 0]
					}
				}}
			]},
			{
				#body: {
					display: {if: =options.hide_body, then:none, else:inherit}
		        },
		        #deco_container: {
		        	if: =options.float_image, equals: right, then: {
		        		anchor-x: right,
		        		padding: [8],
		        		width: 111
		        	}
		        },
				image: {
					pixels-per-point-x:1,
					pixels-per-point-y:1,
	                image-scale: 1,
	                display: { if: =options.show_image, then:inherit, else:none },
					height: {$multiply: [=view.width, .62 ]},
					padding: [0, 0, 17, 0],
					options: {
						$switch: [
							{ if: =options.F_image, then: {match: { width:571, height:226, max-height:226 } } },
							{ if: =options.OZ_image,then: {match: { width:570, height:612, min-height:612 } } },
							{ if: =options.DV_image,then: {match: { width:262, height:394, min-height:394 } } },
							{ if: =options.G_image, then: {match: { width:553, height:369, min-height:369 } } }
						]
					}
	            },
				.byline: {
					display:{if: =options.show_byline, then:inherit, else:none}

				},
				.module_flashline: {
					display: {if: =options.show_flashline, then:inherit, else:none}
				}
			}
		]
	}</style>
	<style>{
		if: =scale.phone, then: {
			jpml: {
				padding:[0]
			},
			#headline: {
				padding: [8, 8, 0, 8]
			},
			image: {
				height: {$multiply: [=view.width, .58 ]},
				width:=view.width,
				display:inherit,
				padding: [0]

			},
			.byline: {
				display: none
			},
			#body: {
				padding: [0, 8, 0, 8]
			},
			.body: {
				display: none
			},
			#summary: {
				display: inherit
			}

		}, else: {
			#summary: {
				display: none
			}
		}
	}</style>
	<style>{
		if: =options.float_image, equals: right, then: {
			image: {
				width: 111,
				height: 111,
				padding: [0],
				image-scale: 0.5
			}
		}
	}</style>
	<box id="deco_container" embed="deco-image">
		<image embed="summary-image" />
	</box>
	<panel id="vertical">
		<panel id="headline">
			<p class="module_headline"><mark class="m_headline" /></p>
		</panel>
		<panel id="body">
			<p class="module_flashline"><span embed="flashline" /></p>
			<p class="byline" embed="byline"/>
			<p id="summary" class="body"><mark class="body-first-p-mark" /><mark class="module_summary" /></p>
			<panel class="body" embed="body"/>
		</panel>
	</panel>
</jpml>
