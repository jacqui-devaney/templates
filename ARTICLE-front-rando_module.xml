<jpml id="ARTICLE-front-rando">
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style>{
		$join: [
		{#header_top: { padding:[0, 0, 8, 5] }},
		{#body_container : { padding: [8, 5, 0, 5]}},
		{.body: { 
            column-count: {$divide: [=view.width, {$multiply:[250, =scale.dpi]}]},
            column-gutter: 20
        }},
		{#continues_label: {
			anchor-y:bottom
		}},
		{.continue: {
			text-align:right
		}},
		{
		#rando_container: { 
			background-image:url(rando_bars.png), 
			background-position:bottom, 
			anchor-x:left, 
			width:270,
			padding:[0, 0, 10, 0]
		}},
		{#mediabucket: {frame: [8, 2, 546, 385] }},
		{if: =portrait, then: {
            #mediabucket_container:	{ frame: [0, 0, 574, 405]  }
        }, else: {
        	#mediabucket_container:	{ frame: [287, 0, 574, 405]  }
        }}
		]
    }</style>
	
    <panel id="header_top">
        <p class="rando_flashline" embed="flashline"/>
        <p class="article_headline"><span embed="headline"/><mark class="key"/></p>
    </panel>
	<box id="hr">
		<panel class="hr" />
	</box>
    <box id="continues_label">
        <p class="continue">Article continues...</p>
    </box>
	<panel id="body_container">
		<box id="mediabucket_container">
			<box id="mediabucket" embed="mediabucket" />
		</box>
		<box id="rando_container">
			<p class="rando_subhed" embed="subhed" />
        </box>
		<panel class="body" embed="body" />
		
    </panel>
    
</jpml>


