<jpml id="IMAGE-only_module">
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="PHONE-MODULES-stylesheet.ejs" />
	<style>{
		if: =scale.phone, then: {
					$join: [
						{ $switch: [
							{ if: =options.no_border, then: {
								#wrapper: {
									border-width: [0, 0, 0, 0],
									padding: [10, 0, 0, 0]
								}

							}},
							{ if: =options.bottom_border, then: {
								#wrapper: {
								border-width: [0, 0, 1, 0],
								border-color: #b1aca1,
								padding: [10, 0, 0, 0]
								}

							}},
							{ if: true, then: {
								#wrapper: {
									border-width: [1, 0, 0, 0],
									border-color: #b1aca1,
									padding: { if: =scale.small, then:[5, 0, 0, 0], else:[8, 0, 0, 0]}
			}
								}}
						]},
						{#deco_container: { 
							padding: { if: =scale.small, then:[5, 0, 5, 0], else:[8, 0, 8, 0]},
							position:relative
						}},
						{image:{
							options: {
								$switch: [
									{ if: =options.G_image, then: {match: { width:553, height:369, min-height:369 } } },
									{ if: =options.F_image, then: {match: { width:571, height:226, min-height:226 } } },
									{ if: =options.PT_image, then: {match: { width:264, height:455, min-height:455 } } },
									{ if: =options.OV_image, then: {match: { width:239, height:340, min-height:340 } } },
									{ if: =options.OZ_image, then: {match: { width:570, height:612, min-height:612 } } },
									{ if: =options.P_image, then: {match: { width:749, height:499, min-height:499 } } },
									{ if: =options.H_image, then: {match: { width: 659, height:439, min-height:439 } } }

								]
							},
							image-scale: {$max:[1,{$divide:[{$subtract:[=view.width, 18]}, 553]}]},
			                pixels-per-point-x:1,
							pixels-per-point-y:1


						}},
						{#bottom: {
							anchor-y:bottom,
							padding: [0, {if: =options.narrow_text, then:250, else:0}, 0, 0]
						}},
						{#content: { padding: [0, 8, 8, 8]}},
						{.deco_caption: {
							max-height: {
								$switch: [
									{if: =options.small_caption, then:30},
									{if: =options.fake_deco, then:35},
									{if: =options.vertical_deco, then:75},
									{if: =options.long_deco, then:90},
									{if: true, then:55}
							]},
							min-height: 5,
							display: { if: =options.no_caption, then:none, else:inherit },
							text-overflow:ellipsis

						}}
					]
				
			
		}, else: {
			$join: [
				{image:{
					options: {
						$switch: [
							{ if: =options.TH_image, then: {match: { width:800, height:762 } } },
							{ if: =options.TH-land_image, then: {match: { width:960, height:597 } } },
							{ if: =options.FULL-land_image, then: {match: { width:1024, height:620 } } },
							{ if: =options.FULL-Wland_image, then: {match: { width:1280, height:597 } } },
							{ if: =options.FULL-port_image, then: {match: { width:768, height:876 } } },
							{ if: =options.FULL-Wport_image, then: {match: { width:800, height:1077 } } },
							{ if: =options.F_image, then: {match: { width:571, height:226, min-height:226 } } },
							{ if: =options.DV_image, then: {match: { width:262, height:394, min-height:394 } } },
							{ if: =options.HV_image, then: {match: { width:293, height:439, min-height:439 } } }
							
						]
					}
				}},
				{#top_headline: {display:none}},
				{#bottom: {display:none}}
		]}
		}</style>
		<style>{
			if: =scale.phone, then: {
				#wrapper: {border-color:#d6d6d6}
			}, else:{}
		}</style>
		<box id="wrapper">
			<panel id="content">
				<panel id="top_headline">
					<p class="deco_headline"><mark class="m_headline" /><mark class="key" /></p>
				</panel>
				<box id="bottom">
					<p class="deco_bottom_headline"><mark class="m_headline" /><mark class="key" /></p>
					<panel embed="body" class="deco_caption" />
				</box>

				<box id="deco_container" embed="deco-image">
					<image embed="summary-image" />
				</box>
			</panel>
		</box>
	
	
</jpml>
