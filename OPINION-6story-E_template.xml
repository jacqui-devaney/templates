<jpml id="OPINION-6story-E_template">
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="OPINION-stylesheet.ejs" />
    <style>
		{ $join: [
			{	if: =portrait, then: {
					#articles:	{ frame: [8, 10, 362, 610] },
					#b1:	{ frame: [0, 0, 362, 150], options:{header:true} },
					#b5:	{ frame: [388, 2, 377, 420], options:{small_headline:true, show_image:true, F_image:{if: =scale.small, then:true, else:false}, no_border:true, byline:{if: =scale.small, then:true, else:false}} },
					#b6:	{ frame: [388, 422, 377, 196], options:{small_headline:true, no_border:true, byline:{if: =scale.small, then:true, else:false}} },
					#h1:	{options:{byline:true, hide_flashline:true}},
					#h2:	{options:{byline:true, hide_flashline:true}}
				}, else: {
					#articles:	{ frame: [15, 10, 362, 610] },
					#b1:	{ frame: [0, 0, 362, 150], options:{header:true} },
					#b5:	{ frame: [399, 2, 377, 420], options:{small_headline:true, show_image:true, F_image:{if: =scale.small, then:true, else:false}, no_border:true, byline:{if: =scale.small, then:true, else:false}} },
					#b6:	{ frame: [399, 422, 377, 196], options:{small_headline:true, no_border:true, byline:{if: =scale.small, then:true, else:false}} },
					#h2:	{options:{byline:true, hide_flashline:true, hide_image:{if: =scale.small, then:true, else:false}}},
					#h1:	{options:{byline:true, hide_flashline:true, hide_image:{if: =scale.small, then:true, else:false}}}
					
			
				}
			},
			{ $switch: [
				{ if: =articles.b1.type, equals: "Letters", then: {
					_comment: "neither have the header",
					#b2: { frame: [0, 160, 362, 140] },
					#b3: { frame: [0, 310, 362, 140] },
					#b4: { frame: [0, 460, 362, 140] }
				}},
				{ if: =articles.b2.type, equals: "Letters", then: {
					_comment: "b2 has the header",
					#b2: { frame: [0, 150, 362, 170], options:{header:true} },
					#b3: { frame: [0, 330, 362, 130] },
					#b4: { frame: [0, 470, 362, 130] }
				}},
				{ if: =articles.b3.type, equals: "Letters", then: {
					_comment: "b3 has the header",
					#b2: { frame: [0, 160, 362, 140] },
					#b3: { frame: [0, 300, 362, 170], options:{header:true} },
					#b4: { frame: [0, 480, 362, 120] }
					
				}}, 
				{ if: =articles.b4.type, equals: "Letters", then: {
					_comment: "b4 has the header",
					#b2: { frame: [0, 160, 362, 140] },
					#b3: { frame: [0, 310, 362, 140] },
					#b4: { frame: [0, 460, 362, 140], options:{header:true} }
					
				}}, 
				{ if: true, then: {
					_comment: "neither have the header",
					#b2: { frame: [0, 160, 362, 140] },
					#b3: { frame: [0, 310, 362, 140] },
					#b4: { frame: [0, 460, 362, 140] }
					
				}}
        	]}
    	]}    
    </style>
    
	<box id="articles">
	    <box id="b1" embed="article" module="OPINION-RANDO-LETTERS_module.xml" />
	    <box id="b2" embed="article" module="OPINION-RANDO-LETTERS_module.xml" />
	    <box id="b3" embed="article" module="OPINION-RANDO-LETTERS_module.xml" />
	    <box id="b4" embed="article" module="OPINION-RANDO-LETTERS_module.xml" />
	</box>
    <box id="l4" class="line" />
    <box id="b5" embed="article" module="TOP-IMAGE_module.xml" />
    <box id="b6" embed="article" module="TOP-IMAGE_module.xml" />

    <box id="h1" embed="article" module="HIGHLIGHTS_module.xml" />
    <box id="h2" embed="article" module="HIGHLIGHTS_module.xml" />
    <box id="ad_background" class="ad_light">
		<box id="highlight_ad" class="ad-rectangle" embed="advertisement" />
	</box>

    
</jpml>

