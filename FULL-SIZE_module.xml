<jpml id="FULL-SIZE_module">
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="PHONE-MODULES-stylesheet.ejs" />
	<style>{
			jpml: {
				background-color:#000
			},
			#deco_container: {
				width: =view.width,
				height: =view.height
			},
			image:{
				width:=view.width,
				height: {$subtract:[=view.height, 1]},
				image-scale: 1,
				gravity:aspect-fill,
				options: {
				 match: { prefer: aspect-ratio },
				 source: {
					 $switch: [
						{$switch: [
							{if-all: [{if: =options.image_idiom, equals: portrait}, {$count: [=article.images.portrait]}], then:
								{$join: ["url(", =article.images.portrait, ")"]}
							},
							{if-all: [{if: =options.image_idiom, equals: landscape}, {$count: [=article.images.landscape]}], then:
								{$join: ["url(", =article.images.landscape, ")"]}
							},
							{if-all: [=scale.phone, {$count: [=article.images.phone]}], then:
								{$join: ["url(", =article.images.phone, ")"]}
							},
							{if-all: [=scale.rail, {$count: [=article.images.rail]}], then:
								{$join: ["url(", =article.images.rail, ")"]}
							},
							{if-all: [=scale.tablet, {$count: [=article.images.tablet]}], then:
								{$join: ["url(", =article.images.tablet, ")"]}
							}
						]},
						{$switch: [
							{if-all: [{if: =options.image_idiom, equals: portrait}, {$count: [=article.image_portrait]}], then:
								{$join: ["url(", =article.image_portrait, ")"]}
							},
							{if-all: [{if: =options.image_idiom, equals: landscape}, {$count: [=article.image_landscape]}], then:
								{$join: ["url(", =article.image_landscape, ")"]}
							},
							{if-all: [=scale.phone, {$count: [=article.image_phone]}], then:
								{$join: ["url(", =article.image_phone, ")"]}
							},
							{if-all: [=scale.rail, {$count: [=article.image_rail]}], then:
								{$join: ["url(", =article.image_rail, ")"]}
							},
							{if-all: [=scale.tablet, {$count: [=article.image_tablet]}], then:
								{$join: ["url(", =article.image_tablet, ")"]}
							}
						]}
					]
				 }
				}
			},
			#deco_caption_container: {
				background-color:"rgba(0, 0, 0, .6)",
				padding:[20, 14],
				width:372
			},
			.module_headline: {
				padding:[0, 0, 4, 0]
			},
			.escrow_body: {
				padding:[18, 0, 0, 0]
			},
			#border: {
				background-color:#fff,
				height:1,
				width:238
			}
	}</style>
	<!-- If the caption container isn't visible, still display it, transparently, so accessibility works -->
	<style>{
		if: =options.show_caption_container, then: {
			#deco_caption_container: {
				left: 68,
				top: 128
			}
		}, else: {
			#deco_caption_container: {
				background-color: transparent,
				left: 0,
				top: 0
			},
			#border: {
				background-color: transparent
			},
			.module_headline: {
				color: transparent
			},
			.key: {
				color: transparent
			},
			.escrow_body: {
				color: transparent
			}
		}
	}</style>
			<box id="deco_container" embed="deco-image">
				<image/>
				<box id="deco_caption_container">
					<panel id="headline">
						<p class="module_headline"><mark class="m_headline" /><mark class="key" /></p>
					</panel>
					<panel class="border">
						<box id="border" />
					</panel>
					<p class="escrow_body"><mark class="subhed-mark" /></p>
				</box>
			</box>

</jpml>
