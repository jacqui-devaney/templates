

<jpml id="OPINION-5story-D_template">
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="OPINION-stylesheet.ejs" />
    <style src="PHONE-stylesheet.ejs" />
    <style>{
		#b1: {options:{justify:true, header:true, border:{if: =scale.phone, then:true, else:false}}},
		#b2: {options: {justify:true, small_headline:true}},
		#b3: {options: {justify:true, small_headline:true, no_border:true}},
		.phone_ad: {display:{if: =scale.phone, then:inherit, else:none}},
		.tablet_ad: {display:{if: =scale.phone, then:none, else:inherit}},
		#b4: {options:{small_headline:true, show_image:true, hide_summary:true, no_image:true, no_border:{if: =scale.phone, then:false, else:true}, byline:{if-any: [=scale.phone, =scale.large], then:false, else:true}, F_image:{if-all: [=widescreen, =landscape], then:true, else:false}}},
		#b5: {options:{small_headline:true, hide_summary:true, no_image:true, no_border:{if: =scale.phone, then:false, else:true}, byline:{if-any: [=scale.phone, =scale.large], then:false, else:true}}},
		#h1: {options:{hide_image:{if-all: [=scale.small, =landscape], then:true, else:false}, byline:{if: =scale.phone, then:false, else:true}}},
		#h2: {options:{hide_image:{if-all: [=scale.small, =landscape], then:true, else:false}, byline:{if: =scale.phone, then:false, else:true}, no_border:{if: =scale.phone, then:true, else:false}}}
	}</style>
    <style>{ 
		$switch: [
			{if: =scale.phone, then: {
					#articles: {
						padding:[0], 
						border-width:[0]
					}
			}},
			{if-any: [=scale.large, =scale.small], then: {	
				$join: [
					{if: =portrait, then: {
						#articles:	{ frame: [8, 10, 460, 610] },
						#b1:	{ frame: [0, 0, 460, 220] },
						#b4:	{ frame: [486, 2, 280, 400]},
						#b5:	{ frame: [486, 402, 280, 216] }
					}, else: {
						#articles:	{ frame: [16, 10, 460, 610] },
						#b1:	{ frame: [0, 0, 460, 220] },
						#b4:	{ frame: [496, 2, 280, 400] },
						#b5:	{ frame: [496, 402, 280, 216]}
					}},
					{ $switch: [
						{ if: =articles.b1.type, equals: "Letters", then: {
							_comment: "neither have the header",
							#b2: { frame: [0, 230, 460, 180] },
							#b3: { frame: [0, 420, 460, 180] }
						}},
						{ if: =articles.b2.type, equals: "Letters", then: {
							_comment: "b2 has the header",
							#b2: { frame: [0, 220, 460, 210], options:{header:true} },
							#b3: { frame: [0, 440, 460, 160] }
						}},
						{ if: =articles.b3.type, equals: "Letters", then: {
							_comment: "b3 has the header",
							#b2: { frame: [0, 230, 460, 180] },
							#b3: { frame: [0, 410, 460, 190], options:{header:true} }
						}}, 
						{ if: true, then: {
							_comment: "neither have the header",
							#b2: { frame: [0, 230, 460, 180] },
							#b3: { frame: [0, 420, 460, 180] }
						}}
		        	]}
		    	] 
				
			
			}}
		]
    }</style>
    <box id="articles">
		<box id="b1" embed="article" class="maude unit_100" module="OPINION-RANDO-LETTERS_module.xml" />
    	<box id="b2" embed="article" class="maude unit_100" module="OPINION-RANDO-LETTERS_module.xml" />
	    <box id="b3" embed="article" class="maude unit_100" module="OPINION-RANDO-LETTERS_module.xml" />
    	<box id="ad_background" class="ad_light unit_ad maude phone_ad">
			<box id="highlight_ad" class="ad-rectangle" embed="advertisement" />
		</box>
	</box>
    <box id="ad_background" class="ad_light maude unit_ad tablet_ad">
		<box id="highlight_ad" class="ad-rectangle" embed="advertisement" />
	</box>
	<box id="b4" embed="article" class="maude unit_75" module="TOP-IMAGE_module.xml" />
    <box id="b5" embed="article" class="maude unit_75" module="TOP-IMAGE_module.xml" />

    <box id="h1" embed="article" class="maude unit_highlight" module="HIGHLIGHTS_module.xml" />
    <box id="h2" embed="article" class="maude unit_highlight" module="HIGHLIGHTS_module.xml" />
    
</jpml>


