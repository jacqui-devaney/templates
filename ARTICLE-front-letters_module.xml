<jpml id="ARTICLE-front-letters_module">
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="GLOBAL-stylesheet.ejs" />
	<style>{
		$join: [
		{#header_top: { padding:[0, 0, 8, 5] }},
		{#body_container : { 
			padding: [8, 5, 0, 5],
            column-count: {$divide: [=view.width, {$multiply:[250, =scale.dpi]}]},
            column-gutter: 20,
			column-height:balance,
			flow: article_body
        }},
		{#mediabucket: {frame: [8, 2, 546, 385] }},
		{if: =portrait, then: {
            #mediabucket_container:	{ frame: [0, 0, 574, 405]  }
        }, else: {
        	#mediabucket_container:	{ frame: [287, 0, 574, 405]  }
        }},
		{#filler: {
			position: relative,
			top: 10,
			left: 0,
			right: 0,
			bottom: 0,
			min-height: 0,
			background-image: url(articleBackground.png),
			border-image:url(shadow.png),
			border-width: [1, 0, 0, 0],
			border-color:#b1aca1        
		}}

		]
    }</style>
	<box id="continues_label">
		<p><mark id="continues" /></p>
	</box>
	
    <panel id="header_top">
        <p class="article_flashline" embed="flashline"/>
        <p class="letters_article_headline"><span embed="headline"/><mark class="key"/></p>
		<h2 class="article_subhed" embed="subhed" />
    </panel>
	<panel class="hr" />

	<panel id="body_container">
		<box id="mediabucket_container">
			<box id="mediabucket" embed="mediabucket" />
		</box>
	    <p class="byline" embed="byline"/>
        <panel class="body" embed="body"/>
    </panel>
    <box id="filler">
	</box>
	
</jpml>


