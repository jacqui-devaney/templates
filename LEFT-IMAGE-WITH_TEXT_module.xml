<jpml id="LEFT-IMAGE-WITH_TEXT_module.xml">
	<style src="GLOBAL-stylesheet2.ejs" />
	<style src="GLOBAL_MODULES-stylesheet2.ejs" />
	<style src="MODULES_COMMON-stylesheet.ejs" />
	<style>{
    	#deco_container: {
        	anchor-x:left,
            anchor-y:top,
        	height: =view.height,
			width: { $multiply: [=view.width, {if: =landscape, then: 0.7, else: 0.5}] },
			padding:[10, 12, 0, 0],
			display: { if: =options.show_image, then:inherit, else:none }
		},
    	#deco_container_inner: {
        	anchor-x:left,
            anchor-y:top,
        	height: { $multiply: [=view.height, 0.80] },
			padding:[5],
			display: { if: =options.show_image, then:inherit, else:none },
			line-clamp: 2 <!-- todo might be 3 is better -->
		}
	}</style>

	<box id="deco_container" embed="deco-image">
		<box id="deco_container_inner" embed="deco-image">
			<image class="summary-image"/>
		</box>
		<h2 id="subhead"><mark class="subhed-mark" /></h2>
	</box>
	<panel id="vertical" >
		<panel id="headline">
 			 <p class="module_flashline small-vertical-grid-module"><mark class="flashline-mark" /></p>
			 <p class="module_headline"><mark class="m_headline" /></p>
			 <h2 id="subhead"><mark class="subhed-mark" /></h2>
		</panel>
		<panel id="body" class="vertical-grid-module">
			<panel class="body">
				<p class="byline"><mark class="byline-mark"/></p>
				<p>
					<mark class="body-first-p-mark" />
					<mark class="body-mark"/>
				</p>
			</panel>
		</panel>
	 </panel>
</jpml>

