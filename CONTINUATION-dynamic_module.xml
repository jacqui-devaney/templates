<jpml id="CONTINUATION-dynamic_module">
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="PHONE-MODULES-stylesheet.ejs" />
    <style>{
		jpml: { padding: [ 4, 8, 4, 0] },
		#content: { 
			padding: [4, 8, 0, 8]
		 },
		#strap: {
            display: { if:=options.hide_strap, then:none, else:default },
			padding: [4, 4, 0, 8],
			background-color:#e4e4e4
        },
		#image_container: { 
			anchor-x: right,
			width: 84,
			pixels-per-point-x:{if: =scale.small, then:.7, else:1},
			pixels-per-point-y:{if: =scale.small, then:.7, else:1},
			image-scale:{if: =scale.small, then:.7, else:1}
			
		},
		image: {
			width:76,
			height:76,
			padding: [ 0, 0, 4, 8 ]
			
		},
		#body-first-p: {
			text-indent:0
		},
		#vertical: {
			display:none
		}
    }</style>
    <style>{
		if: =scale.phone, then: {
			#strap: {
				padding: [3, 0, 0, 6]
			},
			jpml: { 
				padding: [0] 
			},
			#content: {
				border-width: [{ if:=options.hide_strap, then:1, else:0 }, 0, 0, 0],
				border-color: #b1aca1
				
			},
			.continuation_body: {
				display:none
			},
			#image_container: {
				display:none
			},
			#vertical: {
				anchor-y:middle,
				display:inherit
			},
			#tablet: {display:none}
		}, else:{}
	}</style>
		<panel id="strap">
			<p class="subsection"><mark id="m_subsection"/></p>
		</panel>
		<panel id="content">
		 	<box id="image_container">
				<image embed="summary-image"/>
			</box>
			<box id="vertical">
				<p class="continuation_headline"><mark id="m_headline" />longer headline long headline<mark class="key" /></p>
			</box>
			<p class="continuation_headline"><mark id="m_headline" /><mark class="key" /></p>
			<panel embed="body" class="continuation_body"/>
		</panel>
</jpml>
