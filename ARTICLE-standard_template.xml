<jpml id="ARTICLE-front_template">
	<style src="GLOBAL-stylesheet.ejs"/>
  <style src="GRID-stylesheet.ejs"/>
  <style src="PHONE-stylesheet.ejs" />
  <style src="ADVERTISING-stylesheet.ejs" />
  <style>{
    jpml: {
      background-color: =color.background
    },
    #page_details: {
      display: {if: =scale.phone, then: none},
      options: {
          tintTitle: true
      }
    },
		#view: {if: =scale.phone, then: {
      width:=view.width,
      height:{$multiply: [2, =view.height]}
    }, else: {
      top:0,
      bottom:44
    }}
  }</style>
  <style> {
		$switch: [
			{if: =scale.phone, then: {
        #view: {
          options: {
            background_color: =color.background,
            indent: false,
            module: {if: =page.number, equals: 0, then: url(ARTICLE-front-phone_module.xml), else: url(ARTICLE-continuation-phone_module.xml)}
          }
        }
        }},
			{
        #view: {
          options: {
            background_color: =color.background,
            indent: true,
            module: {if: =page.number, equals: 0, then: url(ARTICLE-front_module.xml), else: url(ARTICLE-continuation_module.xml)}
          }
        }
      }
		]
	}</style>
	<style>{
		if-all: [ { if: =page.number, equals: 1 }, =ad.loaded ], then: { 
			if: ["383422586", "383422226", "383421746"], contains: ad.lineItemID, then: { 
				if: =ad.type, equals: "Fullpage", then: {
					<!-- Fullpage Phantom Ad -->
					#fullpage_container: {
						position: absolute,
						height: 1,
						width: 1 
					}
				}, else: {
					<!-- Hide other phantom ads -->
					#fullpage_container: {
						display: none
					}
				}
			}, else: {
				if: =ad.type, equals: "Fullpage", then: { 
					<!-- Fullpage Ad -->
					jpml: {
						min-height:0,
						padding: [0,0,0,0]
					},
					#fullpage_container: {
						display: inherit
					},
					#view: {
						position: absolute,
						height: 200,
						width: 1
					},
					#page_details: {
						display: none
					}
				}, else: {
					<!-- Hide other ads -->
					#fullpage_container: {
						display: none
					}
				}
			}
		}, else: {
			<!-- No Loaded ad, just hide the ad -->
			#fullpage_container: {
				display: none
			}
		}
	}</style>
  <box id="page_details" embed="pagedescription" />
  <box id="view" embed="article" class="column16-12 positionx1 maude" />
  <box id="fullpage_container">
      <box id="fullpage_ad" class="ad-fullpage" embed="fullpagead" />
  </box>
</jpml>
