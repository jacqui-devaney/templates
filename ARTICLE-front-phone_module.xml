<jpml id="ARTICLE-front-phone_module">
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="PHONE-MODULES-stylesheet.ejs" />
	<style>{
		$join: [
		{jpml: { min-height: 0 }},
		{#body_container: {
			padding: [0, 10, 0, 10],
			flow: article_body
		}},
		{
			#media: {
				top: 0,
				left: -5,
				width: 320,
				height: {$divide: [320, =media.aspect]},
				options: {
					id: =page.number
				}
			}
		}
		]
	}</style>
	<style>{
		if: =scale.phone, then: {
			#header_top: {padding:[5]},
			.article_body: {
				line-height: {$multiply: [22, =view.zoomlevel]}
			}
		}, else: {}
	}</style>
	<style>{

		.border-flashline-mark: {
			line-height: 0.5,
			color: transparent,
			content: "unfortunate"
		},
		.border-flashline:{
			border-width:[0, 0, 0, 0],
			background-color: #e1e0df,
			border-color:white
		}
	}</style>

	<p class="article_flashline" embed="flashline"/>
	<panel id="header_top">
		<p class="border-flashline"><mark class="border-flashline-mark"/></p>
		<box id="media" embed="media" />
		<p class="article_headline"><span embed="headline"/><mark class="key"/></p>
		<h2 class="article_subhed" embed="subhed" />
	</panel>

	<panel id="body_container">
		<p class="article_byline" embed="byline"></p>
		<p class="article_pubdate">Updated
			<span  embed="pubdate-string"/>
		</p>
		<p class="border-p"><mark class="border-mark"/></p>
		<panel class="article_body" embed="body"/>
	</panel>

</jpml>
