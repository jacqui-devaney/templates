<jpml id="CONTINUATION-dynamic_module">
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="PHONE-MODULES-stylesheet.ejs" />
    <style>{
		jpml: { padding: [ 4, 8, 4, 0] },
		#content: { 
			padding: [4, 8, 0, 8]
		 },
		#strap: {
            display: { if:=options.hide_strap, then:none, else:default },
			padding: [4, 4, 0, 8],
			background-color:#e4e4e4
        },
		#image_container: { 
			width: {$subtract:[=view.width, 16]},
			pixels-per-point-x:{if: =scale.small, then:.7, else:1},
			pixels-per-point-y:{if: =scale.small, then:.7, else:1},
			image-scale:{if: =scale.small, then:.7, else:1},
			display: {if-any: [{if: =view.height, less-than:260}, {if: =view.width, more-than:256}], then:none, else:inherit}
			
		},
		.key: {
			font-name: {if: =device.platform, equals: Android, then: DJ5Utility, else: DJ5Utility-Regular },
			font-size:16,
			content: { if-all: [=issue.locked, =article.paid], then: "\u00a0K"},
			display: { if:=article.paid, then:default, else:none },
			padding: [0, 0, 0, 2],
			color:#948464
		},
		
		image: {
			height:{$multiply: [{$subtract:[=view.width, 16]}, .66]},
			padding: [ 0, 0, 4, 0 ]
			
		},
		#body-first-p: {
			text-indent:{if: =options.indent, then:20, else:0}
		},
		#vertical: {
			display:none
		},
		.continuation_body: {
			column-count: { if: =options.two_columns, then:2, else:1 },
	        column-gutter: 20
        
		}
    }</style>
    <style>{
		if: =scale.phone, then: {
			#strap: {
				padding: [4, 0, 0, 6]
			},
			jpml: { 
				padding: [0] 
			},
			#content: {
				border-width: [{ if:=options.hide_strap, then:1, else:0 }, 0, 0, 0],
				border-color: #d6d6d6
				
			},
			.continuation_body: {
				display:none
			},
			#image_container: {
				display:none
			},
			#vertical: {
				anchor-y:middle,
				display:inherit
			},
			#tablet: {display:none}
		}, else:{}
	}</style>
		<panel id="strap">
			<p class="subsection"><mark id="m_subsection"/></p>
		</panel>
		<panel id="content">
		 	<box id="image_container">
				<image embed="summary-image" target-width="76" target-height="76" />
			</box>
			<box id="vertical">
				<p class="continuation_headline"><mark id="m_headline" /><mark class="key" /></p>
			</box>
			<p class="module_headline" id="tablet"><mark id="m_headline" /><mark class="key" /></p>
			<panel embed="body" class="continuation_body"/>
		</panel>
</jpml>
