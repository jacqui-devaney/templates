<jpml id="FOE_side_module">
	<style src="GLOBAL-stylesheet2.ejs" />
	<style src="GRID-extras2.ejs" />
	<style src="GLOBAL_MODULES-stylesheet2.ejs" />
	<style src="PHONE-MODULES-stylesheet.ejs" />
	<style>{
		jpml: {
			padding: { if: =options.show_image, then: [0, 0, 0, 0], else:none },
			background-color: =options.background_color,
			border-color: #e7ebeb
		}
	}</style>
	<style>{
		$join: [
			{ $switch: [
				{ if: =options.top_border, then: {
					jpml: {
						border-width: [1, 0, 0, 0],
						padding: { if: =options.show_image, then: [9, 0, 0, 0], else:none }
					}
				}},
				{ if: =options.left_border, then: {
					jpml: {
						border-width: [0, 0, 0, 1]
					}
				}},
				{ if: =options.right_border, then: {
					jpml: {
						border-width: [0, 1, 0, 0]
					}
				}},
				{ if: =options.bottom_border, then: {
					jpml: {
						border-width: [0, 0, 1, 0]
					}
				}},
				{ if: true, then: {
					jpml: {
						border-width: [0, 0, 0, 0]
					}
				}}
			]},
			{
				#body: {
					display: {if: =options.hide_body, then:none, else:inherit}
				},
				#deco_container: {
                $switch: [
                {if: =options.top_image, then:{
                    width:=view.width,
                    padding: [0, 0, 12, 0]
                }},
                {if: =options.tall_image, then:{
                    width:=view.width,
                    padding: [0, 0, 10, 0],
                    height: 150
                }},
                {if: =options.squarish_image, then:{
                    anchor-x:left,
                    anchor-y: {if: =options.anchor_bottom, then: bottom, else: top},
                    width: 174,
                    padding: {if: =options.image_padding, then:[0, 10, 15, 0], else: [0, 10, 5, 0]}
                }},
                {if: =options.large_image, then:{
                    anchor-y:bottom,
                    width:=view.width
                 }},
                {if: true, then: {
                    anchor-x:left,
                    anchor-y:{if: =options.A_image, then:bottom, else:top},
                    width: {$switch:[
                        {if: =options.small_image, then:119},
                        {if: =options.tall_image, then:=view.width},
                        236
                    ]},
                    padding: {$switch:[
                        {if: =options.small_image, then:[0, 0, 0, 0]},
                        {if: =options.tall_image, then:[0, 0, 0, 0]},
                        [0, 12, 0, 0]
                    ]}
                }}
                ]
				},

				image: {
					pixels-per-point-x:1,
					pixels-per-point-y:1,
					height: {
						$switch: [
							{if: =options.tall_image, then:{$multiply: [=view.width, .9 ]}},
							{if: =options.squarish_image, then:{$multiply: [=view.width, .645 ]}},
							{if: =options.top_image, then:{$multiply: [=view.width, .6 ]}},
							{if: =options.large_image, then:{$multiply: [=view.width, .6 ]}},
							{$subtract:[=view.height, {if: =options.top_border, then:12, else:10}]}
						]
					},
					width: {$switch:[
						{if: =options.large_image, then:=view.width},
						{if: =options.small_image, then:92},
						{if: =options.squarish_image, then:165},
						{if: =options.top_image, then:=view.width},
						{if: =options.tall_image, then:=view.width},
						236
					]}
				},
				.byline: {
					display:{if: =options.show_byline, then:inherit, else:none}
				},
				.module_flashline: {
					display: {if: =options.show_flashline, then:inherit, else:none}
				},
				.body: {
					font-name: SharpSansNo1-Book,
					column-count: {if: =options.show_columns, then: 3, else:none},
					padding: {if: =options.body_padding, then: [0, 0, 10, 0], else: [0, 0, 0, 0]}
				}
			}
		]
	}</style>
	<style>{
		if: =scale.phone, then: {
			.module_headline: {
				padding: [-10, 19.5, 4, 19.5]
			},
			image: {
				height: {$multiply: [=view.width, .665 ]},
				display: inherit,
				padding: [0, 4, 0, 4]
			},
			.byline: {
				display: none
			},
			#body: {
				display: inherit
			},
			.body: {
				display: none
			},
			#summary: {
				display: inherit,
				text-align:left,
				padding: [0, 20, 0, 20]
			},
			.opinion_dek: {
				display: none
			},
			#article_status: {
				position: relative,
				padding: [{if: =options.show_body, then: 1, else: 5}, 4, 0, 4],
				left: -20,
				width: 16,
				height: 16,
				options: {
					identifier: =article.id
				}
			},
			#deco_container: {
				padding: [0, 4, 0, 4],
				if: =options.float_image, equals: right, then: {
					anchor-x: right,
					padding: [0, 4, 0, 4],
					width: 111
				}, else: {if: =view.height, less-than: 200, then: [0, 20, 14, 20], else: [0, 4, 0, 4]}
			},
			.opinion_flashline: {
				font-name: WhitneySSm-Semibold,
				font-size:12,
				line-height: 22,
				text-transform:uppercase,
				color: #878f8f,
				padding: [-11, 0, 4, 20],
				display: {if: =page.section, equals: "OPINION", then: none, else: {if: =article.category, equals: "Opinion", then: inherit, else: none}}
			}
		}, else: {
			.opinion_flashline: {
				display: {if: =page.section, equals: "OPINION", then: none, else: {if: =article.category, equals: "Opinion", then: inherit, else: none}},
				font-name:DJ5Exchange-Bold,
				font-size:12,
				line-height:12,
				color: =page.tint,
				text-transform:uppercase,
				padding:[0, 0, 6, 0]
			},
			.opinion_dek:{
				font-name:WhitneySSm-Medium,
				font-size: 12,
				line-height: 18,
				color: #878f8f,
				display: none,
				padding:[0, 0, 10, 0]

			},
			#summary: {
				display: none
			}
		}
	}</style>
	<style>{
		if: =options.show_opinion_dek, equals: true, then: {
			.opinion_dek: {
				display: inherit
			}
		}
	}
	</style>
	<box id="deco_container" embed="deco-image">
		 <image class="summary-image"/>
	</box>
	<panel id="vertical" >
		<p class="opinion_flashline">OPINION</p>
		<panel id="headline">
			<p class="module_flashline small-vertical-grid-module"><mark class="flashline-mark" /></p>
			<p class="module_headline"><mark class="m_headline" /></p>
			 <h2 class="opinion_dek"><mark class="subhed-mark" /></h2>
		</panel>
		<panel id="body" class="vertical-grid-module">
			<p class="byline"><mark class="byline-mark"/></p>
			<p id="summary" class="body"><mark class="body-first-p-mark" /><mark class="module_summary" /></p>
			<panel class="body">
				<p>
					<mark class="body-first-p-mark" />
					<mark class="body-mark"/>
				</p>
			</panel>
		</panel>
	 </panel>
</jpml>