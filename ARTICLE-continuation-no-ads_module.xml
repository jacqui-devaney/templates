<jpml id="ARTICLE-continuation-no-ads_module">
	<style src="ARTICLE-stylesheet.ejs" />
	<style>{

		$join: [
		{#body_container : { 
			min-height:200
		}},
		{.article_body: { 
            column-count: { if: =portrait, then: 3, else: 4},
            column-gutter: 10,
			layout-grid-line: {$multiply: [24, =view.zoomlevel]}
        }},


		{#body_continuation: {
			content: from-flow(article_body),
			flow: article_body
		}},

		{if: =portrait, then: {
	        #mediabucket_container:	{ frame: [0, 0, 485, 364]},
			#media: {
				width:480,
				height:354,
				options: {
					id: =page.number
				}
			}
        }, else: {
	    	#mediabucket_container:	{ frame: [245, 0, 502, 351] },
			#media: {
				width:470,
				height:341,
				options: {
					id: =page.number
				}
			}
        }}		
		]
    }</style>
	
	<panel id="body_container">
        <box id="mediabucket_container">
			<box id="media" embed="media" />
		</box>
		<panel class="article_body" id="body_continuation" embed="body"/>
    </panel>
</jpml>