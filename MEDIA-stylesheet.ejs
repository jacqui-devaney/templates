{
	$join: [
		{
			#media_container: {
				display: {if: =page.hasmedia, then: inherit, else: none},
				padding: {if: =scale.phone, then: [0, 0, 0, 0], else: [0, 0, 5, 0] },
				position: relative,
				layout-grid-line: 0
			},
			#media_asset: {
				position: relative,
				left: 0,
				right: 0,
				height: {$ceiling: [
					{if: =scale.phone, then: {
						$min: [
							{$divide: [{$subtract:[=view.width, {if: =page.number, equals: 0, then: 0, else: 20}]}, =media.aspect]},
							{$subtract:[=view.height, 220]}
						]
					}, else: {
						$min: [{$max: [{$switch: [
							{if: =media.width, less-than: 360, then: {$divide: [236, =media.aspect]}},
							{if: =media.width, more-than: 484, then: {$divide: [484, =media.aspect]}},
							{$divide: [236, =media.aspect]}
						]}, {$multiply: [.1, =view.height]}]}, {$multiply: [.69, =view.height]}]
					}}
				]},
				options: {
					id: {
						if: =page.mediaindex,
						at-least: 0,
						then: =page.mediaindex,
						else: =page.number
					},
					hideCaption: true
				}
			},
			#media_title: {
				font-name: "Whitney-Semibold",
				font-size: 12,
				text-indent: 0,
				display: {if: =page.number, equals: 0, then: none}
			},
			#mark_media_title: {
				content: =media.title
			},
			#media_caption: {
				layout-grid-line: 1,
				layout-grid-line-offset: 0,
		        color: #212121,
		        font-size: 11,
		        line-height: 15,
		        font-name: "DJ5Exchange-Medium",
		        border-width: [0, 0, 1, 0],
		        border-color: #d8d8d8,
				padding: { if-all: [
						{ if: =page.number, equals: 0, then: true, else: false },
						{ if: =scale.phone, then: true, else: false }
					], then: [6, 10, 0, 10], else: [6, 0, 0, 0]
				},
				text-indent: 0
			},
			#mark_caption: {
				content: =media.caption
			}
		},
		{if: true, else: {}, then: {
			#media_vr_header: {
				padding: [10, 0, 6, 0],
				font-name: "Whitney-Semibold",
				font-size: 12,
				text-indent: 0,
				text-align: center,
				background-color: #eff3f3,
				color: =page.tint
			},
			#mark_media_vr_header: {
				content: "VIRTUAL REALITY | 360\u00B0 VIDEO"
			},
			#media_vr_footer: {
				padding: [10, 0, 6, 0],
				font-name: "Whitney-Semibold",
				font-size: 11,
				text-indent: 0,
				text-align: center,
				background-color: #eff3f3,
				color: #4f5757
			},
			#mark_media_vr_footer: {
				content: "TILT & ROTATE TO LOOK AROUND"
			},
			#media_vr_link: {
				display: {if: =page.number, equals: 0, then: none}
			},
			#mark_media_vr_link: {
				font-size: 12,
				text-indent: 0,
				content: "Learn more about WSJ virtual reality \u00BB"
			}
		}}
	]
}
