<jpml>
<style src="GLOBAL_MODULES-stylesheet.ejs"/>
    <style>{
        jpml: { padding: [0, 2, 2, 2] },
        #top_container: {
            border-image: url(ahed-border.png),
            border-slice: [14],
			border-width: [14],
            text-align: center
        },
        #bottom_container: {
            padding: [0, 16, 16, 16],
            text-overflow: "\u00bb",
            text-align: justify
        },
        #image_container: { 
			anchor-x: right, 
			width: 90, 
			display: { if: =options.no_image, then:none, else:inherit }
		},
		image: {
			padding: [0, 4, 8, 8]
		},
		#stars: { padding: [10, 0, 15, 0] },
		#body: { 
            column-count: {$divide: [=view.width, {$multiply:[250, =scale.dpi]}]},
            column-gutter: 20
        },
		#regular_content: { padding: [ 8, 8, 10, 8 ] },
		#regular: {
			display: { if: =article.type, equals: A-hed, then: none, else: inherit }
		},
		#ahed: {
			display: { if: =article.type, equals: A-hed, then: inherit, else: none }
		}
		


    }</style>
    
	<box id="regular">
		<panel class="hr" />
		<box id="regular_content">
			<panel id="not_prominent">
				<p id="small_headline"><span embed="headline" /><mark class="key" /></p>
			</panel>
			<panel id="body_container">
		        <panel id="body">
		            <p class="byline" embed="byline"/>
		            <panel class="body" embed="body"/>
		        </panel>
		    </panel>
		</box>
	</box>
	
    <box id="ahed">
	    <panel id="top_container">
	        <p class="ahed_headline"><span embed="headline"/><mark class="key"/></p>
	        <p id="stars"><mark class="ahed_stars" /></p>
	        <h2 class="ahed_subhed" embed="subhed"/>
	    </panel>
	    <panel id="bottom_container">
	        <box id="image_container"><image class="A_size" embed="summary-image"/></box>
	        <p class="ahed_byline" embed="byline"/>
	        <panel class="ahed_body" embed="body" />
	    </panel>
	</box>
</jpml>
