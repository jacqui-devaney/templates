<jpml id="TOP-IMAGE_module">
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="PHONE-MODULES-stylesheet.ejs" />
	<style>{
		$join: [
			{ $switch: [
				{ if: =options.top_border, then: {
					jpml: {
						border-width: [1, 0, 0, 0],
						padding: [10, 10, 0, 0],
						border-color: #cfcfcf
					}
			
				}},
				{ if: =options.left_border, then: {
					jpml: {
						border-width: [0, 0, 0, 1],
						border-color: #cfcfcf,
						padding: [0, 0, 0, 10]
					}
			
				}},
				{ if: =options.right_border, then: {
					jpml: {
						border-width: [0, 1, 0, 0],
						border-color: #cfcfcf,
						padding: [0, 10, 0, 0]
					}
			
				}},
				{ if: true, then: {
					jpml: {
						border-width: [0, 0, 0, 0],
						padding: [0, 0, 0, 0]
					}
				}}
			]},
			{
				#body: { 
		            column-count: {
						if: =options.one_column, then:1, else:{$divide: [=view.width, {$multiply:[300, =scale.dpi]}]}
					},
		            column-gutter: 20,
					display: {if: =options.hide_body, then:none, else:inherit}
		        },
				image: {
					pixels-per-point-x:1,
					pixels-per-point-y:1,
					width: {$subtract: [=view.width, 6]},
					height: {$multiply: [=view.width, .66 ]}, 
	                display: { if: =options.show_image, then:inherit, else:none },
					padding: [0, 0, 14, 0],
					options: {
						$switch: [
							{if: =options.F_image, then: {match:{width:571, height:226, max-height:226}}},
							{ if: =options.OZ_image, then: {match: { width:570, height:612, min-height:612 } } },
							{ if: =options.DV_image, then: {match: { width:262, height:394, min-height:394 } } },
							{ if: =options.G_image, then: {match: { width:553, height:369, min-height:369 } } }
						]
					},
	                image-scale: 1
	            },
				.byline: {
					display:{if: =options.show_byline, then:inherit, else:none}
					
				},
				#body-first-p: {
					text-indent: {if: =options.indent, then:20, else:0}
				},
				.module_flashline: {
					display: {if: =options.show_flashline, then:inherit, else:none}
				}
			}
		]
	}</style>
	<style>{
		if: =scale.phone, then: {
			jpml: {
				padding:[0],
				border-width: [{if: =options.top_border, then:1, else:0}, 0, {if: =options.no_border, then:0, else:1}, 0],
				border-color: #d6d6d6,
				anchor-y:middle				
			},
			#image_wrapper: { 
				anchor-x:right,
				position:relative,
				width: 76,
				padding:[8, 8, 0, 10],
				display:{if: =options.show_image, then:inherit, else:none}

			},
			#headline: {
				padding: [{if: =options.top_align, then:8, else:0}, 8, 0, 8]
			},
			image: { 
				height: 76,
				width:76,
				display:inherit,
				padding: [0]
				
			},
			#vertical: {
				vertical-align: {if: =options.top_align, then: top, else: middle}
			},
			.byline: {
				display:{if: =options.show_byline, then:inherit, else:none}
			},
			#body: {
				display:{if-any: [=options.show_body, {if: =page.section, equals: "OPINION"}], then:inherit, else:none},
				padding: [0, 8, 0, 8]
			}
			
		}, else:{}
	}</style>
	<box id="image_wrapper">
		<image id="deco-image" embed="summary-image" />
	</box>
	<panel id="vertical">
		<panel id="headline">
			<p class="module_flashline"><span embed="flashline" /></p>
			<p class="module_headline"><span embed="headline" /><mark class="key" /></p>
		</panel>
		<panel id="body">
			<p class="byline" embed="byline"/>
			<panel class="body" embed="body"/>
		</panel>
	</panel>
</jpml>
