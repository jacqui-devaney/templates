<jpml id="TOP-IMAGE_module">
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="PHONE-MODULES-stylesheet.ejs" />
	<style>{
		$join: [
			{ $switch: [
				{ if: =options.no_border, then: {
					#wrapper: {
						border-width: [0, 0, 0, 0],
						padding: [8, 0, 0, 0]
					}
			
				}},
				{ if: =options.left_border, then: {
					#wrapper: {
						border-width: [0, 0, 0, 1],
						border-color: #b1aca1,
						padding: [0, 0, 0, 0]
					}
			
				}},
				{ if: true, then: {
					#wrapper: {
						border-width: [1, 0, 0, 0],
						border-color: #b1aca1,
						padding: [8, 0, 0, 0]
					}
					}}
			]},
			{#body: { 
	            column-count: {$switch: [
					{if: =widescreen, then: { if: =options.two_columns, then:2, else:1 }},
					{if: =scale.large, then: {$divide: [=view.width, {$multiply:[250, =scale.dpi]}]}}
					
				]},
	            column-gutter: 20
	        }},
			{#body_container: { padding: [0, 8, {if: =options.bottom, then:15, else:8}, 8]}},
			{#headline: { padding: [0, 8]}},
			{image: {
				pixels-per-point-x:1,
				pixels-per-point-y:1,
				height: {$multiply: [{$subtract:[=view.width, 16]}, {$switch: [
						{if: =options.F_image, then:0.39},
						{if: =options.OZ_image, then:1.07},
						{if: =options.C_image, then:.56},
						{if: =options.DV_image, then:1.5},
						.66
					]}
				]}, 

                display: { if: =options.show_image, then:inherit, else:none },
				padding: [0, 9, 8, 9],
				options: {
					$switch: [
						{if: =options.F_image, then: {match:{width:571, height:226, max-height:226}}},
						{ if: =options.OZ_image, then: {match: { width:570, height:612, min-height:612 } } },
						{ if: =options.DV_image, then: {match: { width:262, height:394, min-height:394 } } },
						{ if: =options.G_image, then: {match: { width:553, height:369, min-height:369 } } }
					]
				},
                image-scale: {$max:[1,{$divide:[{$subtract:[=view.width, 18]}, 553]}]}
            }},			
			{.invisible: { display:none }},
			{#small_headline: { display: { if: =options.small_headline, then:inherit }}},
			{#medium_headline: { display: { if: =options.medium_headline, then:inherit }}},
			{#large_headline: { display: { if: =options.large_headline, then:inherit }}},
			{.byline: {display: {$switch: [
				{if: =scale.small, then:{if: =options.byline, then:inherit, else:none}},
				{if: =scale.large, then: {if: =options.no_byline, then:none, else:inherit}}
			]}}},
			{.body: {padding:{if: =options.byline, then:[0], else:[3, 0, 0, 0]}}},
			{#body-first-p: {text-indent: {$switch: [
				{if: =scale.small, then:{if: =options.no_indent, then:0, else:inherit}},
				{if: =scale.large, then: inherit},
				{if: =options.no_indent, then:0}
			]}}}
			
		
			]
		}</style>
		<style>{
			if: =scale.phone, then: {
				jpml: {
					border-width: [{if: =options.top_border, then:1, else:0}, 0, {if: =options.no_border, then:0, else:1}, 0],
					border-color: #d6d6d6,
					anchor-y:middle,
					padding:[0]
				},
				#wrapper: {
					border-width:[0],
					padding: [{if: =options.top_align, then: 10, else:0}, 0, 0, 0],
					border-color:#d6d6d6
				},
				#image_wrapper: { 
					anchor-x:right,
					position:relative,
					width: 76,
					padding:[0, 10, 6, 15],
					pixels-per-point-x:1,
					pixels-per-point-y:1,
					image-scale:1,
					display:{if: =options.no_image, then: none, else:inherit}

				},
				image: { 
					height: 76,
					display:inherit,
					padding: [0],
	                options:{},
					image-scale: 1
					
				},
				.byline: {
					display:{if: =page.section, equals: "OPINION", then:inherit, else:none}
				},
				#body_container: {
					display:{if-any: [=options.show_body, {if: =page.section, equals: "OPINION"}], then:inherit, else:none},
					padding: [{if: =page.section, equals: "OPINION", then:2, else:0}, 8, 0, 8]
				},
				.body: {
					display:{if: =options.hide_summary,then:none, else:inherit},
					padding:[0]
				},
				#vertical: {
					vertical-align: {if: =options.top_align, then: top, else: middle}
				}
				
			}, else:{}
		}</style>
	<box id="wrapper">
		<box id="image_wrapper">
			<image embed="summary-image" />
		</box>
		<panel id="vertical">
			<panel id="headline">
		    	<p id="small_headline" class="invisible"><span embed="headline" /><mark class="key" /></p>
				<p id="medium_headline" class="invisible"><span embed="headline" /><mark class="key" /></p>
				<p id="large_headline" class="invisible"><span embed="headline" /><mark class="key" /></p>
			</panel>
			<panel id="body_container">
		        <panel id="body">
		            <p class="byline" embed="byline"/>
		            <panel class="body" embed="body"/>
		        </panel>
		    </panel>
		</panel>
	</box>
</jpml>
