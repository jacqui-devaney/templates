<jpml id="OPINION-4story-E_template">
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="OPINION-stylesheet.ejs" />
	<style src="PHONE-stylesheet.ejs" />
	<style>{
		#b1: {options:{header:true}},
		#b3: {options: {if: =portrait,
					then:{small_headline:true, show_image:true, F_image:{if: =scale.small, then:true, else:false}, no_border:true, byline:{if: =scale.small, then:true, else:false}},
					else: {small_headline:true, show_image:true, F_image:{if: =widescreen, then:true, else:false}, no_border:true, byline:{if: =scale.small, then:true, else:false}} 
		}},
		#b4: {options: {if: =portrait,
					then:{small_headline:true, no_border:true, byline:{if: =scale.small, then:true, else:false}},
					else: {small_headline:true, no_border:true, byline:{if: =scale.small, then:true, else:false}} 
		}},
		#h1: {options: {if: =portrait,
					then:{byline:true, hide_flashline:true},
					else: {byline:true, hide_flashline:true, hide_image:{if: =scale.small, then:true, else:false}} 
		}},
		#h2: {options: {if: =portrait,
					then:{byline:true, hide_flashline:true},
					else: {byline:true, hide_flashline:true, hide_image:{if: =scale.small, then:true, else:false}} 
		}}		
		
	}</style>
    <style>{ 
		if: =scale.phone, then: {
			box:{border-width:[1], border-color:red},
			#articles: {position:relative, left:0, top:0, right:0}
        }, else: {
			$join: [
				{if: =portrait, then: {
							#articles:	{ frame: [8, 10, 362, 598] },
							#b1:	{ frame: [0, 0, 362, 314] },
							#b3:	{ frame: [388, 2, 377, 420] },
							#b4:	{ frame: [388, 422, 377, 196] }
					}, else: {
							#articles:	{ frame: [15, 10, 362, 598] },
							#b1:	{ frame: [0, 0, 362, 314] },
							#b3:	{ frame: [399, 2, 377, 420] },
							#b4:	{ frame: [399, 422, 377, 196] }		
				}},
				{$switch: [
					{ if: =articles.b1.type, equals: "Letters", then: {
		               	_comment: "no header",
						#b2 : { frame: [0, 324, 362, 276] }
					}},
					{ if: =articles.b2.type, equals: "Letters", then: {
						_comment: "b2 has the header",
						#b2: { frame: [0, 314, 362, 286], options:{header:true} }
					}},
					{ if: true, then: {
						_comment: "no header",
						#b2 : { frame: [0, 324, 362, 276] }
					}}
				]}
			]
			}    
    }</style>
    
    <box id="articles maude">
		<box id="b1" embed="article" class="maude unit_rando_top" module="OPINION-RANDO-LETTERS_module.xml" />
    	<box id="b2" embed="article" class="maude unit_rando_second" module="OPINION-RANDO-LETTERS_module.xml" />
	</box>
    <box id="b3" embed="article" class="maude unit_rando_second" module="TOP-IMAGE_module.xml" />
    <box id="b4" embed="article" class="maude unit_4" module="TOP-IMAGE_module.xml" />
    
	<box id="ad_background" class="ad_light maude unit_2">
		<box id="highlight_ad" class="ad-rectangle" embed="advertisement" />
	</box>

    <box id="h1" embed="article" class="maude unit_4" module="HIGHLIGHTS_module.xml" />
    <box id="h2" embed="article" class="maude unit_4" module="HIGHLIGHTS_module.xml" />

    
</jpml>