<jpml id="ARTICLE-deloitte-front-phone_module">
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="ARTICLE-stylesheet.ejs" />
	<style src="PHONE-MODULES-stylesheet.ejs" />
	<style src="DELOITTE-stylesheet.ejs" />
	<style src="MEDIA-stylesheet.ejs" />
	<style>{
		jpml: {
			background-color: =options.background_color
		}
	}</style>
	<style>{
		jpml: { min-height: 0 },
		#body_container: {
			padding: [0, 10, 0, 10],
			flow: article_body
		},
		#header_top: {
			padding:[14,10,0,10]
		},
		.article_body: {
			line-height: {$multiply: [22, =view.zoomlevel]},
			text-align: justify,
			hyphens: auto,
			font-name: "WhitneySSm-Medium",
			padding: [16, 0, 0, 0]
		},
		.article_flashline: {
			padding: [14, 0, 8.5, 0],
			border-width: [0, 0, 0.5, 0],
			border-color: #e1e0df
		},
		.article_headline: {
			font-name: "WhitneySSm-Medium",
			font-size: 30,
			line-height:36,
			color: #262626,
			padding:[0, 0, 0, 0]
		},
		.article_subhed:{
			font-name: "WhitneySSm-BookItalic",
			font-size: 20,
			line-height: 27,
			color: #6D6D5D,
			padding: [12, 0, 0, 0]
		},
		.module_flashline: {
			font-size: 16,
			font-name: "WhitneySSm-Semibold",
			color: #004990,
			padding: [16, 0, 0, 0]
		},
		.border-p: {
			border-width:[16, 0, 0, 0],
			layout-grid-line: 0,
			layout-grid-line-offset: 0,
			background-color: #CACACA,
			border-color: =color.background,
			padding: [0, 0, 0, 0]
		},
		.article_pubdate: {
			font-name: "WhitneySSm-Medium",
			font-size: 16,
			color: #222222,
			padding: [10, 0, 0, 0]
		},
		.border-mark: {
			line-height: 1,
			color: transparent,
			content: "deloitte"
		},
        #media_container:{
            padding: [0, 0, 19, 0]
        },
        #media_asset:{
            padding: [{if: =media.height, more-than: =media.width, then: -18, else: 0}, {if: =media.height, more-than: =media.width, then: 16, else: 4}, {if: =media.height, more-than: =media.width, then: -10, else: 10}, {if: =media.height, more-than: =media.width, then: 16, else: 4}]
        },
        #media_caption: {
            layout-grid-line: 1,
            layout-grid-line-offset: 0,
            color: #4f5757,
            font-size: 17,
            line-height: 22,
            font-name: "whitney-book",
            padding: { if-all: [
                    { if: =page.number, equals: 0, then: true, else: false },
                    { if: =scale.phone, then: true, else: false }
                ], then: [0, 16, 0, 16], else: [0, 0, 0, 0]
        }},
        #mark_caption: {
            content: =media.caption
        }
	}</style>


	<box id="media_container">
        <panel id="media_vr_header">
            <p id="media_vr_header_left"><mark id="mark_media_vr_header_left"/></p>
            <p id="media_vr_header_right"><mark id="mark_media_vr_header_right"/></p>
        </panel>
        <box id="media_asset" embed="media"/>
		<p id="media_vr_footer"><mark id="mark_media_vr_footer"/></p>
        <p id="media_vr_link"><a href="http://wsj.com/virtual-reality"><mark id="mark_media_vr_link"/></a></p>
    </box>

	<panel id="header_top">
		<p class="article_headline"><span embed="headline"/></p>
		<h2 class="article_subhed" embed="subhed" />
	</panel>

	<panel id="body_container">
		<p class="module_flashline">CONTENT FROM OUR SPONSOR</p>
		<p class="article_pubdate">Updated
			<span  embed="pubdate-string"/>
		</p>
		<p class="border-p"><mark class="border-mark"/></p>
		<panel class="article_body" embed="body"/>
	</panel>

</jpml>
