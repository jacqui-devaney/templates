<jpml id="ARTICLE-continuation-PV-no-rail-ads_module">
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="GLOBAL-stylesheet.ejs" />
	<style>{
		$join: [
		{#header_top: { padding:[0, 0, 8, 5] }},
		{#body_container : { padding: [5, 5, 5, 5]}},
		{.article_body: { 
            column-count: {$divide: [=view.width, {$multiply:[250, =scale.dpi]}]},
            column-gutter: 30,
			column-height:balance,
			layout-grid-line: {$multiply: [22, =view.zoomlevel]}
        }},
		{#body_continuation: {
			content: from-flow(article_body),
			flow: article_body
		}},
		{#mediabucket: {
			width:546,
			height:385,
			anchor-x:center
		}},
		{if: =portrait, then: {
            #mediabucket_container:	{ frame: [0, 25, 565, 402]  },
			#ad_container: {frame:[0, 649, 555, 218]}
        }, else: {
        	#mediabucket_container:	{ frame: [288, 0, 565, 402] },
       		#ad_container: {frame:[285, 387, 569, 218]}
			}}
		]
    }</style>
	
	<panel id="body_container">
		<box id="continued_label">
			<p><mark id="continued" /></p>
		</box>
		<box id="mediabucket_container">
			<box id="mediabucket" embed="mediabucket" />
		</box>
        <box id="ad_container">
			<box id="article_advertisement" class="ad-twocolumn" embed="advertisement" />
		</box>
    	<panel class="article_body" id="body_continuation" embed="body" />
	</panel>
</jpml>
