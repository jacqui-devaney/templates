<jpml id="OPINION-4story-D_template">
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="OPINION-stylesheet.ejs" />
    <style>
		{ $join: [
				{	if: =portrait, then: {
					#articles:	{ frame: [8, 10, 460, 610] },
					#b1:	{ frame: [0, 0, 460, 314], options:{header:true} },
					#b3:	{ frame: [486, 2, 280, 400], options:{small_headline:true, show_image:true, F_image:{if: =widescreen, then:true, else:false}, no_border:true, byline:{if: =scale.small, then:true, else:false}} },
					#b4:	{ frame: [486, 402, 280, 216], options:{small_headline:true, no_border:true, byline:{if: =scale.small, then:true, else:false}} },
					#h1:	{options:{byline:true, hide_flashline:true}},
					#h2:	{options:{byline:true, hide_flashline:true}}
				}, else: {
					#articles:	{ frame: [16, 10, 460, 610] },
					#b1:	{ frame: [0, 0, 460, 314], options:{header:true} },
					#b3:	{ frame: [496, 2, 280, 400], options:{small_headline:true, show_image:true, F_image:{if: =widescreen, then:true, else:false}, no_border:true, byline:{if: =scale.small, then:true, else:false}} },
					#b4:	{ frame: [496, 402, 280, 216], options:{small_headline:true, no_border:true, byline:{if: =scale.small, then:true, else:false}} },
					#h2:	{options:{byline:true, hide_flashline:true, hide_image:{if: =scale.small, then:true, else:false}}},
					#h1:	{options:{byline:true, hide_flashline:true, hide_image:{if: =scale.small, then:true, else:false}}}
					
			
				}
			},
			{ $switch: [
				{ if: =articles.b1.type, equals: "Letters", then: {
					_comment: "no header",
					#b2 : { frame: [0, 324, 460, 276] }
                }},
				{ if: =articles.b2.type, equals: "Letters", then: {
					_comment: "b2 has the header",
					#b2: { frame: [0, 314, 460, 286], options:{header:true} }
				}},
				{ if: true, then: {
					_comment: "no header",
					#b2 : { frame: [0, 324, 460, 276] }
				}}
			]} 
    	]}    
    </style>
    <box id="articles">
    	<box id="b1" embed="article" module="OPINION-RANDO-LETTERS_module.xml" />
    	<box id="b2" embed="article" module="OPINION-RANDO-LETTERS_module.xml" />
    </box>
	<box id="l3" class="line" />
    <box id="b3" embed="article" module="TOP-IMAGE_module.xml" />
    <box id="b4" embed="article" module="TOP-IMAGE_module.xml" />

    <box id="h1" embed="article" module="HIGHLIGHTS_module.xml" />
    <box id="h2" embed="article" module="HIGHLIGHTS_module.xml" />
   	<box id="ad_background" class="ad_light">
		<box id="highlight_ad" class="ad-rectangle" embed="advertisement" />
	</box>

    
</jpml>