<jpml id="ARTICLE-deloitte-front_module">
	<style src="GLOBAL-stylesheet.ejs"/>
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="ARTICLE-stylesheet.ejs" />
	<style src="DELOITTE-stylesheet.ejs" />
	<style src="MEDIA-stylesheet.ejs" />
	<style>{
		jpml: {
			background-color: =options.background_color
		}
	}</style>
	<style>{
		$join: [
		{#body_container: {
            column-count: { if: =portrait, then: 3, else: 4},
            column-gutter: 20,
			flow: article_body,
			min-height: {if: =page.hasmedia, then:400, else:300},
			padding:[36, 0, 0, 0],
			layout-grid-line: {$multiply: [20, =view.zoomlevel]},
			layout-grid-line-offset: {$multiply: [20, =view.zoomlevel]}
        }},
		{.border-p:{
			border-width:[6, 0, 5, 0],
			layout-grid-line: 0,
			layout-grid-line-offset: 0,
			background-color: #CACACA,
			border-color: =color.background,
			padding:[0,0,0,0]
		}},
		{.border-mark: {
			font-size: 1,
			line-height: 1,
			color: transparent,
			content: "deloitte"
		}},
		{.article_headline:{
			font-name: "WhitneySSm-Medium",
			font-size: 36,
			line-height:42,
			color: #262626,
			padding:[16, 0, 0, 0]
		}},
		{.article_subhed:{
			font-name: "WhitneySSm-BookItalic",
			font-size: 22,
			line-height: 28,
			color: #5D5D5D,
			padding: [6, 0, 0, 0]
		}},
		{.module_flashline:{
			font-name: "WhitneySSm-Semibold",
			color: #004990
		}},
		{.article_body:{
			font-name: "WhitneySSm-Medium",
			color: #222222
		}},
		{#media_caption:{
			font-name: "WhitneySSm-Medium",
			font-size: 12,
			color: #666666
		}},
		{#mark_category:{
			content: =article.category
		}},
		{if: =portrait, then: {
			#media_container: {
				top: 0,
				left: {if: =media.width, less-than: 720, then: 248, else: {if: =media.width, more-than: 968, then: 248, else: 248}},
				width: {$switch: [
					{if: =media.width, less-than: 720, then: 237},
					{if: =media.width, more-than: 968, then: 485},
					237
				]}
			}
        }, else: {
			#media_container: {
				top: 0,
				left: {if: =media.width, less-than: 720, then: 248, else: {if: =media.width, more-than: 968, then: 248, else: 248}},
				width: {$switch: [
					{if: =media.width, less-than: 720, then: 236},
					{if: =media.width, more-than: 968, then: 484},
					236
				]}
			}
        }}
		]
    }</style>

    <panel id="header_top">
        <p class="article_headline"><span embed="headline"/></p>
		<h2 class="article_subhed" embed="subhed" />
	</panel>

	<panel id="body_container">
		<box id="media_container">
			<box id="media_asset" embed="media"/>
			<p id="media_caption"><mark id="mark_caption" /></p>
		</box>
		<p class="module_flashline"><mark id="mark_category"/> Journal</p>
		<p class="border-p"><mark class="border-mark"/></p>
		<panel class="article_body" embed="body"/>
	</panel>
</jpml>
