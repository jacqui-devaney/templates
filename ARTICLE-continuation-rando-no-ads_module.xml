<jpml id="ARTICLE-continuation-rando-no-ads_module">
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="GLOBAL-stylesheet.ejs" />
	<style>{
		$join: [
		{#header_top: { padding:[0, 0, 8, 5] }},
		{#body_container : { 
			padding: [8, 20, 8, 20], 
			min-height:200,
			min-width:250
		}},
		{.article_body: { 
            column-count: {$divide: [=view.width, {$multiply:[250, =scale.dpi]}]},
            column-gutter: 30,
			column-height:balance,
			layout-grid-line: {$multiply: [22, =view.zoomlevel]}
			
        }},
		{#body_continuation: {
			content: from-flow(article_body),
			flow: article_body
		}},

		{#rando_container: { 
			background-image:url(rando_bars.png), 
			background-position:bottom, 
			width:270,
			padding:[0, 0, 10, 0]
		}},
		{if: =portrait, then: {
			#rando_padding: {
				width:270,
				anchor-x:center, 
				top:75,
				padding:[20, 0]
			}
			
        }, else: {
			#rando_padding: {
				width:270,
				left:440, 
				top:75,
				padding:[20, 0]
			}
		}},
		{#article_advertisement: {
			min-height: 206,            
			min-width: 555,            
			anchor-x: center,            
			anchor-y: middle        

		}},
		{#filler: {
			position: relative,
			top: 10,
			left: 0,
			right: 0,
			bottom: 0,
			min-height: 0,
			border-image: url(articleBackground.png),
			border-slice: [16, 0, 0, 0],
			border-width: [16,0, 0, 0] 
		}},
		{#continued_label: {
			padding: [0, 0, 0, 15]
		}}
		
		]
    }</style>
	
    <box id="continued_label">
		<p><mark id="continued" /></p>
	</box>
	
	<panel id="body_container">
        <box id="rando_padding">
			<box id="rando_container">
				<h2 class="rando_subhed" embed="subhed" />
	        </box>
		</box>
		<panel class="article_body" id="body_continuation" embed="body"/>
    </panel>
	<box id="filler">
		<box id="article_advertisement" class="ad-twocolumn" embed="advertisement"/>
	</box>
	
</jpml>



