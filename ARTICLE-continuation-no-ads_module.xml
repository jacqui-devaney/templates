<jpml id="ARTICLE-continuation-no-ads_module">
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="GLOBAL-stylesheet.ejs" />
	<style>{
		$join: [
		{#body_container : { padding: [8, 15, 8, 15]}},
		{.article_body: { 
            column-count: {$divide: [=view.width, {$multiply:[250, =scale.dpi]}]},
            column-gutter: 20,
			column-height:balance,
			min-height:200
        }},
		{#body_continuation: {
			content: from-flow(article_body),
			flow: article_body
		}},

		{#mediabucket: {
			width:260,
			height:203,
			anchor-x:center,
			anchor-y:top
		}},
		{if: =portrait, then: {
			#mediabucket_container:	{ frame: [290, 0, 275, 207]  }
        }, else: {
			#mediabucket_container:	{ frame: [580, 0, 275, 207]  }
		}},
		{#filler: {
			position: relative,
			top: 10,
			left: 0,
			right: 0,
			bottom: 0,
			min-height: 0,
			border-image:url(articleBackground.png),
			border-width: [16, 0, 0, 0],
			border-slice: [16, 0, 0, 0]
		}},
		{#article_advertisement: {
			min-height: 206,            
			min-width: 555,            
			anchor-x: center,            
			anchor-y: middle        

		}},
		{#continued_label: {
			padding: [0, 0, 0, 15]
		}}
		
		]
    }</style>
	
	<box id="continued_label">
		<p><mark id="continued" /></p>
	</box>
	<panel id="body_container">
        <box id="mediabucket_container">
			<box id="mediabucket" embed="mediabucket" />
		</box>
		<panel class="article_body" id="body_continuation" embed="body"/>
    </panel>
	<box id="filler">
		<box id="article_advertisement" embed="advertisement"/>
	</box>
</jpml>