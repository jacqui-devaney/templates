<jpml id="DECO_module">
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style>{
			image:{
				width:=view.width,
				height: {$subtract:[=view.height, 1]},
				image-scale: {if: =options.full_screen, then:.9, else:1}
				
			},
			#deco_caption_container: {
				bottom:0,
				background-color:"rgba(0, 0, 0, .5)",
				padding:[12, 14, 5, 14],
				height:{if: =options.one_line_caption, then:60, else:80}
				
			},
			.deco_caption: {
				display:{if: =options.hide_caption, then:none, else:inherit}
			},
            .deco_headline: {
            	font-size:18
			}

	}</style>
			<box id="deco_container" embed="deco-image">
				<image embed="summary-image" />
				<box id="deco_caption_container">
					<p class="deco_headline"><mark class="m_headline" /><mark class="key" /></p>
					<panel class="deco_caption">
						<p embed="subhed" />
					</panel>
				</box>
			</box>
			
</jpml>
