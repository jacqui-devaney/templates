{
	#invisible: {
		display:none
	},
	.module_headline: {
		$join: [
			{
				font-name: { $switch: [
						{if: =issue.edition, equals: "japan", then: HiraKakuProN-W6},
						{if: =issue.edition, equals: "korea", then: AppleSDGothicNeo-Bold},
						{if: =options.small_semibold_headline, then: DJ5EscrowCond-Semibold},
						DJ5EscrowCond-Bold
					]
				},
				text-scale: {if: =scale.small, then: {$multiply: [=scale.text, 0.9] }, else: inherit},
				color:{if: =options.white_text, then:#fff, else:#000}
			
			},
			{
				$switch:[
					{if: =options.small_headline, then:{
						padding:[0, 0, {if: =options.show_byline, then:6, else:11}, 0],
						font-size:24,
						font-name: DJ5EscrowCond-Semibold,
						line-height:{ $switch: [
								{if: =issue.edition, equals: "japan", then: 28},
								{if: =issue.edition, equals: "korea", then: 28},
								"24"
							]
						}
						}
					},
					{if: =options.medium_headline, then:{
							font-size:{if-all: [
						        =scale.headlines,
						        {if: =extents.medium, more-than: 1.0, then: true, else: false}, 
						        {if: =extents.medium, less-than: 1.5, then: true, else: false}
						    ], then: 24, else: 30 },
							padding:[0, 0, {if: =options.show_byline, then:6, else:12}, 0],
							line-height:{ $switch: [
									{if: =issue.edition, equals: "japan", then: {if-all: [
									    =scale.headlines,
									    {if: =extents.medium, more-than: 1.0, then: true, else: false}, 
									    {if: =extents.medium, less-than: 1.5, then: true, else: false}
									], then: 30, else: 34 }
									},
									{if: =issue.edition, equals: "korea", then: {if-all: [
									    =scale.headlines,
									    {if: =extents.medium, more-than: 1.0, then: true, else: false}, 
									    {if: =extents.medium, less-than: 1.5, then: true, else: false}
									], then: 30, else: 34 }},
									{if-all: [
									    =scale.headlines,
									    {if: =extents.medium, more-than: 1.0, then: true, else: false}, 
									    {if: =extents.medium, less-than: 1.5, then: true, else: false}
									], then: 26, else: 34 },
									"36"
									
								]
							}
						}
					},
					{if: =options.large_headline, then: {
							font-size:{if-all: [
						        =scale.headlines,
						        {if: =extents.large, more-than: 1.0, then: true, else: false}, 
						        {if: =extents.large, less-than: 1.5, then: true, else: false}
						    ], then: 32, else: 44 },
							padding:[0, 0, {if: =options.show_byline, then:6, else:6}, 0],
							line-height: {if-all: [
							    =scale.headlines,
							    {if: =extents.large, more-than: 1.0, then: true, else: false}, 
							    {if: =extents.large, less-than: 1.5, then: true, else: false}
							], then: 34, else: 46 }
						}
					},
					{if: =options.very_large_headline, then: {
							font-size:{if-all: [
						        =scale.headlines,
						        {if: =extents.large, more-than: 1.0, then: true, else: false}, 
						        {if: =extents.large, less-than: 1.5, then: true, else: false}
						    ], then: 32, else: 56 },
							padding:[0, 0, {if: =options.show_byline, then:6, else:12}, 0],
							line-height: {if-all: [
							    =scale.headlines,
							    {if: =extents.large, more-than: 1.0, then: true, else: false}, 
							    {if: =extents.large, less-than: 1.5, then: true, else: false}
							], then: 34, else: 60 }
						}
					},
					{if: true, then: {
							padding:[0, 0, {if: =options.show_byline, then:6, else:12}, 0],
							font-size:26,
							line-height:{ $switch: [
									{if: =issue.edition, equals: "japan", then: 28},
									{if: =issue.edition, equals: "korea", then: 28},
									"26"
								]
							}
						}
					}
					
				]
				
			}
		]
	},
	.body: {
		font-name: { $switch: [
				{if: =issue.edition, equals: "japan", then: HiraKakuProN-W3},
				{if: =issue.edition, equals: "korea", then: AppleSDGothicNeo-Medium},
				"DJ5Exchange-Medium"
			]
		},
		text-indent:0,
		font-size:{$multiply:{if: =options.large_body, then:20, else:14}},
		line-height:{$multiply:{if: =options.large_body, then:26, else:20}},
		text-overflow: " \u00bb",
        text-align: { if: =options.justify, then:=justify, else:left},
		text-scale: {if: =widescreen, then: {$multiply: [=scale.text, 1.2] }, else: inherit},
		hyphens:auto,
		color:{if: =options.white_text, then:#fff, else:#000}
		

	},
	.deco_caption: {
		font-name: DJ5Exchange-Medium,
		font-size:14,
		line-height:20,
		color:#fff
		
	},
	.deco_headline:{
		font-name: DJ5EscrowCond-Semibold,
		color:#fff,
		padding:[0, 0, 9, 0],
		font-size:{if: =options.large_headline, then:45, else:26},
		line-height:{if: =options.large_headline, then:45, else:28}
	},
	.module_flashline: {
		font-name:{if: =article.type, equals:"Letters", then:DJ5EscrowCond-Bold, else: DJ5RetinaCd-Semibold},
		font-size:14,
		line-height:20,
		color:{if: =article.type, equals:"Letters", then:#b08900, else: #656565},
		text-transform:{if: =article.type, equals:"Letters", then:uppercase, else: none},
		paragraph-padding: [ 0, 0, 20, 0 ]
	},
	.highlight_flashline: {
		font-name:DJ5RetinaCd-Semibold,
		font-size:16,
		line-height:18,
		color:#656565,
		paragraph-padding: [ 0, 0, 20, 0 ]
	},
	.highlight_headline: {
		font-name: { $switch: [
				{if: =issue.edition, equals: "japan", then: HiraKakuProN-W6},
				{if: =issue.edition, equals: "korea", then: AppleSDGothicNeo-Bold},
				"DJ5Exchange-Bold"
			]
		},
		font-size:18,
		line-height:20,
		color:#000,
		padding: [ 5, 0, 5, 0 ],
		text-scale:{if: =widescreen, then: {$multiply: [=scale.text, 1.1] }, else: inherit}
		
	},
	.highlight_byline: {
		font-name:DJ5Exchange-Bold,
		font-size:12,
		line-height:16,
		paragraph-padding: [ 4, 0, 3, 0 ],
		text-scale:{if: =widescreen, then: {$multiply: [=scale.text, 1.1] }, else: inherit}
		
	},
	.highlight_body: {
		font-name: { if: =issue.edition, equals: "japan", then: HiraKakuProN-W3, else: DJ5Exchange-Medium },
		font-size:14,
		line-height:16,
        text-align: { if: =options.justify, then:=justify, else:left},
		color:#000,
		text-scale:{if: =widescreen, then: {$multiply: [=scale.text, 1.1] }, else: inherit},
		text-indent:{if-any: [
				{if: =issue.edition, equals: "japan", then:true},
				{if: =options.no_indent, then:true}
			],
			then:0,
			else:20
		}
	},
	.key: {
		font-name: {if: =device.platform, equals: Android, then: DJ5Utility, else: DJ5Utility-Regular },
		font-size:16,
		content: { if-all: [=issue.locked, =article.paid], then: "\u00a0K"},
		display: { if:=article.paid, then:default, else:none },
		padding: [0, 0, 0, 2],
		color:#948464
	},
	.byline: {
		font-name:DJ5Exchange-Semibold,
		font-size:14,
		line-height:17

	},
	.hidden_tablet: {
		display: none
	},
	.hidden_phone: {
		display: inherit
	},
	#m_subsection: { content: =article.subsection },
	#m_headline: { content: =article.headline }
		
	
}

