<jpml id="RIGHT-IMAGE_module">
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="PHONE-MODULES-stylesheet.ejs" />
	<style>{
			#image_wrapper: {
				anchor-x:right,
				width: {$switch:[
					{if: =options.A_image, then:110},
					{if: =options.small_A_image, then:90},
					110
				]},
				anchor-y:bottom,
				display:{if: =options.hide_image, then:none, else:inherit}
				
			},
			image: {
				pixels-per-point-x:1,
				pixels-per-point-y:1,
				height: {$switch:[
					{if: =options.A_image, then:100},
					{if: =options.small_A_image, then:80},
					100
				]},		
				padding: [0, 0, 15, 10],
				width: {$switch:[
					{if: =options.A_image, then:100},
					{if: =options.small_A_image, then:80},
					100
				]},
				image-scale: 1.2
            },

			.byline: {
				display: {if: =options.show_byline, then:inherit, else:none}
			
			},
			.body: {
				display: {if: =options.show_body, then:inherit, else:none}
			
			},
			#body-first-p: {
				text-indent: {if: =options.indent, then:20, else:0}
			},
			jpml: {
				padding:[0, 3]
			}
			
		
		}</style>
		<style>{
			if: =scale.phone, then:{
				jpml:{
					padding:[0, 8],
					border-width: [{if: =options.top_border, then:1, else:0}, 0, {if: =options.no_border, then:0, else:1}, 0],
					border-color: #d6d6d6
				},
				#image_wrapper: {
					display:none
				},
				#body: {
					display:none
				},
				#headline: {
					vertical-align:middle				
				}
			}, else:{}
		}</style>
		<box id="image_wrapper" class="hidden_phone">
			<image embed="summary-image" />
		</box>
		<panel id="headline">
			<p class="module_headline"><span embed="headline" /><mark class="key" /></p>
		</panel>
		<panel id="body" class="hidden_phone">
            <p class="byline" embed="byline"/>
            <panel class="body" embed="body"/>
        </panel>
        
</jpml>
