<jpml id="ARTICLE-front-cio_module">
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="GLOBAL-stylesheet.ejs" />
	<style>{
		$join: [
		{#header_top: { padding:[18, 10, 8, 15] }},
		{#body_container: { 
            padding: [10, 20, 0, 20],
			column-count: {$divide: [=view.width, {$multiply:[260, =scale.dpi]}]},
            column-gutter: 30,
			column-height:balance,
			flow: article_body,
			min-height: {if: =page.mediabucket, then:400, else:200},
			layout-grid-line: {$multiply: [22, =view.zoomlevel]},
			layout-grid-line-offset: {$multiply: [24, =view.zoomlevel]}
			
        }},
		{.close_button: {
			background-image: { $switch: [
				{ if: =app.language, equals: en, then: url(close.png) },
				{ if: =app.language, equals: de, then: url(close_de.png) }
			] },
			background-position:top-right,
			width: { $switch: [
				{ if: =app.language, equals: en, then: 60 },
				{ if: =app.language, equals: de, then: 73 }
			] },
			height:30
		}},
		{#mediabucket: {
			width:273,
			height:185,
			anchor-x:center,
			anchor-y:top
		}},
		{if: =portrait, then: {
			#mediabucket_container:	{ frame: [379, 8, 350, 205]  }
			
        }, else: {
			#mediabucket_container:	{ frame: [676, 8, 310, 205]  }
		}},
		{#filler: {
			position: relative,
			top: 10,
			left: 0,
			right: 0,
			bottom: 0,
			min-height: 0,
			border-image:url(articleBackground.png),
			border-width: [16, 0, 0, 0],
			border-slice: [16, 0, 0, 0]
		}}
		
		]
    }</style>
	<box id="close_button_box">
		<box class="close_button" embed="close"/>
	</box>
	<box id="continues_label">
		<p><mark id="continues" /></p>
	</box>
	
    <panel id="header_top">
        <p class="article_headline"><span embed="headline"/><mark class="key"/></p>
		<h2 class="article_subhed" embed="subhed" />
		<panel class="close_button"/>
	</panel>
	<box class="hr"></box>
	
	<panel id="body_container">
		<box id="mediabucket_container">
			<box id="mediabucket" embed="mediabucket" />
		</box>
		<p class="article_byline" embed="byline"/>
        <panel class="article_body" embed="body"/>
	    
	</panel>
	<box id="filler"/>

</jpml>


