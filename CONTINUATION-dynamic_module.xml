<jpml id="CONTINUATION-dynamic_module">
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="GLOBAL-stylesheet.ejs" />
    <style>{
		jpml: { padding: [ 4, 8, 4, 0] },
        #content: { padding: [4, 8, 0, 8] },
		#strap: {
            display: { if:=options.hide_strap, then:none, else:default },
			padding: [4, 4, 0, 8],
			background-color:#e4e4e4
        },
		#image_container: { 
			anchor-x: right,
			width: 84,
			pixels-per-point-x:{if: =scale.small, then:.7, else:1},
			pixels-per-point-y:{if: =scale.small, then:.7, else:1},
			image-scale:{if: =scale.small, then:.7, else:1}
			
		},
		image: {
			width:76,
			height:76,
			padding: [ 0, 0, 4, 8 ]
			
		},
		#body-first-p: {
			text-indent:0
		}
    }</style>
    
	<panel id="strap">
		<p class="subsection" embed="subsection" />
	</panel>
	<panel id="content">
	 	<box id="image_container">
			<image embed="summary-image"/>
		</box>
		<p class="continuation_headline"><span embed="headline" /><mark class="key" /></p>
		<panel embed="body" class="continuation_body"/>
	</panel>
</jpml>
