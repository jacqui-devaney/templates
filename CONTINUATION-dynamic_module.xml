<jpml id="CONTINUATION-dynamic_module">
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="PHONE-MODULES-stylesheet.ejs" />

	<style>{
		jpml: {
			background-color: =options.background_color,
			border-color: #d8d8d8
		},
		#page_details: {
			options: {
				tintTitle: true
			}
		}
	}</style>
    <style>{
		jpml: {
			if: =options.show_strap,
			then: {
			},
			else: {
				padding: [0, 8]
			}
		},
		#content: {
			if: =options.show_strap,
			then: {
				padding: [16, 8, 0, 8]
			},
			else: {
				padding: [{if: =options.show_body, then: 16.5, else: 0.5}, 0, 0, 0],
				border-width: [0.5, 0, 0, 0],
				border-color: #d8d8d8
			}
		},
		#vertical: {
			if: =options.show_body,
			then: {
			},
			else: {
				vertical-align: middle
			}
		},
		.continuation_headline: {
			if: =options.show_body,
			then: {
			},
			else: {
				padding: [8, 0, 0, 0]
			}
		},
		#image_container: {
			width: 111,
			padding: [0, 0, 0, 8],
			image-scale: 1.5,
			anchor-x: right
		},
		image: {
			height: 111
		},
		.key: {
			display: {
				if-all: [=issue.locked, =article.paid],
				then: { if: =options.show_body, then: none, else: default },
				else: none
			}
		},
		.body: {
			display: { if: =options.show_body, else: none }
		},
		.red: { background-color: red},
		.green: { background-color: green},
		.blue: { background-color: blue}
    }</style>
    <style>{
    	if: =scale.phone, then: {
			.module_headline: {
				font-name: "DJ5Exchange-Semibold",
				font-size: 18,
				text-scale: {$multiply: [=scale.text, 1] },
				line-height: 25,
				color:{if: =article.read, then: #b8b8ba}
			}
    	}, else: {
    		.module_headline: {
				font-name: "DJ5Exchange-Semibold",
				font-size: 18,
				text-scale: {$multiply: [=scale.text, 1] },
				line-height: 25,
				color:{if: =article.read, then: #b8b8ba}
			},
    		#strap: {
    			display: none
    		},
    		#image_container: {
    			display: none
    		}
    	}
    }</style>
	<box id="page_details" embed="pagedescription" />
	<panel id="strap">
		<p class="subsection"><mark id="m_subsection"/></p>
	</panel>
	<panel id="content">
	 	<box id="image_container" embed="deco-image">
			<image embed="summary-image" target-width="76" target-height="76" />
		</box>
		<panel id="vertical">
			<p class="module_headline"><mark class="m_headline" /><mark class="key" /></p>
		</panel>
        <panel class="body" embed="body">
        	<p><mark class="body-first-p-mark" /><mark class="module_summary" /></p>
        </panel>
	</panel>
</jpml>
