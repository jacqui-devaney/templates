<jpml id="DECO">
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style>{
		image: { 
			width: { $min:[553, {$divide: [=view.width, =scale.dpi]}] }, 
			height: { $min:[369, {$divide: [=view.height, =scale.dpi]}] }
		},
		#content: { padding: [8]},
		#hr: { display: { if: =options.no_line, then:none }}
		
	}</style>
	<panel class="hr" />
	<panel id="content">
		<panel>
			<p class="deco_headline"><span embed="headline" /><mark class="key" /></p>
		</panel>
		<box id="image_container">
			<image embed="summary-image" />
		</box>
		<panel embed="body" class="deco_caption" />
	</panel>
</jpml>
