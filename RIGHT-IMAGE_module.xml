<jpml id="RIGHT-IMAGE_module">
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="PHONE-MODULES-stylesheet.ejs" />
	<style>{
		$join: [
			{$switch: [
				{ if: =options.top_border, then: {
					jpml: {
						border-width: [1, 0, 0, 0],
						padding: [12, 0, 0, 0],
						border-color: #d8d8d8
					}

				}},
				{ if: =options.left_border, then: {
					jpml: {
						border-width: [0, 0, 0, 1],
						border-color: #d8d8d8,
						padding: [0, 0, 0, 10]
					}

				}},
				{ if: =options.right_border, then: {
					jpml: {
						border-width: [0, 1, 0, 0],
						border-color: #d8d8d8,
						padding: [0, 10, 0, 0]
					}

				}},
				{ if: =options.bottom_border, then: {
					jpml: {
						border-width: [0, 0, 1, 0],
						border-color: #d8d8d8,
						padding: [0, 0, 0, 0]
					}

				}},
				{ if: true, then: {
					jpml: {
						border-width: [0, 0, 0, 0],
						padding: [0, 0, 0, 0]
					}
				}}

			]},
			{
				#deco_container: {
					anchor-x:right,
					width: {$switch:[
						{if: =options.A_image, then:110},
						{if: =options.small_image, then:119},
						{if: =options.square_image, then:179},
						{if: =options.wide_image, then:304},
						{if: =options.small_wide_image, then:{$add: [{$multiply: [1.25, =view.height]}, 6]}},
						242
					]},
					anchor-y:{if: =options.A_image, then:bottom, else:top},
					display:{if: =options.hide_image, then:none, else:inherit}

				},
				image: {
					pixels-per-point-x:1,
					pixels-per-point-y:1,
					height: {if: =options.small_wide_image, then: inherit, else: {$subtract:[=view.height, {if: =options.top_border, then:24, else:12}]}},
					padding: [0, 0, 0, 6],
					width: {$switch:[
						{if: =options.A_image, then:100},
						{if: =options.small_image, then:92},
						{if: =options.square_image, then:173},
						{if: =options.wide_image, then:298},
						{if: =options.small_wide_image, then:{$multiply: [1.25, =view.height]}},
						236
					]},
					image-scale: 1
	            },

				.byline: {
					display: {if: =options.show_byline, then:inherit, else:none}

				},
				.body: {
					display: {if: =options.show_body, then:inherit, else:none}
				},
				.module_flashline: {
					display: {if: =options.show_flashline, then:inherit, else:none}
				}
			}
		]

		}</style>
		<style>{
			if: =scale.phone, then:{
				jpml:{
					padding:[0, 8],
					border-width: [{if: =options.top_border, then:1, else:0}, 0, {if: =options.no_border, then:0, else:1}, 0],
					border-color: #d6d6d6
				},
				#deco_container: {
					display:none
				},
				#body: {
					display:none
				},
				#headline: {
					vertical-align:middle
				}
			}, else:{}
		}</style>
		<box id="deco_container" embed="deco-image">
			<image embed="summary-image" />
		</box>
		<panel id="headline">
			<p class="module_headline"><mark class="m_headline" /></p>
			<p class="module_flashline"><span embed="flashline" /></p>
            <p class="byline" embed="byline"/>
            <panel class="body" embed="body"/>
        </panel>

</jpml>
