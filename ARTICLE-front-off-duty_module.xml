<jpml id="ARTICLE-front">
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style>{
		$join: [
		{#header_top: { padding:[0, 0, 8, 5] }},
		{#body_container : { padding: [4, 5, 0, 5]}},
		{.body: { 
            column-count: {$divide: [=view.width, {$multiply:[250, =scale.dpi]}]},
            column-gutter: 20
        }},
		{#continues_label: {
			anchor-y:bottom
		}},
		{.continue: {
			text-align:right
		}},
		{#image_container: {
			frame: [0, 10, 768, 604]
		}},
		{#image:{ frame: [12, 0, 722, 584]}}
		]
    }</style>
	
    <box id="image_container">
		<image embed="summary-image" />
	</box>
	<panel id="header_top">
        <p class="offduty_article_headline"><span embed="headline"/><mark class="key"/></p>
		<p class="offduty_article_subhed" embed="subhed" />
    </panel>
	<panel id="body_container">
	    <p class="byline" embed="byline"/>
        <panel class="body" embed="body"/>
    </panel>
    
</jpml>


