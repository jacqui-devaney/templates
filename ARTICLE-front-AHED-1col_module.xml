<jpml id="ARTICLE-front-AHED-1col_module">
    <style src="GLOBAL_MODULES-stylesheet.ejs" />
    <style src="GLOBAL-stylesheet.ejs" />
    <style>{
        $join: [
        {#header_top: { padding:[18, 10, 8, 15] }},
        {#body_container: { 
            padding: [10, 20, 0, 20],
            column-count: 1,
            column-height:balance,
            column-gutter: 30,
            layout-grid-line: {$multiply: [22, =view.zoomlevel]},
            layout-grid-line-offset: {$multiply: [20, =view.zoomlevel]}
             
        }},
        {.article_headline:{
            font-size:40,
            line-height:42
        }},
        {image: {
            width:113,
            height:113,
            padding: [ 4, {if: =landscape, then:18, else:0}, 8, {if: =landscape, then:0, else:18} ]
             
        }},
        {#image_container: { 
            anchor-x: {if: =landscape, then:left, else:right},
            top:{if: =landscape, then:100, else:0},
            width: 131,
            pixels-per-point-x:1,
            pixels-per-point-y:1,
            image-scale:1
             
        }},
 
        {#mediabucket: {
            width:546,
            height:385,
            anchor-x:center,
            anchor-y:{if: =portrait, then:top, else:middle}
        }},
        {if: =portrait, then: {
            .portrait_bucket:   { 
                top:10,
                width:575,
                height:402,
                anchor-x:center
            },
            .landscape_bucket: {
                display:none
            },
            .landscape_media: {
                display:none
            },
            #text: {
                flow: article_body
            }
 
 
        }, else: {
            .landscape_bucket:  { 
                anchor-y:middle,
                width:575,
                height:385,
                anchor-x:right
            },
            .portrait_bucket: {
                display:none
            },
            .portrait_media: {
                display:none
            },
            #text: {
                width:260,
                flow: article_body
            }
             
             
        }},
        {#filler: {
            position: relative,
            top: 10,
            left: 0,
            right: 0,
            bottom: 0,
            min-height: 0,
            border-image:url(articleBackground.png),
            border-width: [16, 0, 0, 0],
            border-slice: [16, 0, 0, 0]
        }},
        {#article_advertisement: {
            min-height: 206,            
            min-width: 555,            
            anchor-x: center,            
            anchor-y: middle        
 
        }}
        ]
    }</style>
    <box id="continues_label">
        <p><mark id="continues" /></p>
    </box>
    <box id="mediabucket_container" class="portrait_bucket">
        <box id="mediabucket" class="portrait_media" embed="mediabucket" />
    </box>
     
    <panel id="header_top">
        <p class="article_flashline" embed="flashline"/>
        <p class="article_headline"><span embed="headline"/><mark class="key"/></p>
        <h2 class="article_subhed" embed="subhed" />
    </panel>
    <box class="hr"></box>
     
    <panel id="body_container">
        <box id="mediabucket_container" class="landscape_bucket">
            <box id="mediabucket" class="landscape_media" embed="mediabucket" />
        </box>
        <box id="text">
            <box id="image_container">
                <image embed="summary-image" target-width="113" target-height="113" />
            </box>
            <p class="article_byline" embed="byline"/>
            <panel class="article_body" embed="body"/>
        </box>
    </panel>
    <box id="filler">
        <box id="article_advertisement" class="ad-twocolumn" embed="advertisement"/>
    </box>
     
</jpml>