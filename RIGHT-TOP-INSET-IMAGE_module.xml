<jpml id="RIGHT-TOP-INSET-IMAGE_module">
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="GLOBAL-stylesheet.ejs" />
	<style>{
        jpml: {padding: [10, 0, 0, 0]},
		#body: { 
            column-count: {$divide: [=view.width, {$multiply:[250, =scale.dpi]}]},
            column-gutter: 20,
			padding: [0, 0, 15, 0]
        },
        #image_container: { 
			width:270,
			anchor-x:right,
			anchor-y:top
			
			
		},
		image: {
			width:262,
			height:174,
			padding: [2, 4, 10, 4]
		},
		.invisible: { display:none },
		#small_headline: { display: { if: =options.small_headline, then:inherit }},
		#medium_headline: { display: { if: =options.medium_headline, then:inherit }},
		#large_headline: { display: { if: =options.large_headline, then:inherit }}
	}</style>
	<box id="image_container">
		<image embed="summary-image"/>
	</box>
    <panel id="headline">
		<p id="small_headline" class="invisible"><span embed="headline" /><mark class="key" /></p>
		<p id="medium_headline" class="invisible"><span embed="headline" /><mark class="key" /></p>
		<p id="large_headline" class="invisible"><span embed="headline" /><mark class="key" /></p>
	</panel>
	<panel id="body-container">
		<panel id="body">
            <p class="byline" embed="byline"/>
            <panel class="body" embed="body"/>
        </panel>
    </panel>

</jpml>
