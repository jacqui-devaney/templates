<jpml id="ARTICLE-front-deloitte-phone_module">
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="PHONE-MODULES-stylesheet.ejs" />
	<style>{
		$join: [
		{#deloitte_article_header: {
			border-image:url(deloitte_background-white.png),
			border-width: [3, 0, 0, 0],
			border-slice: [3, 0, 0, 0],
			max-height:44
		}},
		{.deloitte: {
			background-image:url(deloitte.png),
			background-position:top-left,
			width:80,
			height:0,
			top:0,
			left:0
		}},
		{.deloitte_article:{
			padding:[0, 0, 0, 10],
			position:relative,
			top:12,
			left:0
		}},
		{.deloitte_slug: {
			text-align:left,
			padding:[5, 0, 0, 100]
		}},
		{.slug:{
			right:0
		}},
		{#header_top: { 
			padding:[6, 10, 0, 10],
			border-width:[2, 0, 0, 0],
			border-color:#e7e7e7
		}},
		{#body_container: { 
            padding: [0, 10, 0, 10],
			flow: article_body,
			min-height: {if: =page.mediabucket, then:200, else:100},
			layout-grid-line: {$multiply: [22, =view.zoomlevel]},
			layout-grid-line-offset: {$multiply: [18, =view.zoomlevel]}
			
        }},
		{.body-bug: {
			display: none
		}},
		
		{#media: {
			width:248,
			height:180,
			padding:[0, 10, 0, 10],
			anchor-x:center,
			options: {
				id: =page.number
			}
		}},	
		{#filler: {
			position: relative,
			top: 10,
			left: 0,
			right: 0,
			bottom: 0,
			min-height: 0,
			border-image:url(articleBackground.png),
			border-width: [16, 0, 0, 0],
			border-slice: [16, 0, 0, 0]
		}},
		{#cio: {
			display:{if: =page.section, equals: "CIO", then:inherit, else:none}
		}},
		{#cfo: {
			display: {if: =page.section, equals: "CFO", then:inherit, else:none}
		}},
		{#risk: {
			display: {if: =page.section, equals: "RISK_AND_COMPLIANCE", then:inherit, else:none}
		}},

		{em: {
			font-name:Helvetica
		}},
		{strong: {
			font-name:Helvetica
		}},
		{cite: {
			font-name:Helvetica
		}}
		
		
		
		]
    }</style>
	<panel id="deloitte_article_header">
		<box class="deloitte_article">
			<box class="deloitte" />
		</box>
		<box class="slug">
			<p class="deloitte_slug" id="cio">Business-led, Technology-enabled: Insight from Deloitte</p>
			<p class="deloitte_slug" id="cfo">CFO insight and analysis written and compiled by Deloitte</p>
			<p class="deloitte_slug" id="risk">Risk management, strategy and analysis written and compiled by Deloitte</p>
		</box>
	</panel>

    <panel id="header_top">
        <p class="deloitte_article_headline"><span embed="headline"/><mark class="key"/></p>
	</panel>
	
	<panel id="body_container">
		<box id="mediabucket_container">
			<box id="media" embed="media" />
		</box>
        <panel class="deloitte_article_body" embed="body"/>
	    
	</panel>
	<box id="pagenext" embed="pagenext" />
	<box id="pageback" embed="pageback" />
	<box id="pagedown" embed="pagenext" />
	<box id="pageup" embed="pageback" />
	<box id="filler"/>
	
</jpml>


