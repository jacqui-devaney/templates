<jpml id="NAVIGATION_module">
	<!-- This module has a bunch of gross negative padding.  Lets not do this -->
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="PHONE-MODULES-stylesheet.ejs" />
	<style>{
		jpml: {
			background-color: transparent,
			padding:
            [{if: =view.height, less-than: =size.rail_height_with_image, then: 10, else: 4},20,{if: =view.height, less-than: =size.rail_height_with_image, then: -10, else: -20}, 16],
			height:130
		}
	}</style>
	<style>{
		#image_container: {
			display: { if: {$count:[=article.thumbnail]}, more-than: 0, then: inherit, else: none},
			anchor-x:left,
			anchor-y:left,
			padding:[5, 16, 0, 0],
			width: 160,
			height: 115
		},
		image: {
			options: {
				match: {
					max-width: 553
				},
				source: {
					$switch : [
						{if: {$count:[=article.images.rail]},
						more-than: 0,
						then: {
							$join: ["url(", =article.images.rail, ")"]
						}},
						{if: {$count:[=article.image_rail]},
						more-than: 0,
						then: {
							$join: ["url(", =article.image_rail, ")"]
						}}
					]
				}
			},
			background-color:inherit
		},
		.byline: {
			display: {if: =options.show_byline, then:inherit, else:none}

		},
		.article_subhed: {
			display: {if: =options.show_subhed, then:inherit, else:none}
		},
		.body: {
			display: inherit
		}


	}</style>
	<style>{
        .opinion_flashline: {
            display: {if: =page.section, equals: "OPINION", then: none, else: {if: =article.category, equals: "Opinion", then: inherit, else: none}},
            font-name:WhitneySSm-Medium,
            font-size:10,
            line-height:18,
            color: #a7afaf,
            text-transform:uppercase,
            padding:[0, 0, 4, 0]
        },
		.article_subhed: {
			font-name: WhitneySSm-BookItalic,
			font-size:14,
			line-height:18,
			color: #2b3333,
			padding:[0,0,0,0]
		},
		.module_headline: {
			font-name: "ChronicleDisplay-Semi",
			font-size: 17,
			line-height:20,
			padding: [0, 0, 2, 0],
			color: #2b3333
		},
		#module_text: {
			padding:[6,0,0,0]
		},
		.body: {
			font-name: ChronicleSSmBook-Regular,
			font-size:14,
			line-height:18,
			color: #4f5757
		},
		.byline: {
			font-size:14,
			font-name: ChronicleSSmBook-Italic,
			line-height:18,
			padding:[0,0,4,0],
			color: #a7afaf
		}
	}</style>

	<box id="image_container">
		<box id="deco_container" embed="deco-image"><image/></box>
	</box>
	<panel id="module_text">
        <p class="opinion_flashline">OPINION</p>
		<p id="headline" class="module_headline"><mark class="m_headline" /></p>
		<p class="article_subhed"><mark class="subhed-mark" /></p>
		<p class="byline"><mark class="byline-mark" /></p>
		<panel class="body">
			<p><mark class="body-first-p-mark" /><mark class="body-mark" /></p>
		</panel>
	</panel>

</jpml>
