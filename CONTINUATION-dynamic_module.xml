<jpml id="CONTINUATION-dynamic_module">
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="PHONE-MODULES-stylesheet.ejs" />

	<style>{
		jpml: {
			background-color: =options.background_color,
			border-color: #d8d8d8
		},
		#page_details: {
			options: {
				tintTitle: true
			}
		}
	}</style>
    <style>{
		#content: {
			if: =options.show_strap,
			then: {
				padding: {if: =scale.phone, then: [16, 24, 0, 0]}
			},
			else: {
				if: =options.hide_border,
				then: {
					padding: {if: =scale.phone, then: [0, 24, 0, 0]}
				},
				else: {
					padding: [
						{if: =options.show_body, then: {if: =scale.phone, then: 24.5, else: 9.5}, else: 0.5},
						{if: =scale.phone, then: {if: =options.show_body, then: 9, else: 24}, else: 0},
						{if: =options.show_body, then: {if: =scale.phone, then: 8, else: 0}, else: 0},
						{if: =scale.phone, then: 0, else: 0}
					],
					border-width: [0.5, 0, 0, 0],
					border-color: #d8d8d8
				}
			}
		},
		#vertical: {
			if: =options.show_body,
			then: {
			},
			else: {
				vertical-align: middle
			}
		},
		#image_container: {
			width: 111,
			padding: [0, 0, 0, 8],
			image-scale: 0.5,
			anchor-x: right
		},
		image: {
			height: 111
		},
		.key: {
			display: {
				if-all: [=issue.locked, =article.paid],
				then: { if: =options.show_body, then: none, else: default },
				else: none
			}
		},
		.body: {
			display: { if: =options.show_body, else: none }
		},
		.red: { background-color: red},
		.green: { background-color: green},
		.blue: { background-color: blue}
    }</style>
    <style>{
    	if: =scale.phone, then: {
			.module_headline: {
				padding: { if: =options.show_body, else: [4, 0, 0, 0] },
				color:{if: =article.read, then: color.articleReadColor}
			},
			#vertical: {
				padding: [0, 23, 0, 23]
			},
			.body: {
				padding: [4, 0, 0, 24]
			},
			#article_status: {
				position: relative,
				padding: [{if: =options.show_body, then: 1, else: 5}, 4, 0, 4],
				top: 0,
				left: -24,
				width: 16,
				height: 16,
				options: {
					identifier: =article.id
                    }
                },
                image:{
                    height: {
                        $switch: [
                        {if: =view.width, equals: 320, then: 78},
                        {if: =view.width, equals: 375, then: 100},
                        {if: =view.width, equals: 414, then: 122}
                    ]}
                },
                #image_container: {
                    width: {
                       $switch:[
                        {if: =view.width, equals: 320, then: 117},
                        {if: =view.width, equals: 375, then: 150},
                        {if: =view.width, equals: 414, then: 183}
                       ]
                    },
                    padding: [6, -4, 0, 0],
                    image-scale: 1,
                    anchor-x: right,
                    position: relative
                },
                #body-first-p:{
                    padding: [0, 0, 0, 0]
                }
    	}, else: {
    		#strap: {
    			display: none
    		},
    		#article_status: {
    			display: none
    		}
    	}
    }</style>
    <box id="page_details" embed="pagedescription" />
	<panel id="strap">
		<p class="subsection"><mark id="m_subsection"/></p>
	</panel>
	<panel id="content">
		<panel id="vertical">
        <p id="headline" class="module_headline"><mark class="m_headline" /><mark class="key" /></p>
		</panel>
	 	<box id="image_container" embed="deco-image">
			<image class="summary-image" />
		</box>
        <panel class="body">
        	<p id="body-first-p"><mark class="body-first-p-mark" /><mark class="module_summary" /></p>
        </panel>
	</panel>
</jpml>
