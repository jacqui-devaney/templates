{

	.ad-fullpage: { options: { zone: {$join: [=ad.prefix, fullpage]} } },
	.ad-skyscraper: { options: { zone: {$join: [=ad.prefix, skyscraper]} } },
	.ad-rectangle: { options: { zone: {$join: [=ad.prefix, {if: =scale.phone, then: sbanner, else: rectangle}]} } },
	.ad-twocolumn: { options: { zone: {$join: [=ad.prefix, {if: =scale.phone, then: abanner, else: twocolumn}]} } },
	.ad-banner: { options: { zone: {$join: [=ad.prefix,{$switch: [
		{if: =scale.phone, then: sbanner},
		{if: =widescreen, then: rectangle},
		"ribbon"
	]}
	]} } },
	.ad_light: {background-color: #efefef},
	.ad_white: {background-color: #ffffff},
	.hidden_tablet: {display:none},
	.hidden_phone: {display:inherit},
	#front_page: {
		top: {if: =landscape, then:568, else:824},
		height: {if: =scale.phone, then:50, else:90}
	},
	#banner_ad: 	{ 
		pixels-per-point-x: 1,
		pixels-per-point-y: 1,
		anchor-x:center,
		anchor-y:middle,
		width:{$switch: [
					{if: =scale.phone, then:320},
					{if: =widescreen, then:175},
					{if-all: [=scale.large, =portrait], then:768},
					"1024"
		]},
		height: {if: =scale.phone, then:50, else:90}
		
	},
	#article_advertisement: {
		anchor-y:middle,
		anchor-x:right,
		pixels-per-point-x: 1,
		pixels-per-point-y: 1,
		width:246,
		height:{if: =portrait, then:1024, else:768 }
	},
	#skyscraper_ad:{
		width:246,
		height:492,
		anchor-y:middle,
		anchor-x:center,
		background-color:blue
	},
	#fullpage_ad: {
		anchor-x:center,
		anchor-y:middle,
		pixels-per-point-x: 1,
		pixels-per-point-y: 1,
		width: {$switch: [
			{if-all: [=scale.phone, =portrait], then:320},
			{if-all: [=scale.small, =portrait], then:600},
			{if-all: [=scale.large, =portrait], then:768},
			{if-all: [=scale.small, =landscape], then:828},
			{if-all: [=scale.large, =landscape], then:1024}
		]},
		height: {$switch: [
			{if-all: [=scale.phone, =portrait], then:416},
			{if-all: [=scale.small, =portrait], then:702},
			{if-all: [=scale.large, =portrait], then:{if: =intent.section, then: 876, else: 899}},
			{if-all: [=scale.small, =landscape], then:488},
			{if-all: [=scale.large, =landscape], then:{if: =intent.section, then: 620, else: 643}}
		]}
	}
}