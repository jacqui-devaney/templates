<jpml id="ARTICLE-continuation-deloitte-no-ads_module">
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="GLOBAL-stylesheet.ejs" />
	<style>{
		$join: [
		{.close_button: {
			background-image: { $switch: [
				{ if: =app.language, equals: en, then: url(close.png) },
				{ if: =app.language, equals: de, then: url(close_de.png) }
			] },
			background-position:top-right,
			width: { $switch: [
				{ if: =app.language, equals: en, then: 60 },
				{ if: =app.language, equals: de, then: 73 }
			] },
			height:30
		}},

		{#body_container: { 
            padding: [10, 20, 0, 20],
			column-count: {$divide: [=view.width, {$multiply:[260, =scale.dpi]}]},
            column-gutter: 30,
			column-height:balance,
			min-height: {if: =page.mediabucket, then:400, else:200},
			layout-grid-line: {$multiply: [22, =view.zoomlevel]},
			layout-grid-line-offset: {$multiply: [18, =view.zoomlevel]}
        }},
		{#body_continuation: {
			content: from-flow(article_body),
			flow: article_body
		}},
		
		{#mediabucket: {
			width:273,
			height:185,
			anchor-x:center,
			anchor-y:top
		}},
		{if: =portrait, then: {
			#mediabucket_container:	{ frame: [379, 36, 350, 205]  }
			
        }, else: {
			#mediabucket_container:	{ frame: [676, 36, 310, 205]  }
		}},
		{#filler: {
			position: relative,
			top: 10,
			left: 0,
			right: 0,
			bottom: 0,
			min-height: 0,
			border-image:url(articleBackground.png),
			border-width: [16, 0, 0, 0],
			border-slice: [16, 0, 0, 0]
		}}
		
		

		]
    }</style>
	<box id="close_button_box">
		<box class="close_button" embed="close"/>
	</box>
	<panel id="body_container">
        <box id="continued_label">
			<p><mark id="continued" /></p>
		</box>
		<box id="mediabucket_container">
			<box id="mediabucket" embed="mediabucket" />
		</box>
		<panel class="article_body" id="body_continuation" embed="body"/>
	    
	</panel>
	<box id="filler"/>
	
</jpml>


