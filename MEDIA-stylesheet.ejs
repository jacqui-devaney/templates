{
	$join: [
		{
			#media_container: {
				display: {if: =page.hasmedia, then: inherit, else: none},
				padding: {if: =scale.phone, then: [0, 0, 0, 0], else: [0, 0, 5, 0] },
				position: relative,
				layout-grid-line: 0
			},
			#media_asset: {
				position: relative,
				left: 0,
				right: 0,
				height: {$ceiling: [
					{if: =scale.phone, then: {
						$switch: [
							{$divide: [{$subtract:[=view.width, {if: =page.number, equals: 0, then: 0, else: 20}]}, =media.aspect]},
							{$subtract:[=view.height, 220]}
						]
					}, else: {
						$min: [{$max: [{$switch: [
							{if: =media.width, less-than: 360, then: {$divide: [236, =media.aspect]}},
							{if: =media.width, more-than: 484, then: {$divide: [484, =media.aspect]}},
							{$divide: [236, =media.aspect]}
						]}, {$multiply: [.1, =view.height]}]}, {$multiply: [.69, =view.height]}]
					}}
				]},
				options: {
					id: {
						if: =page.mediaindex,
						at-least: 0,
						then: =page.mediaindex,
						else: =page.number
					},
					hideCaption: true
				}
			},
			#media_title: {
				font-name: "WhitneySSm-Semibold",
				font-size: 12,
				text-indent: 0,
				display: {if: =page.number, equals: 0, then: none}
			},
			#mark_media_title: {
				content: =media.title
			},
            #media_credit: {
                color: #878f8f,
                font-size: 10,
                line-height: 20,
                font-name: WhitneySSm-Medium,
								text-transform:uppercase
            },
            #mark_credit: {
                content: =media.credit
            },
			#media_caption: {
				layout-grid-line: 1,
				layout-grid-line-offset: 0,
		        color: #878f8f,
		        font-size: 13,
		        line-height: 20,
		        font-name: WhitneySSm-Book,
		        border-color: #d8d8d8,
				padding: { if-all: [
						{ if: =page.number, equals: 0, then: true, else: false },
						{ if: =scale.phone, then: true, else: false }
					], then: [6, 10, 0, 10], else: [6, 0, 0, 0]
				},
				text-indent: 0
			},
			#mark_caption: {
				content: =media.caption
			}
		},
		{if: =media.type, equals: "vrvideo", then: {
			#media_vr_link: {
		        layout-grid-line: 1,
		        layout-grid-line-offset: 0,
		        color: #878f8f,
		        font-size: 16,
		        line-height: 22,
		        font-name: "WhitneySSm-Book",
		        padding: { if-all: [
		                { if: =page.number, equals: 0, then: true, else: false },
		                { if: =scale.phone, then: true, else: false }
		            ], then: [8, 16, 22, 16], else: [8, 0, 0, 0]
	            },
				text-indent: 0
			},
			#mark_media_vr_link: {
				content: "Learn more about WSJ VR"
			}
		}, else: {}},
		{if: =media.type, equals: "vrimage", then: {
			#media_vr_header: {
		        layout-grid-line: 1,
		        layout-grid-line-offset: 0,
		        color: =page.tint,
		        font-size: 16,
		        line-height: 16,
		        font-name: "WhitneySSm-Book",
				padding: [0, 0, 0, 0],
				text-indent: 0,
				text-align: left,
				column-count: 2,
				max-height: 26
			},
			#media_vr_header_left: {
		        padding: [0, 0, 0, 0]
			},
			#media_vr_header_right: {
				text-align: right,
		        padding: [0, 0, 0, 0]
			},
			#mark_media_vr_header_left: {
				content: "360\u00B0 Photo"
			},
			#mark_media_vr_header_right: {
		        color: #878f8f,
				content: "Tap, Tilt & Turn"
			},
			#media_vr_link: {
		        layout-grid-line: 1,
		        layout-grid-line-offset: 0,
		        color: #878f8f,
		        font-size: 16,
		        line-height: 22,
		        font-name: "WhitneySSm-Book",
		        padding: { if-all: [
		                { if: =page.number, equals: 0, then: true, else: false },
		                { if: =scale.phone, then: true, else: false }
		            ], then: [8, 16, 22, 16], else: [8, 0, 0, 0]
	            },
				text-indent: 0
			},
			#mark_media_vr_link: {
				content: "Learn more about WSJ VR"
			}
		}, else: {}}		
	]
}
