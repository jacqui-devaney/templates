<jpml id="ARTICLE-future_of_everything-front_module">
	<style src="GLOBAL-stylesheet.ejs"/>
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="FUTURE-stylesheet.ejs" />
	<style src="MEDIA-stylesheet.ejs" />
	<style>{
		jpml: {
			background-color: =options.background_color
		}
	}</style>
	<style>{
		$join: [
		{#body_container: {
            column-count: { if: =portrait, then: 3, else: 4},
            column-gutter: 12,
			flow: article_body,
			min-height: {if: =page.hasmedia, then:400, else:300},
			padding:[36, 0, 0, 0],
			layout-grid-line: {$multiply: [20, =view.zoomlevel]},
			layout-grid-line-offset: {$multiply: [20, =view.zoomlevel]}
        }},
		{.border-p:{
			border-width:[6, 0, 5, 0],
			layout-grid-line: 0,
			layout-grid-line-offset: 0,
			background-color: #CACACA,
			border-color: =color.background,
			padding:[0,0,0,0]
		}},
		{.border-mark: {
			font-size: 1,
			line-height: 1,
			color: transparent,
			content: "Future_Of_Everything"
		}},
		{.article_headline:{
			font-name: "SharpSansNo1-Medium",
			font-size: 36,
			line-height:42,
			color: #262626,
			padding:[16, 0, 0, 0]
		}},
		{.article_subhed:{
			font-name: "SharpSansNo1-MediumItalic",
			font-size: 22,
			line-height: 28,
			color: #5D5D5D,
			padding: [6, 0, 0, 0]
		}},
		{.module_flashline:{
			font-name: "SharpSansNo1-Medium",
			color: #004990
		}},
		{.article_body:{
            font-name: "DJ5Exchange-Medium",
            font-size:{$multiply: [14, =view.zoomlevel]},
            line-height:{$multiply: [20, =view.zoomlevel]},
            text-align: justify,
            hyphens:auto,
            color:#222221,
            text-indent:=text.indent
		}},
		{#mark_category:{
			content: =article.category
		}},
		{if: =portrait, then: {
			#media_container: {
				top: 0,
				left: {if: =media.width, less-than: 360, then: 248, else: {if: =media.width, more-than: 484, then: 248, else: 248}},
				width: {$switch: [
					{if: =media.width, less-than: 360, then: 237},
					{if: =media.width, more-than: 484, then: 485},
					237
				]}
			}
        }, else: {
			#media_container: {
				top: 0,
				left: {if: =media.width, less-than: 360, then: 248, else: {if: =media.width, more-than: 484, then: 248, else: 248}},
				width: {$switch: [
					{if: =media.width, less-than: 360, then: 236},
					{if: =media.width, more-than: 484, then: 484},
					236
				]}
			}
        }}
		]
    }</style>

    <panel id="header_top">
        <p class="article_headline"><span embed="headline"/></p>
		<h2 class="article_subhed" embed="subhed" />
	</panel>

	<panel id="body_container">
		<box id="media_container">
			<p id="media_title"><mark id="mark_media_title"/></p>
			<p id="media_vr_header"><mark id="mark_media_vr_header"/></p>
			<box id="media_asset" embed="media"/>
			<p id="media_vr_footer"><mark id="mark_media_vr_footer"/></p>
			<p id="media_caption"><mark id="mark_caption" /></p>
			<p id="media_vr_link"><a href="http://wsj.com/virtual-reality"><mark id="mark_media_vr_link"/></a></p>
		</box>
		<p class="module_flashline" embed="flashline"/>
    	<p class="byline" embed="byline"/>
		<p class="border-p"><mark class="border-mark"/></p>
		<panel class="article_body" embed="body"/>
	</panel>
</jpml>
