<jpml id="CONTINUATION-dynamic_module">
	<style src="GLOBAL-stylesheet2.ejs" />
	<style src="GRID-extras2.ejs" />
	<style src="GLOBAL_MODULES-stylesheet2.ejs" />
	<style src="PHONE-MODULES-stylesheet.ejs" />

	<style>{
		jpml: {
			background-color: =options.background_color,
			border-color: #d8d8d8
		},
		#page_details: {
			options: {
				tintTitle: true
			}
		}
	}</style>
	<style>{
		.module_flashline: {
			display: none
		},
		#content: {
			if: =options.show_strap,
			then: {
				padding: {if: =scale.phone, then: [16, 24, 0, 0]}
			},
			else: {
				if: =options.hide_border,
				then: {
					padding: {if: =scale.phone, then: [0, 24, 0, 0]}
				},
				else: {
					padding: [
						{if: =options.show_body, then: {if: =scale.phone, then: 9.5}},
						{if: =scale.phone, then: {if: =options.show_body, then: 9, else: 24}, else: 0},
						{if: =options.show_body, then: {if: =scale.phone, then: 8, else: 0}, else: 0},
						{if: =scale.phone, then: 0, else: 0}
					],
					border-width: [0.5, 0, 0, 0],
					border-color: #d8d8d8
				}
			}
		},
		#vertical: {
			if: =options.show_body,
			then: {
			},
			else: {
				vertical-align: middle
			}
		},
		#image_container: {
			width: 111,
			padding: [0, 0, 0, 8],
			image-scale: 0.5,
			anchor-x: right
		},
		image: {
			height: 111
		},
		.key: {
			display: {
				if-all: [=issue.locked, =article.paid],
				then: { if: =options.show_body, then: none, else: default },
				else: none
			}
		},
		.body: {
			display: { if: =options.show_body, else: none }
		},
		.red: { background-color: red},
		.green: { background-color: green},
		.blue: { background-color: blue}
	}</style>
	<style>{
		if: =scale.phone, then: {
			.opinion_flashline: {
				font-name: WhitneySSm-Medium,
				font-size: 12,
				line-height: 18,
				text-transform: uppercase,
				color: #878f8f,
				padding: [4, 0, 0, 19.5],
				display: {if: =page.section, equals: "OPINION", then: none, else: {if: =article.category, equals: "Opinion", then: inherit, else: none}}
			},
			.module_flashline:{
				display: none
			},
			.module_headline: {
				color:{if: =article.read, then: color.articleReadColor},
				padding: [4, 19.5, 4, 19.5]
			},
			p: {
				padding: [0, 0, 8, 0]
			},
			.body: {
				padding: [0, 20, 0, 20]
			},
			#article_status: {
				padding: [{if: =page.section, equals: "OPINION", then: 8, else: {if: =article.category, equals: "Opinion", then: 29, else: 8}}, 0, 0, 4],
				left: 0,
				width: 13,
				height: 13,
				options: {
					identifier: =article.id
				}
			},
			image:{
			height: {
				$switch: [
					{if: =view.width, equals: 320, then: 78},
					{if: =view.width, equals: 375, then: 107},
					{if: =view.width, equals: 414, then: 122}
				]}
			},
			#image_container: {
				width: {
					$switch:[
						{if: =view.width, equals: 320, then: 117},
						{if: =view.width, equals: 375, then: 150},
						{if: =view.width, equals: 414, then: 183}
					]
				},
				padding: [6, -4, 0, 0],
				image-scale: 1,
				anchor-x: right,
				position: relative
			}	
		}, else: {
			.opinion_flashline: {
				display: {if: =page.section, equals: "OPINION", then: none, else: {if: =article.category, equals: "Opinion", then: inherit, else: none}},
				layout-grid-line-offset: -13,
				layout-grid-line: 20,
				font-name: WhitneySSm-SemiBold,
				font-size: 11,
				line-height: 18,
				color: #a7afaf,
				text-transform: uppercase
			},
			#strap: {
				display: none
			},
			#article_status: {
				display: none
			}
		}
	}</style>
	<style>
        {
            if: =options.hide_icon, equals: true, then: {
                #image_container: { 
                    frame: [-10000, -10000, 1, 1] 
                }
            }
        }
    </style>
	<box id="page_details" embed="pagedescription" />
	<panel id="strap">
		<p class="subsection"><mark id="m_subsection"/></p>
	</panel>
	<panel id="content">
		<panel id="vertical">
			<p class="opinion_flashline">OPINION</p>
			<p class="module_flashline"><mark class="flashline-mark" /></p>
			<p id="headline" class="module_headline"><mark class="m_headline" /><mark class="key" /></p>
		</panel>
		<box id="article_status" embed="article-status"/>
		<box id="image_container" embed="deco-image">
			<image class="summary-image" />
		</box>
		<panel class="body">
			<p id="body-first-p"><mark class="body-first-p-mark" /><mark class="module_summary" /></p>
		</panel>
	</panel>
</jpml>
