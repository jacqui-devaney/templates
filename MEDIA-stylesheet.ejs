{
	$join: [
		{
			#media_container: {
				display: {if: =page.hasmedia, then: inherit, else: none},
				padding: {if: =scale.phone, then: [0, 0, 22, 0], else: [0, 0, 5, 0] },
				top: 0,
				width: =size.media.width,
				border-width: [0, =size.media.right_border, 0, =size.media.left_border],
				border-color: transparent,
				anchor-x: { if: =page.number, equals: 0, else: center },
				layout-grid-line: 0
			},
			#media_asset: {
				position: relative,
				top: 0,
				left: 0,
				right: 0,
				height: {$ceiling: [
					{if: =scale.phone, then: {
						$divide: [=size.media.width, =media.aspect]
					}, else: {
						$min: [{$max: [{$switch: [
							{if: =media.width, less-than: 720, then: {$divide: [236, =media.aspect]}},
							{if: =media.width, more-than: 968, then: {$divide: [484, =media.aspect]}},
							{$divide: [236, =media.aspect]}
						]}, {$multiply: [.1, =view.height]}]}, {$multiply: [.69, =view.height]}]
					}}
				]},
				options: {
					id: {
						if: =page.mediaindex,
						at-least: 0,
						then: =page.mediaindex,
						else: =page.number
					},
					hideCaption: true
				}
			},
			#media_title: {
				font-name: "WhitneySSm-Semibold",
				font-size: 12,
				text-indent: 0,
				display: {if: =page.number, equals: 0, then: none}
			},
			#mark_media_title: {
				content: =media.title
			},
            #media_credit: {
                color: #878f8f,
                font-size: 10,
                line-height: 20,
                font-name: WhitneySSm-Medium,
				text-transform:uppercase,
		        padding: [0, =size.media.caption_padding, 0, =size.media.caption_padding]
            },
            #mark_credit: {
                content: =media.credit
            },
			#media_caption: {
                layout-grid-line: {$multiply: [20, =view.zoomlevel]},
                layout-grid-line-offset: 1,
		        color: #878f8f,
		        font-size: { if: =scale.phone, then: 12, else: 13 },
		        line-height: { if: =scale.phone, then: 18, else: 20 },
		        font-name: WhitneySSm-Book,
		        border-color: #d8d8d8,
		        padding: [0, =size.media.caption_padding, { if: =scale.phone, then: 18, else: 20 }, =size.media.caption_padding],
				text-indent: 0
			},
			#mark_caption: {
				content: { 
					if-all: [
						=landscape,
						{
							if: {
								$min: [{$max: [{$switch: [
									{if: =media.width, less-than: 720, then: {$divide: [236, =media.aspect]}},
									{if: =media.width, more-than: 968, then: {$divide: [484, =media.aspect]}},
									{$divide: [236, =media.aspect]}
								]}, {$multiply: [.1, =view.height]}]}, {$multiply: [.69, =view.height]}]
							},
							more-than: 400
						},
						{ if: { $count: =media.caption }, more-than: 130 }
					], 
					then: { $join: [
						{ $substr: [=media.caption, 0, 130] },
						=text.overflow
					]},
					else: =media.caption
				}
			}
		},
		{if: =media.type, equals: "vrvideo", then: {
			#media_vr_link: {
		        layout-grid-line: 1,
		        layout-grid-line-offset: 0,
		        color: #878f8f,
		        font-size: 16,
		        line-height: 22,
		        font-name: "WhitneySSm-Book",
		        padding: { if-all: [
		                { if: =page.number, equals: 0, then: true, else: false },
		                { if: =scale.phone, then: true, else: false }
		            ], then: [8, 16, 22, 16], else: [8, 0, 0, 0]
	            },
				text-indent: 0
			},
			#mark_media_vr_link: {
				content: "Learn more about WSJ VR"
			}
		}, else: {}},
		{if: =media.type, equals: "vrimage", then: {
			#media_vr_header: {
		        layout-grid-line: 1,
		        layout-grid-line-offset: 0,
		        color: =page.tint,
		        font-size: 16,
		        line-height: 16,
		        font-name: "WhitneySSm-Book",
				padding: [0, 0, 0, 0],
				text-indent: 0,
				text-align: left,
				column-count: 2,
				max-height: 26
			},
			#media_vr_header_left: {
		        padding: [0, 0, 0, 0]
			},
			#media_vr_header_right: {
				text-align: right,
		        padding: [0, 0, 0, 0]
			},
			#mark_media_vr_header_left: {
				content: "360\u00B0 Photo"
			},
			#mark_media_vr_header_right: {
		        color: #878f8f,
				content: "Tap, Tilt & Turn"
			},
			#media_vr_link: {
		        layout-grid-line: 1,
		        layout-grid-line-offset: 0,
		        color: #878f8f,
		        font-size: 16,
		        line-height: 22,
		        font-name: "WhitneySSm-Book",
		        padding: { if-all: [
		                { if: =page.number, equals: 0, then: true, else: false },
		                { if: =scale.phone, then: true, else: false }
		            ], then: [8, 16, 22, 16], else: [8, 0, 0, 0]
	            },
				text-indent: 0
			},
			#mark_media_vr_link: {
				content: "Learn more about WSJ VR"
			}
		}, else: {}}
	]
}
