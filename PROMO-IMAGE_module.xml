<jpml id="TOP-IMAGE_module">
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="GLOBAL_MODULES-stylesheet.ejs" />
	<style src="PHONE-MODULES-stylesheet.ejs" />

	<style>{
		if: =options.right_image, then: {
			jpml: {
				background-color: =options.background_color
			},
			#deco_container: {
				top: 0,
				bottom: 0,
				right: 0,
				width: 150
			},
			#text_container: {
				position: relative,
				padding: [0, 8]
			}
		}, else: {
			jpml: {
				background-color: =options.background_color,
				padding: [0, 30]
			},
			#deco_container: {
				top: 0,
				bottom: 100
			},
			#text_container: {
				position: relative,
				padding: [20, 0, 0, 0]
			}
		}
	}</style>
	<style>{
		.hed: {
			color: =options.hed_color,
			text-align: center,
			font-size: 23,
			line-height: 25,
			font-name: DJ5EscrowCond-Roman,
			padding: [0, 10]
		},
		.flashline: {
			color: =options.flashline_color,
			text-transform: uppercase,
			text-align: center,
			font-size: 15,
			font-name: DJ5Exchange-Bold
		}
	}</style>
	<box id="deco_container" embed="deco-image">
		<image embed="summary-image" />
	</box>
	<box id="text_container">
		<panel id="text">
			<p class="flashline"><span embed="summary" /></p>
			<panel id="headline">
				<p class="hed"><mark class="m_headline" /><mark class="key" /></p>
			</panel>
		</panel>
	</box>
</jpml>
