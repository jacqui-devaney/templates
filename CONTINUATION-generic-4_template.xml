<jpml id="CONTINUATION-generic-4_template">
	<style src="GRID-stylesheet.ejs" />
	<style src="CONTINUATION-stylesheet.ejs" />
	<style src="GLOBAL-stylesheet.ejs" />
	<style src="PHONE-stylesheet.ejs" />
	<style>{
		#b2 : {
			options: {hide_image:true, hide_strap: {if:=articles.b2.show_subsection, then: false, else: true}, bind: {if:=scale.phone,then:none}, reuse:{if:=scale.phone,then:continuation}} 
		},
		#b4 : {
			options: {hide_image:{if: =landscape, then:true}, hide_strap: {if:=articles.b4.show_subsection, then: false, else: true}, bind: {if:=scale.phone,then:none}, reuse:{if:=scale.phone,then:continuation}} 
		}
		
	}</style>
	<style>{
		$switch: [
			{if: =scale.phone, then: {
		        #b1: {
							height: {if:=articles.b1.show_subsection, then: 68, else:50}
				},
		        #b2: {
		                    height: {if:=articles.b2.subsection, equals:=articles.b1.subsection, then: 50} 
		        },
		        #b3: {
		                    height: {if:=articles.b3.subsection, equals:=articles.b2.subsection, then: 50} 
		        },
		        #b4: {
		                    height: {if:=articles.b4.subsection, equals:=articles.b3.subsection, then: 50} 
		        }
	        }},
	        {if: =portrait, then: {
		        #b1 : { 
	 				height:960,
					top:0
				},
				#b2 : { 
	 				height:960,
					top:0
				},
				#b3 : { 
	 				height:480,
					top:0
				},
				#b4 : { 
	 				height:480,
					top:480
				}
			}},
			{if: =landscape, then: {
	        	#b1 : { 
	 				height:706,
					top:0
				},
				#b2 : { 
	 				height:706,
					top:0
				},
				#b3 : { 
	 				height:706,
					top:0
				},
				#b4 : { 
	 				height:706,
					top:0
				}
			}}
		]
    }</style>
    <box id="b1" embed="article" class="column2 positionx1 maude unit_continuation_strap" module="CONTINUATION-dynamic_module.xml" />    
    <box id="b2" embed="article" class="column2 positionx3 maude unit_continuation_strap" module="CONTINUATION-dynamic_module.xml" />
    <box id="b3" embed="article" class="column2 positionx5 maude unit_continuation_strap" module="CONTINUATION-dynamic_module.xml" />
    <box id="b4" embed="article" class="column2 positionx7-5 maude unit_continuation_strap" module="CONTINUATION-dynamic_module.xml" />
</jpml>